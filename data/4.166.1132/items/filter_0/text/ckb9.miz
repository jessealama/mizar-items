theorem
Th8: (for S being non empty (Subset of L) holds (S is (Filter of L) iff (for p,q being (Element of L) holds ((p in S & q in S) iff ( p "/\" q ) in S))))
proof
let S being non empty (Subset of L);
thus (S is (Filter of L) implies (for p,q being (Element of L) holds ((p in S & q in S) iff ( p "/\" q ) in S)))
proof
assume A1: S is (Filter of L);
let p being (Element of L),q being (Element of L);
thus ((p in S & q in S) implies ( p "/\" q ) in S) by A1,LATTICES:def 24;
assume A2: ( p "/\" q ) in S;
(( p "/\" q ) [= p & ( p "/\" q ) [= q) by LATTICES:6;
hence (p in S & q in S) by A1,A2,LATTICES:def 23;
end;

assume A3: (for p,q being (Element of L) holds ((p in S & q in S) iff ( p "/\" q ) in S));
S is  final
proof
let p being (Element of L),q being (Element of L);
assume that
A4: p [= q
and
A5: p in S;
( p "/\" q ) = p by A4,LATTICES:4;
hence q in S by A3,A5;
end;
hence thesis by A3,LATTICES:def 24;
end;
