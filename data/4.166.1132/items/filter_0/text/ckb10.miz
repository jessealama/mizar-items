begin
reserve L for Lattice;
reserve p for (Element of L);
reserve q for (Element of L);
theorem
Th9: (for D being non  empty (Subset of L) holds (D is (Filter of L) iff ((for p holds (for q holds ((p in D & q in D) implies ( p "/\" q ) in D))) & (for p holds (for q holds ((p in D & p [= q) implies q in D))))))
proof
let D being non  empty (Subset of L);
thus (D is (Filter of L) implies ((for p holds (for q holds ((p in D & q in D) implies ( p "/\" q ) in D))) & (for p holds (for q holds ((p in D & p [= q) implies q in D))))) by LATTICES:def 23,LATTICES:def 24;
assume A1: ((for p holds (for q holds ((p in D & q in D) implies ( p "/\" q ) in D))) & (for p holds (for q holds ((p in D & p [= q) implies q in D))));
then (for p holds (for q holds ((p [= q & p in D) implies q in D)));
hence thesis by A1,LATTICES:def 23,LATTICES:def 24;
end;
