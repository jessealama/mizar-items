begin
reserve X for non empty TopSpace;
reserve Y for non empty TopSpace;
reserve f for (Function of X,Y);
theorem
Th49: (f is  continuous iff (for x being (Point of X) holds f is_continuous_at x))
proof
thus (f is  continuous implies (for x being (Point of X) holds f is_continuous_at x))
proof
assume A1: f is  continuous;
let x being (Point of X);
(for G being (a_neighborhood of ( f . x )) holds (ex H being (a_neighborhood of x) st ( f .: H ) c= G)) by A1,BORSUK_1:def 1;
hence thesis by CKB44:def 1;
end;

assume A2: (for x being (Point of X) holds f is_continuous_at x);
thus f is  continuous
proof
let x being (Point of X);
let G being (a_neighborhood of ( f . x ));
f is_continuous_at x by A2;
hence thesis by CKB44:def 1;
end;

end;
