begin
reserve X for non  empty TopSpace;
theorem
Th37: (for A being (Subset of X) holds ((for x being (Point of X) holds (x in A implies (ex G being (Subset of X) st (G is  open & ( A /\ G ) = { x })))) implies A is  discrete))
proof
let A being (Subset of X);
assume A1: (for x being (Point of X) holds (x in A implies (ex G being (Subset of X) st (G is  open & ( A /\ G ) = { x }))));
hereby
per cases ;
suppose A is  empty;

hence thesis by CKB86:1;
end;
suppose A is non  empty;

then consider X0 being  strict non  empty (SubSpace of X) such that A2: A = (the carrier of X0) by TSEP_1:10;
A3: ( [#] X ) = (the carrier of X);
( [#] X0 ) = (the carrier of X0);
then A4: (the carrier of X0) c= (the carrier of X) by A3,PRE_TOPC:def 4;
now
let C being (Subset of X0);
let y being (Point of X0);
reconsider x = y as (Point of X) by A4,TARSKI:def 3;
consider G being (Subset of X) such that A5: G is  open and A6: ( A /\ G ) = { x } by A1,A2;
assume A7: C = { y };
now
take G;
thus G in (the topology of X) by A5,PRE_TOPC:def 2;
thus ( G /\ ( [#] X0 ) ) = C by A2,A7,A6;
end;
then C in (the topology of X0) by PRE_TOPC:def 4;
hence C is  open by PRE_TOPC:def 2;
end;
then X0 is  discrete by TDLAT_3:17;
hence thesis by A2,CKB77:1;
end;
end;
