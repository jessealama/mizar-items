theorem
Th38: (for PM being non  empty MetrSpace holds ( TopSpaceMetr PM ) is  T_2)
proof
let PM being non  empty MetrSpace;
set TPS = ( TopSpaceMetr PM );
(for x,y being (Element of TPS) holds ((not x = y) implies (ex W,V being (Subset of TPS) st ((((W is  open & V is  open) & x in W) & y in V) & W misses V))))
proof
let x being (Element of TPS);
let y being (Element of TPS);
assume A1: (not x = y);
reconsider x,y as (Element of PM);
set r = ( ( dist (x,y) ) / 2 );
( dist (x,y) ) <> ( 0 ) by A1,METRIC_1:2;
then ( dist (x,y) ) > ( 0 ) by METRIC_1:5;
then A2: r > ( 0 ) by XREAL_1:139;
(ex W,V being (Subset of TPS) st ((((W is  open & V is  open) & x in W) & y in V) & W misses V))
proof
set V = ( Ball (y,r) );
set W = ( Ball (x,r) );
A3: (W in ( Family_open_set PM ) & V in ( Family_open_set PM )) by CKB35:1;
reconsider W,V as (Subset of TPS);
A4: (for z being set holds (not z in ( W /\ V )))
proof
let z being set;
assume A5: z in ( W /\ V );
then reconsider z as (Element of PM);
z in V by A5,XBOOLE_0:def 4;
then A6: ( dist (y,z) ) < r by METRIC_1:11;
z in W by A5,XBOOLE_0:def 4;
then ( dist (x,z) ) < r by METRIC_1:11;
then ( ( dist (x,z) ) + ( dist (y,z) ) ) < ( r + r ) by A6,XREAL_1:8;
hence thesis by METRIC_1:4;
end;
take W;
take V;
(( dist (x,x) ) = ( 0 ) & ( dist (y,y) ) = ( 0 )) by METRIC_1:1;
hence thesis by A2,A3,A4,METRIC_1:11,PRE_TOPC:def 2,XBOOLE_0:4;
end;
hence thesis;
end;
hence thesis by PRE_TOPC:def 10;
