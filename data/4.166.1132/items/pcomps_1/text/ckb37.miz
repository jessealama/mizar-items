theorem
Th35: (for V holds (for W holds ((V in ( Family_open_set PM ) & W in ( Family_open_set PM )) implies ( V /\ W ) in ( Family_open_set PM ))))
proof
let V;
let W;
assume that
A1: V in ( Family_open_set PM )
and
A2: W in ( Family_open_set PM );
(for z holds (z in ( V /\ W ) implies (ex q st (q > ( 0 ) & ( Ball (z,q) ) c= ( V /\ W )))))
proof
let z;
assume A3: z in ( V /\ W );
then z in V by XBOOLE_0:def 4;
then consider p such that A4: p > ( 0 ) and A5: ( Ball (z,p) ) c= V by A1,CKB31:def 1;
z in W by A3,XBOOLE_0:def 4;
then consider r such that A6: r > ( 0 ) and A7: ( Ball (z,r) ) c= W by A2,CKB31:def 1;
take q = ( min (p,r) );
thus q > ( 0 ) by A4,A6,XXREAL_0:15;
( Ball (z,q) ) c= ( Ball (z,r) ) by CKB1:1,XXREAL_0:17;
then A8: ( Ball (z,q) ) c= W by A7,XBOOLE_1:1;
( Ball (z,q) ) c= ( Ball (z,p) ) by CKB1:1,XXREAL_0:17;
then ( Ball (z,q) ) c= V by A5,XBOOLE_1:1;
hence thesis by A8,XBOOLE_1:19;
end;
hence thesis by CKB31:def 1;
