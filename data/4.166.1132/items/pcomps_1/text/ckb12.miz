begin
definition
let T being TopStruct;
let FX being (Subset-Family of T);
func clf FX -> (Subset-Family of T)
means
:Def3: (for Z being (Subset of T) holds (Z in it iff (ex W being (Subset of T) st (Z = ( Cl W ) & W in FX))));
existence
proof
defpred P[ set ]
 means
(ex W being (Subset of T) st ($1 = ( Cl W ) & W in FX));
thus (ex S being (Subset-Family of T) st (for Z being (Subset of T) holds (Z in S iff P[ Z ]))) from SUBSET_1:sch 3;
end;
uniqueness
proof
let HX being (Subset-Family of T),GX being (Subset-Family of T);
assume that
A1: (for Z being (Subset of T) holds (Z in HX iff (ex W being (Subset of T) st (Z = ( Cl W ) & W in FX))))
and
A2: (for X being (Subset of T) holds (X in GX iff (ex V being (Subset of T) st (X = ( Cl V ) & V in FX))));
now
let X being set;
assume A3: X in GX;
then reconsider X9 = X as (Subset of T);
(ex V being (Subset of T) st (X9 = ( Cl V ) & V in FX)) by A2,A3;
hence X in HX by A1;
end;
then A4: GX c= HX by TARSKI:def 3;
now
let Z being set;
assume A5: Z in HX;
then reconsider Z9 = Z as (Subset of T);
(ex W being (Subset of T) st (Z9 = ( Cl W ) & W in FX)) by A1,A5;
hence Z in GX by A2;
end;
then HX c= GX by TARSKI:def 3;
hence thesis by A4,XBOOLE_0:def 10;
end;
end;
