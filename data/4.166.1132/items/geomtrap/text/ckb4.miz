environ
vocabularies NUMBERS,RLVECT_1,REAL_1,PARSP_1,ANALOAF,ANALMETR,RELAT_1,ARYTM_3,SUPINF_2,CARD_1,SUBSET_1,STRUCT_0,DIRAF,ARYTM_1,PBOOLE,SYMSP_1,MCART_1,ZFMISC_1,BINOP_1,FUNCT_1,MIDSP_1,XBOOLE_0,GEOMTRAP;
notations TARSKI,XBOOLE_0,ZFMISC_1,SUBSET_1,DOMAIN_1,NUMBERS,XXREAL_0,REAL_1,STRUCT_0,DIRAF,RELSET_1,RLVECT_1,MIDSP_1,AFF_1,ANALOAF,BINOP_1,ANALMETR,CKB1;
definitions STRUCT_0,RLVECT_1,CKB1;
theorems RLVECT_1,RELAT_1,DIRAF,ANALOAF,ANALMETR,AFF_1,ZFMISC_1,RLSUB_2,XCMPLX_0,XCMPLX_1,XREAL_1,CKB1,CKB2,CKB3;
schemes RELSET_1,BINOP_1,BINOP_2;
registrations SUBSET_1,RELSET_1,MEMBERED,STRUCT_0,ANALOAF,DIRAF,ANALMETR;
constructors BINOP_1,DOMAIN_1,XXREAL_0,REAL_1,MEMBERED,MIDSP_1,AFF_1,ANALMETR,CKB1;
requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve V for RealLinearSpace;
reserve u for (VECTOR of V);
reserve u1 for (VECTOR of V);
reserve v for (VECTOR of V);
reserve v1 for (VECTOR of V);
reserve w for (VECTOR of V);
reserve y for (VECTOR of V);
theorem
Th3: ( Gen w,y implies (for p,q,p1,q1 being (Element of (the carrier of ( Lambda ( OASpace V ) ))) holds ((((p = u & q = v) & p1 = u1) & q1 = v1) implies (p,q // p1,q1 iff u,v '||' u1,v1))))
proof
assume  Gen w,y;
then reconsider S = ( OASpace V ) as OAffinSpace by CKB2:1;
let p being (Element of (the carrier of ( Lambda ( OASpace V ) )));
let q being (Element of (the carrier of ( Lambda ( OASpace V ) )));
let p1 being (Element of (the carrier of ( Lambda ( OASpace V ) )));
let q1 being (Element of (the carrier of ( Lambda ( OASpace V ) )));
assume that
A1: (((p = u & q = v) & p1 = u1) & q1 = v1);
( Lambda ( OASpace V ) ) = AffinStruct (# (the carrier of ( OASpace V )),( lambda (the CONGR of ( OASpace V )) ) #) by DIRAF:def 2;
then reconsider p9 = p,q9 = q,p19 = p1,q19 = q1 as (Element of S);
A2:now
assume u,v '||' u1,v1;
then (u,v // u1,v1 or u,v // v1,u1) by CKB1:def 1;
then (p9,q9 // p19,q19 or p9,q9 // q19,p19) by A1,CKB3:1;
then p9,q9 '||' p19,q19 by DIRAF:def 4;
hence p,q // p1,q1 by DIRAF:38;
end;
now
assume p,q // p1,q1;
then p9,q9 '||' p19,q19 by DIRAF:38;
then (p9,q9 // p19,q19 or p9,q9 // q19,p19) by DIRAF:def 4;
then (u,v // u1,v1 or u,v // v1,u1) by A1,CKB3:1;
hence u,v '||' u1,v1 by CKB1:def 1;
end;
hence thesis by A2;
end;
