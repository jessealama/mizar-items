begin
definition
let T being non empty TopStruct;
let S being (sequence of T);
func Lim S -> (Subset of T)
means
:Def5: (for x being (Point of T) holds (x in it iff S is_convergent_to x));
existence
proof
defpred P[ (Element of T) ]
 means
S is_convergent_to $1;
{ x where x is (Element of T): P[ x ] } is (Subset of T) from DOMAIN_1:sch 7;
then reconsider X = { x where x is (Point of T): P[ x ] } as (Subset of T);
take X;
let y being (Point of T);
(y in X iff (ex x being (Point of T) st (x = y & S is_convergent_to x)));
hence thesis;
end;
uniqueness
proof
let A being (Subset of T),B being (Subset of T);
assume that
A1: (for x being (Point of T) holds (x in A iff S is_convergent_to x))
and
A2: (for x being (Point of T) holds (x in B iff S is_convergent_to x));
(for x being (Point of T) holds (x in A iff x in B))
proof
let x being (Point of T);
(x in A iff S is_convergent_to x) by A1;
hence thesis by A2;
end;
hence thesis by SUBSET_1:3;
end;
end;
