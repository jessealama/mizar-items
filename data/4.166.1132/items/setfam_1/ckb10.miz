environ
vocabularies XBOOLE_0,TARSKI,SUBSET_1,ZFMISC_1,SETFAM_1;
notations TARSKI,XBOOLE_0,ENUMSET1,ZFMISC_1,SUBSET_1,CKB1;
definitions TARSKI,XBOOLE_0,SUBSET_1,CKB1;
theorems TARSKI,XBOOLE_0,ZFMISC_1,SUBSET_1,ENUMSET1,XBOOLE_1,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9;
schemes XBOOLE_0,SUBSET_1;
registrations XBOOLE_0,SUBSET_1;
constructors TARSKI,ENUMSET1,SUBSET_1,CKB1;
requirements SUBSET,BOOLE;
begin
reserve X for set;
reserve Y for set;
reserve Z for set;
reserve x for set;
theorem
((X <> ( {} ) & Y <> ( {} )) implies ( meet ( X \/ Y ) ) = ( ( meet X ) /\ ( meet Y ) ))
proof
assume that
A1: X <> ( {} )
and
A2: Y <> ( {} );
A3: ( ( meet X ) /\ ( meet Y ) ) c= ( meet ( X \/ Y ) )
proof
let x;
assume x in ( ( meet X ) /\ ( meet Y ) );
then A4: (x in ( meet X ) & x in ( meet Y )) by XBOOLE_0:def 4;
now
let Z;
assume Z in ( X \/ Y );
then (Z in X or Z in Y) by XBOOLE_0:def 3;
hence x in Z by A4,CKB1:def 1;
end;
hence thesis by A1,CKB1:def 1;
end;
(( meet ( X \/ Y ) ) c= ( meet X ) & ( meet ( X \/ Y ) ) c= ( meet Y )) by A1,A2,CKB7:1,XBOOLE_1:7;
then ( meet ( X \/ Y ) ) c= ( ( meet X ) /\ ( meet Y ) ) by XBOOLE_1:19;
hence thesis by A3,XBOOLE_0:def 10;
end;
