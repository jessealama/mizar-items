begin
Lm4:now
let T being TopStruct;
let p being (Point of T);
let K being set;
assume that
A1: K = { A where A is (Subset of T): p in ( Int A ) };
K c= ( bool (the carrier of T) )
proof
let y being set;
assume y in K;
then (ex A being (Subset of T) st (y = A & p in ( Int A ))) by A1;
hence thesis;
end;
then reconsider J = K as (Subset-Family of T);
reconsider J as (Subset-Family of T);
(for A being (Subset of T) holds (p in ( Int A ) implies (ex P being (Subset of T) st ((P in J & p in ( Int P )) & P c= A))))
proof
let A being (Subset of T);
assume that
A2: p in ( Int A );
take P = A;
thus thesis by A1,A2;
end;
hence K is (basis of p) by CKB31:def 1;
end;
Lm5:now
let T being TopStruct;
let p being (Point of T);
let K being (basis of p);
assume that
A1: K = { A where A is (Subset of T): p in ( Int A ) };
thus K is  correct
proof
let A being (Subset of T);
hereby
assume A in K;
then (ex M being (Subset of T) st (A = M & p in ( Int M ))) by A1;
hence p in ( Int A );
end;
thus thesis by A1;
end;

end;
registration
let T being TopStruct;
let p being (Point of T);
cluster  correct for (basis of p);
existence
proof
reconsider P = { A where A is (Subset of T): p in ( Int A ) } as (basis of p) by Lm4;
take P;
thus thesis by Lm5;
end;
end;
