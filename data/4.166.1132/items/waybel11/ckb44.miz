take C;
let N being  strict (net of R);
assume that
A2: N in ( NetUniv R );
let p being (Element of R);
hereby
assume [ N,p ] in C;
then (ex M being  strict (net of R) st (M = N & p is_S-limit_of M)) by A1,A2;
hence p is_S-limit_of N;
end;
thus thesis by A1,A2;
end;
