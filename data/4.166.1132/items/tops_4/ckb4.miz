theorems FUNCT_2,TOPMETR,TOPREAL9,EUCLID,JGRAPH_2,GOBOARD6,TOPS_1,METRIC_1,XBOOLE_1,T_0TOPSP,XREAL_0,FRECHET,TOPREAL6,RELAT_1,UNIFORM1,CONNSP_2,TOPGRP_1,ORDINAL1,TOPS_3,YELLOW12,TOPGEN_5,CKB1,CKB2,CKB3;
registrations XBOOLE_0,RELAT_1,MEMBERED,XREAL_0,PRE_TOPC,STRUCT_0,EUCLID,TOPREALB,XXREAL_0,METRIC_1,BORSUK_6,TOPMETR,TOPREAL9,PCOMPS_1,RCOMP_1,TOPGRP_1,EUCLID_9;
