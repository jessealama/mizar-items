( dist (p,x1) ) < s by A5,METRIC_1:11;
then ( dist (q,y1) ) < r by A6,A4;
hence y in ( Ball (q,r) ) by METRIC_1:11;
end;

end;
assume A7: (for p being (Point of M1) holds (for q being (Point of M2) holds (for r being  positive  real number holds (q = ( f . p ) implies (ex s being  positive  real number st ( f .: ( Ball (p,s) ) ) c= ( Ball (q,r) ))))));
(for r being  real number holds (for u being (Element of M1) holds (for u1 being (Element of M2) holds ((r > ( 0 ) & u1 = ( f . u )) implies (ex s being  real number st (s > ( 0 ) & (for w being (Element of M1) holds (for w1 being (Element of M2) holds ((w1 = ( f . w ) & ( dist (u,w) ) < s) implies ( dist (u1,w1) ) < r)))))))))
proof
let r being  real number;
let u being (Element of M1);
let u1 being (Element of M2);
assume (r > ( 0 ) & u1 = ( f . u ));
then consider s being  positive  real number such that A8: ( f .: ( Ball (u,s) ) ) c= ( Ball (u1,r) ) by A7;
take s;
thus s > ( 0 );
let w being (Element of M1);
