begin
reserve R for  domRing-like  commutative Ring;
reserve c for (Element of R);
theorem
Th18: (for a,b being (Element of R) holds (a is_associated_to b iff (ex c st (c is  unital & ( a * c ) = b))))
proof
A1: (for a,b being (Element of R) holds (a is_associated_to b implies (ex c being (Element of R) st (c is  unital & ( a * c ) = b))))
proof
let A being (Element of R);
let B being (Element of R);
assume A2: A is_associated_to B;
then A divides B by CKB11:def 1;
then consider C being (Element of R) such that A3: B = ( A * C ) by CKB8:def 1;
B divides A by A2,CKB11:def 1;
then consider D being (Element of R) such that A4: A = ( B * D ) by CKB8:def 1;
now
per cases ;
case A5: A <> ( 0. R );
A = ( A * ( C * D ) ) by A3,A4,GROUP_1:def 3;
then ( C * D ) = ( 1. R ) by A5,CKB30:1;
then C divides ( 1. R ) by CKB8:def 1;
then C is  unital by CKB10:def 1;
hence thesis by A3;
end;
case A6: A = ( 0. R );
( 1. R ) divides ( 1. R );
then A7: ( 1. R ) is  unital by CKB10:def 1;
B = ( 0. R ) by A3,A6,VECTSP_1:7;
then B = ( A * ( 1. R ) ) by A6,VECTSP_1:def 4;
hence thesis by A7;
end;
end;
hence thesis;
end;
(for a,b being (Element of R) holds ((ex c being (Element of R) st (c is  unital & ( a * c ) = b)) implies a is_associated_to b))
proof
let A being (Element of R);
let B being (Element of R);
((ex c st (c is  unital & ( A * c ) = B)) implies A is_associated_to B)
proof
now
assume (ex c st (c is  unital & ( A * c ) = B));
then consider C being (Element of R) such that A8: C is  unital and A9: ( A * C ) = B;
C divides ( 1. R ) by A8,CKB10:def 1;
then consider D being (Element of R) such that A10: ( C * D ) = ( 1. R ) by CKB8:def 1;
A = ( A * ( C * D ) ) by A10,VECTSP_1:def 4
.= ( B * D ) by A9,GROUP_1:def 3;
then A11: B divides A by CKB8:def 1;
A divides B by A9,CKB8:def 1;
hence thesis by A11,CKB11:def 1;
end;
hence thesis;
end;
hence thesis;
end;
hence thesis by A1;
end;
