begin
theorem
(for n being (Element of ( NAT )) holds (for T being  connected  admissible (TermOrder of n) holds (for L being  Abelian  add-associative  right_complementable  right_zeroed  commutative  associative  well-unital  distributive  almost_left_invertible non degenerated non empty doubleLoopStr holds (for P being (Subset of ( Polynom-Ring (n,L) )) holds ((ex p being (Polynomial of n,L) st (p in P & ( P -Ideal ) = ( { p } -Ideal ))) implies ( PolyRedRel (P,T) ) is  locally-confluent)))))
proof
let n being (Element of ( NAT ));
let T being  connected  admissible (TermOrder of n);
let L being  Abelian  add-associative  right_complementable  right_zeroed  commutative  associative  well-unital  distributive  almost_left_invertible non degenerated non empty doubleLoopStr;
let P being (Subset of ( Polynom-Ring (n,L) ));
set R = ( PolyRedRel (P,T) );
assume (ex p being (Polynomial of n,L) st (p in P & ( P -Ideal ) = ( { p } -Ideal )));
then consider p being (Polynomial of n,L) such that A1: p in P and A2: ( P -Ideal ) = ( { p } -Ideal );
now
set Rp = ( PolyRedRel ({ p },T) );
reconsider Rp as  locally-confluent  strongly-normalizing Relation by CKB14:1;
let a being set,b being set,c being set;
assume that
A3: [ a,b ] in R
and
A4: [ a,c ] in R;
a,b are_convertible_wrt R by A3,REWRITE1:29;
then A5: b,a are_convertible_wrt R by REWRITE1:31;
consider pa being set,pb being set such that pa in ( NonZero ( Polynom-Ring (n,L) ) ) and A6: pb in (the carrier of ( Polynom-Ring (n,L) )) and A7: [ a,b ] = [ pa,pb ] by A3,ZFMISC_1:def 2;
reconsider pb as (Polynomial of n,L) by A6,POLYNOM1:def 10;
A8: pb = ( [ a,b ] `2 ) by A7,MCART_1:def 2
.= b by MCART_1:def 2;
consider pa9 being set,pc being set such that pa9 in ( NonZero ( Polynom-Ring (n,L) ) ) and A9: pc in (the carrier of ( Polynom-Ring (n,L) )) and A10: [ a,c ] = [ pa9,pc ] by A4,ZFMISC_1:def 2;
reconsider pc as (Polynomial of n,L) by A9,POLYNOM1:def 10;
A11: pc = ( [ a,c ] `2 ) by A10,MCART_1:def 2
.= c by MCART_1:def 2;
reconsider pb9 = pb,pc9 = pc as (Element of ( Polynom-Ring (n,L) )) by POLYNOM1:def 10;
reconsider pc9,pb9 as (Element of ( Polynom-Ring (n,L) ));
a,c are_convertible_wrt R by A4,REWRITE1:29;
then pb9,pc9 are_congruent_mod ( { p } -Ideal ) by A2,A8,A11,A5,POLYRED:57,REWRITE1:30;
then pb,pc are_convertible_wrt ( PolyRedRel ({ p },T) ) by POLYRED:58;
then b,c are_convergent_wrt Rp by A8,A11,REWRITE1:def 23;
then consider d being set such that A12: (Rp reduces b,d & Rp reduces c,d) by REWRITE1:def 7;
(for u being set holds (u in { p } implies u in P)) by A1,TARSKI:def 1;
then { p } c= P by TARSKI:def 3;
then (R reduces b,d & R reduces c,d) by A12,CKB8:1,REWRITE1:22;
hence b,c are_convergent_wrt R by REWRITE1:def 7;
end;
hence thesis by REWRITE1:def 24;
end;
