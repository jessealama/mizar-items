Lm3:now
let E;
let F;
let f;
assume A1: f is  bijective;
then A2: ( rng f ) = ( [#] F ) by FUNCT_2:def 3;
( dom f ) = ( [#] E ) by FUNCT_2:def 1;
hence ( ( f /" ) * f ) = ( id E ) by A1,A2,TOPS_2:52;
end;
theorem
Th16: (f is  bijective  Affine implies ( f /" ) is  Affine)
proof
assume that
A1: f is  bijective
and
A2: f is  Affine;
set g = ( f /" );
let a being (Point of F),b being (Point of F);
let t;
assume that
A3: (( 0 ) <= t & t <= 1);
A4: ( g * f ) = ( id E ) by A1,Lm3;
(( f . ( g . a ) ) = a & ( f . ( g . b ) ) = b) by A1,Lm2;
hence ( g . ( ( ( 1 - t ) * a ) + ( t * b ) ) ) = ( g . ( f . ( ( ( 1 - t ) * ( g . a ) ) + ( t * ( g . b ) ) ) ) ) by A3,A2,CKB21:def 1
.= ( ( g * f ) . ( ( ( 1 - t ) * ( g . a ) ) + ( t * ( g . b ) ) ) ) by FUNCT_2:15
.= ( ( ( 1 - t ) * ( g . a ) ) + ( t * ( g . b ) ) ) by A4,FUNCT_1:18;
end;
