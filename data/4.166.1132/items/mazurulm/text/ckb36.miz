Lm2:now
let E;
let F;
let f;
assume A1: f is  bijective;
set g = ( f /" );
let a being (Point of F);
( rng f ) = ( [#] F ) by A1,FUNCT_2:def 3;
then A3: ( g /" ) = f by A1,TOPS_2:51;
A4: g = ( (f qua Function) " ) by A1,TOPS_2:def 4;
A5: g is  bijective by A1,PENCIL_2:12;
f = ( (g qua Function) " ) by A3,A5,TOPS_2:def 4;
