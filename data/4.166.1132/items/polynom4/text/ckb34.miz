let L being  add-associative  right_zeroed  right_complementable  distributive  unital non  empty doubleLoopStr;
let x being (Element of L);
func Polynom-Evaluation (L,x) -> (Function of ( Polynom-Ring L ),L) means 
:Def3: (for p being (Polynomial of L) holds ( it . p ) = ( eval (p,x) ));
existence
proof
defpred P[ set,set ]
 means
(ex p being (Polynomial of L) st (p = $1 & $2 = ( eval (p,x) )));
A1: (for y being (Element of ( Polynom-Ring L )) holds (ex z being (Element of L) st P[ y,z ]))
proof
let y being (Element of ( Polynom-Ring L ));
reconsider p = y as (Polynomial of L) by POLYNOM3:def 10;
take ( eval (p,x) );
take p;
thus thesis;
end;
consider f being (Function of (the carrier of ( Polynom-Ring L )),(the carrier of L)) such that A2: (for y being (Element of ( Polynom-Ring L )) holds P[ y,( f . y ) ]) from FUNCT_2:sch 3(A1);
reconsider f as (Function of ( Polynom-Ring L ),L);
take f;
let p being (Polynomial of L);
p in (the carrier of ( Polynom-Ring L )) by POLYNOM3:def 10;
then (ex q being (Polynomial of L) st (q = p & ( f . p ) = ( eval (q,x) ))) by A2;
hence thesis;
end;
uniqueness
proof
let f1 being (Function of ( Polynom-Ring L ),L);
let f2 being (Function of ( Polynom-Ring L ),L);
assume that
A3: (for p being (Polynomial of L) holds ( f1 . p ) = ( eval (p,x) ))
and
A4: (for p being (Polynomial of L) holds ( f2 . p ) = ( eval (p,x) ));
now
let y being (Element of ( Polynom-Ring L ));
reconsider p = y as (Polynomial of L) by POLYNOM3:def 10;
thus ( f1 . y ) = ( eval (p,x) ) by A3
.= ( f2 . y ) by A4;
end;
hence f1 = f2 by FUNCT_2:63;
end;
