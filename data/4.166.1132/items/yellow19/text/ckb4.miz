environ
vocabularies XBOOLE_0,SUBSET_1,CARD_FIL,YELLOW_1,LATTICES,PRE_TOPC,CONNSP_2,STRUCT_0,TARSKI,ZFMISC_1,WAYBEL_0,XXREAL_0,TOPS_1,WAYBEL_7,RCOMP_1,RELAT_1,RELAT_2,FUNCT_1,FINSET_1,SETFAM_1,LATTICE3,ORDERS_2,WELLORD2,ORDINAL1,MCART_1,YELLOW_6,SEQ_2,METRIC_1,CANTOR_1,ARYTM_0,ARYTM_3,CLASSES1,INT_2,YELLOW_0,CAT_1,BHSP_3,YELLOW19;
notations TARSKI,XBOOLE_0,ZFMISC_1,SUBSET_1,RELAT_1,MCART_1,SETFAM_1,FINSET_1,FUNCT_1,RELAT_2,RELSET_1,PARTFUN1,FUNCT_2,CLASSES1,STRUCT_0,PRE_TOPC,TOPS_1,TOPS_2,COMPTS_1,CONNSP_2,CANTOR_1,ORDERS_2,LATTICE3,YELLOW_0,WAYBEL_0,YELLOW_1,WAYBEL_7,YELLOW_6,WAYBEL_9,YELLOW_7,WAYBEL32,CKB2;
definitions TARSKI,SUBSET_1,TOPS_2,WAYBEL_0,WAYBEL_7,WAYBEL_9,XBOOLE_0,FINSET_1,STRUCT_0,CKB2;
theorems TARSKI,SETFAM_1,FUNCT_2,FINSET_1,FUNCT_1,CLASSES1,RELAT_1,ZFMISC_1,MCART_1,RELAT_2,SUBSET_1,PRE_TOPC,TOPS_1,TOPS_2,COMPTS_1,CONNSP_2,CANTOR_1,ORDERS_2,LATTICE3,YELLOW_0,WAYBEL_0,YELLOW_1,WAYBEL_7,WAYBEL_8,WAYBEL_9,YELLOW_5,YELLOW_6,YELLOW_7,WAYBEL12,WAYBEL21,WAYBEL32,XBOOLE_0,XBOOLE_1,CKB1,CKB2,CKB3;
