registrations SUBSET_1,RELAT_1,FINSET_1,STRUCT_0,PRE_TOPC,TOPS_1,LATTICE3,YELLOW_0,WAYBEL_0,YELLOW_1,YELLOW_6,WAYBEL_7,WAYBEL_9,WAYBEL32,RELSET_1;
constructors SETFAM_1,CLASSES1,TOLER_1,TOPS_1,TOPS_2,CONNSP_2,CANTOR_1,WAYBEL_1,WAYBEL_7,WAYBEL32,COMPTS_1,RELSET_1,CKB2;
requirements BOOLE,SUBSET;
begin
reserve x for set;
registration
let T being non  empty TopSpace;
let x being (Point of T);
cluster ( NeighborhoodSystem x ) -> non  empty  proper  upper  filtered;
coherence
proof
set Y = ( NeighborhoodSystem x );
set X = (the carrier of T);
set L = ( BoolePoset ( [#] T ) );
set A0 = the (a_neighborhood of x);
A0 in ( NeighborhoodSystem x );
hence ( NeighborhoodSystem x ) is non  empty;
( {} ) c= X by XBOOLE_1:2;
then A1: ( {} ) in ( bool X );
(not ( {} ) is (a_neighborhood of x)) by CONNSP_2:4;
then A2: (not ( {} ) in ( NeighborhoodSystem x )) by CKB3:1;
(the carrier of ( BoolePoset X )) = ( bool X ) by WAYBEL_7:2;
hence ( NeighborhoodSystem x ) is  proper by A1,A2,SUBSET_1:def 6;
thus ( NeighborhoodSystem x ) is  upper
proof
let a being (Element of L);
let b being (Element of L);
reconsider B = b as (Subset of T) by WAYBEL_7:2;
assume a in Y;
then reconsider A = a as (a_neighborhood of x) by CKB3:1;
assume a <= b;
then A c= B by YELLOW_1:2;
then A3: ( Int A ) c= ( Int B ) by TOPS_1:19;
x in ( Int A ) by CONNSP_2:def 1;
then b is (a_neighborhood of x) by A3,CONNSP_2:def 1;
hence thesis;
end;

let a being (Element of L);
let b being (Element of L);
assume that
A4: a in Y
and
A5: b in Y;
reconsider A = a,B = b as (a_neighborhood of x) by A4,A5,CKB3:1;
A6: ( A /\ B ) is (a_neighborhood of x) by CONNSP_2:2;
then ( A /\ B ) in ( NeighborhoodSystem x );
then reconsider z = ( A /\ B ) as (Element of L);
take z;
A7: z c= B by XBOOLE_1:17;
z c= A by XBOOLE_1:17;
hence thesis by A6,A7,YELLOW_1:2;
end;
end;
