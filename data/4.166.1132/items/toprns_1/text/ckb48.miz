theorem
Th41: ((seq is  convergent & seq9 is  convergent) implies ( seq + seq9 ) is  convergent)
proof
assume that
A1: seq is  convergent
and
A2: seq9 is  convergent;
consider g1 such that A3: (for r holds (( 0 ) < r implies (ex n st (for m holds (n <= m implies |. ( ( seq . m ) - g1 ) .| < r))))) by A1,CKB46:def 1;
consider g2 such that A4: (for r holds (( 0 ) < r implies (ex n st (for m holds (n <= m implies |. ( ( seq9 . m ) - g2 ) .| < r))))) by A2,CKB46:def 1;
take g = ( g1 + g2 );
let r;
assume A5: ( 0 ) < r;
then consider n1 such that A6: (for m holds (n1 <= m implies |. ( ( seq . m ) - g1 ) .| < ( r / 2 ))) by A3,XREAL_1:215;
consider n2 such that A7: (for m holds (n2 <= m implies |. ( ( seq9 . m ) - g2 ) .| < ( r / 2 ))) by A4,A5,XREAL_1:215;
take k = ( n1 + n2 );
let m;
assume A8: k <= m;
n2 <= k by NAT_1:12;
then n2 <= m by A8,XXREAL_0:2;
then A9: |. ( ( seq9 . m ) - g2 ) .| < ( r / 2 ) by A7;
A10: |. ( ( ( seq + seq9 ) . m ) - g ) .| = |. ( ( ( seq . m ) + ( seq9 . m ) ) - ( g1 + g2 ) ) .| by CKB11:1
.= |. ( ( seq . m ) + ( ( seq9 . m ) - ( g1 + g2 ) ) ) .| by EUCLID:45
.= |. ( ( seq . m ) + ( ( - ( g1 + g2 ) ) + ( seq9 . m ) ) ) .| by EUCLID:41
.= |. ( ( ( seq . m ) + ( - ( g1 + g2 ) ) ) + ( seq9 . m ) ) .| by EUCLID:26
.= |. ( ( ( seq . m ) - ( g1 + g2 ) ) + ( seq9 . m ) ) .| by EUCLID:41
.= |. ( ( ( ( seq . m ) - g1 ) - g2 ) + ( seq9 . m ) ) .| by EUCLID:46
.= |. ( ( ( ( seq . m ) - g1 ) + ( - g2 ) ) + ( seq9 . m ) ) .| by EUCLID:41
.= |. ( ( ( seq . m ) - g1 ) + ( ( seq9 . m ) + ( - g2 ) ) ) .| by EUCLID:26
.= |. ( ( ( seq . m ) - g1 ) + ( ( seq9 . m ) - g2 ) ) .| by EUCLID:41;
A11: |. ( ( ( seq . m ) - g1 ) + ( ( seq9 . m ) - g2 ) ) .| <= ( |. ( ( seq . m ) - g1 ) .| + |. ( ( seq9 . m ) - g2 ) .| ) by CKB38:1;
n1 <= ( n1 + n2 ) by NAT_1:12;
then n1 <= m by A8,XXREAL_0:2;
then |. ( ( seq . m ) - g1 ) .| < ( r / 2 ) by A6;
then ( |. ( ( seq . m ) - g1 ) .| + |. ( ( seq9 . m ) - g2 ) .| ) < ( ( r / 2 ) + ( r / 2 ) ) by A9,XREAL_1:8;
hence thesis by A10,A11,XXREAL_0:2;
end;
