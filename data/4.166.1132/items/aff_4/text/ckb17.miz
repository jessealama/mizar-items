environ
vocabularies DIRAF,SUBSET_1,ANALOAF,AFF_1,INCSP_1,STRUCT_0,XBOOLE_0,TARSKI,RELAT_1,PARSP_1,AFF_2,ARYTM_3,AFF_4;
notations TARSKI,XBOOLE_0,SUBSET_1,STRUCT_0,ANALOAF,DIRAF,AFF_1,AFF_2,CKB15,CKB16;
definitions CKB15,CKB16;
theorems AFF_1,DIRAF,TARSKI,AFF_2,XBOOLE_0,XBOOLE_1,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15,CKB16;
registrations XBOOLE_0,STRUCT_0;
constructors AFF_1,AFF_2,CKB15,CKB16;
requirements SUBSET,BOOLE;
begin
reserve AS for AffinSpace;
reserve a for (Element of AS);
reserve b for (Element of AS);
reserve q for (Element of AS);
reserve K for (Subset of AS);
reserve P for (Subset of AS);
theorem
Lm3: (for q holds (q in ( Plane (K,P) ) iff (ex b st (q,b // K & b in P))))
proof
let q;
now
assume q in ( Plane (K,P) );
then (ex a st (a = q & (ex b st (a,b // K & b in P))));
hence (ex b st (q,b // K & b in P));
end;
hence thesis;
end;
