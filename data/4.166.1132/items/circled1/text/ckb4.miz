begin
definition
let V being non  empty RLSStruct;
let M being (Subset of V);
redefine attr M is  circled
means
:Def1: (for u being (VECTOR of V) holds (for r being Real holds ((( abs r ) <= 1 & u in M) implies ( r * u ) in M)));
compatibility
proof
thus (M is  circled implies (for u being (VECTOR of V) holds (for r being Real holds ((( abs r ) <= 1 & u in M) implies ( r * u ) in M))))
proof
assume A1: M is  circled;
let u being (VECTOR of V);
let r being Real;
assume ( abs r ) <= 1;
then A2: ( r * M ) c= M by A1,RLTOPSP1:def 6;
assume u in M;
then ( r * u ) in ( r * M ) by RLTOPSP1:1;
hence thesis by A2;
end;

assume A3: (for u being (VECTOR of V) holds (for r being Real holds ((( abs r ) <= 1 & u in M) implies ( r * u ) in M)));
let r being Real;
assume A4: ( abs r ) <= 1;
(for x being (Element of V) holds (x in ( r * M ) implies x in M))
proof
let x being (Element of V);
assume x in ( r * M );
then consider u being (Element of V) such that A5: x = u and A6: u in ( r * M );
u in { ( r * w ) where w is (Element of V): w in M } by A6,CONVEX1:def 1;
then (ex w1 being (Element of V) st (u = ( r * w1 ) & w1 in M));
hence thesis by A3,A4,A5;
end;
hence thesis by SUBSET_1:2;
end;
