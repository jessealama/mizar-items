environ
vocabularies NUMBERS,XBOOLE_0,RLVECT_1,SUBSET_1,ARYTM_1,RLTOPSP1,REAL_1,COMPLEX1,XXREAL_0,RELAT_1,TARSKI,ARYTM_3,RUSUB_4,RLSUB_1,STRUCT_0,SUPINF_2,SETFAM_1,CARD_1,PRE_TOPC,RLVECT_2,FINSEQ_1,FUNCT_1,CARD_3,NAT_1,FUNCT_2,VALUED_1,ORDINAL4,PARTFUN1,CIRCLED1;
notations TARSKI,XBOOLE_0,SUBSET_1,CARD_1,NUMBERS,COMPLEX1,FUNCT_1,SETFAM_1,PARTFUN1,FUNCT_2,XXREAL_0,REAL_1,DOMAIN_1,STRUCT_0,PRE_TOPC,RLVECT_1,RUSUB_4,CONVEX1,NAT_1,FINSEQ_1,RLSUB_1,RLVECT_2,RVSUM_1,RLTOPSP1,RUSUB_5,CKB4;
definitions TARSKI,XBOOLE_0,RLTOPSP1,RVSUM_1,CKB4;
theorems TARSKI,XBOOLE_0,XBOOLE_1,ZFMISC_1,SUBSET_1,SETFAM_1,XCMPLX_0,FUNCT_1,RLVECT_1,RUSUB_4,CONVEX1,RLTOPSP1,RVSUM_1,FINSEQ_1,RLSUB_1,RUSUB_5,RLVECT_2,CARD_1,FINSEQ_3,FINSEQ_4,CARD_2,XREAL_1,FINSOP_1,PARTFUN1,RLVECT_4,CKB1,CKB2,CKB4,CKB5;
schemes XBOOLE_0,FINSEQ_1,SUBSET_1;
registrations XBOOLE_0,SUBSET_1,RELSET_1,NUMBERS,XXREAL_0,XREAL_0,MEMBERED,STRUCT_0,RLVECT_1,RLTOPSP1,VALUED_0,FINSEQ_1,CARD_1,CKB3;
constructors SETFAM_1,DOMAIN_1,XXREAL_0,REAL_1,BINOP_2,COMPLEX1,FINSOP_1,RVSUM_1,RUSUB_5,CONVEX1,RLTOPSP1,RELSET_1;
requirements BOOLE,REAL,NUMERALS,SUBSET,ARITHM;
begin
theorem
Th3: (for V being RealLinearSpace holds (for M1,M2 being (Subset of V) holds (for r1,r2 being Real holds ((M1 is  circled & M2 is  circled) implies ( ( r1 * M1 ) + ( r2 * M2 ) ) is  circled))))
proof
let V being RealLinearSpace;
let M1 being (Subset of V);
let M2 being (Subset of V);
let r1 being Real;
let r2 being Real;
assume that
A1: M1 is  circled
and
A2: M2 is  circled;
let u being (VECTOR of V);
let p being Real;
assume that
A3: ( abs p ) <= 1
and
A4: u in ( ( r1 * M1 ) + ( r2 * M2 ) );
u in { ( x + y ) where x is (VECTOR of V),y is (VECTOR of V): (x in ( r1 * M1 ) & y in ( r2 * M2 )) } by A4,RUSUB_4:def 9;
then consider u1,u2 being (VECTOR of V) such that A5: u = ( u1 + u2 ) and A6: u1 in ( r1 * M1 ) and A7: u2 in ( r2 * M2 );
u1 in { ( r1 * x ) where x is (VECTOR of V): x in M1 } by A6,CONVEX1:def 1;
then consider x1 being (VECTOR of V) such that A8: u1 = ( r1 * x1 ) and A9: x1 in M1;
A10: ( p * u1 ) = ( ( r1 * p ) * x1 ) by A8,RLVECT_1:def 7
.= ( r1 * ( p * x1 ) ) by RLVECT_1:def 7;
u2 in { ( r2 * x ) where x is (VECTOR of V): x in M2 } by A7,CONVEX1:def 1;
then consider x2 being (VECTOR of V) such that A11: u2 = ( r2 * x2 ) and A12: x2 in M2;
A13: ( p * u2 ) = ( ( r2 * p ) * x2 ) by A11,RLVECT_1:def 7
.= ( r2 * ( p * x2 ) ) by RLVECT_1:def 7;
( p * x2 ) in M2 by A2,A3,A12,CKB4:def 1;
then A14: ( p * u2 ) in ( r2 * M2 ) by A13,RLTOPSP1:1;
( p * x1 ) in M1 by A1,A3,A9,CKB4:def 1;
then A15: ( p * u1 ) in ( r1 * M1 ) by A10,RLTOPSP1:1;
( p * ( u1 + u2 ) ) = ( ( p * u1 ) + ( p * u2 ) ) by RLVECT_1:def 5;
then ( p * ( u1 + u2 ) ) in { ( x + y ) where x is (VECTOR of V),y is (VECTOR of V): (x in ( r1 * M1 ) & y in ( r2 * M2 )) } by A15,A14;
hence thesis by A5,RUSUB_4:def 9;
end;
