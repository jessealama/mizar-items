constructors SETFAM_1,DOMAIN_1,XXREAL_0,REAL_1,BINOP_2,COMPLEX1,FINSOP_1,RVSUM_1,RUSUB_5,CONVEX1,RLTOPSP1,RELSET_1,CKB12,CKB13,CKB22;
requirements BOOLE,REAL,NUMERALS,SUBSET,ARITHM;
begin
registration
let V being RealLinearSpace;
let M being non empty (Subset of V);
cluster  circled for (Linear_Combination of M);
existence
proof
consider u being set such that A1: u in M by XBOOLE_0:def 1;
reconsider u as (Element of V) by A1;
consider L being (Linear_Combination of { u }) such that A2: ( L . u ) = 1 by RLVECT_4:37;
{ u } c= M by A1,ZFMISC_1:31;
then reconsider L as (Linear_Combination of M) by RLVECT_2:21;
take L;
L is  circled
proof
take <* u *>;
A3: (ex f being (FinSequence of ( REAL )) st ((( len f ) = ( len <* u *> ) & ( Sum f ) = 1) & (for n being Nat holds (n in ( dom f ) implies (( f . n ) = ( L . ( <* u *> . n ) ) & ( f . n ) >= ( 0 ))))))
proof
reconsider f = <* 1 *> as (FinSequence of ( REAL ));
take f;
A4: (for n being Nat holds (n in ( dom f ) implies (( f . n ) = ( L . ( <* u *> . n ) ) & ( f . n ) >= ( 0 ))))
proof
let n being Nat;
assume n in ( dom f );
then n in { 1 } by FINSEQ_1:2,FINSEQ_1:38;
then A5: n = 1 by TARSKI:def 1;
then ( f . n ) = 1 by FINSEQ_1:40;
hence thesis by A2,A5,FINSEQ_1:40;
end;
( len <* 1 *> ) = 1 by FINSEQ_1:39
.= ( len <* u *> ) by FINSEQ_1:39;
hence thesis by A4,FINSOP_1:11;
end;
u in { w where w is (Element of V): ( L . w ) <> ( 0 ) } by A2;
then u in ( Carrier L ) by RLVECT_2:def 4;
then (( Carrier L ) c= { u } & { u } c= ( Carrier L )) by RLVECT_2:def 6,ZFMISC_1:31;
then ( Carrier L ) = { u } by XBOOLE_0:def 10;
hence thesis by A3,FINSEQ_1:38,FINSEQ_3:93;
end;
hence thesis;
end;
end;
