environ
vocabularies RELAT_1,SUBSET_1,ZFMISC_1,TARSKI,XBOOLE_0;
notations TARSKI,XBOOLE_0,ZFMISC_1,SUBSET_1,RELAT_1,CKB1,CKB4,CKB5,CKB19,CKB20,CKB24,CKB25,CKB35,CKB36,CKB41,CKB42;
definitions TARSKI,XBOOLE_0,RELAT_1,CKB4,CKB5;
theorems TARSKI,ZFMISC_1,RELAT_1,XBOOLE_0,XBOOLE_1,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB21,CKB22,CKB23,CKB26,CKB27,CKB30,CKB31,CKB32,CKB33,CKB34,CKB37,CKB38,CKB39,CKB40;
schemes RELAT_1;
registrations XBOOLE_0,RELAT_1,SUBSET_1,CKB2,CKB3,CKB13,CKB14,CKB15,CKB16,CKB17,CKB18,CKB28,CKB29;
constructors TARSKI,SUBSET_1,RELAT_1,CKB4,CKB5,CKB19,CKB20,CKB24,CKB25,CKB35,CKB36,CKB41,CKB42;
requirements SUBSET,BOOLE;
begin
reserve X for set;
reserve Y for set;
reserve x for set;
reserve y for set;
reserve R for (Relation of X,Y);
theorem
Th38: (( R .: X ) = ( rng R ) & ( R " Y ) = ( dom R ))
proof
now
let y;
A1:now
assume y in ( rng R );
then consider x such that A2: [ x,y ] in R by RELAT_1:def 5;
x in X by A2,ZFMISC_1:87;
hence y in ( R .: X ) by A2,RELAT_1:def 13;
end;
now
assume y in ( R .: X );
then (ex x st ([ x,y ] in R & x in X)) by RELAT_1:def 13;
hence y in ( rng R ) by RELAT_1:6;
end;
hence (y in ( R .: X ) iff y in ( rng R )) by A1;
end;
hence ( R .: X ) = ( rng R ) by TARSKI:1;
now
let x;
A3:now
assume x in ( dom R );
then consider y such that A4: [ x,y ] in R by RELAT_1:def 4;
y in Y by A4,ZFMISC_1:87;
hence x in ( R " Y ) by A4,RELAT_1:def 14;
end;
now
assume x in ( R " Y );
then (ex y st ([ x,y ] in R & y in Y)) by RELAT_1:def 14;
hence x in ( dom R ) by RELAT_1:6;
end;
hence (x in ( R " Y ) iff x in ( dom R )) by A3;
end;
hence thesis by TARSKI:1;
end;
