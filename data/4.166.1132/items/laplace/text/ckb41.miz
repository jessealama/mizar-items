registrations FUNCT_1,FINSUB_1,FINSET_1,STRUCT_0,FVSUM_1,MATRIX_2,VECTSP_1,FUNCT_2,PARTFUN1,XBOOLE_0,ORDINAL1,XXREAL_0,NAT_1,INT_1,RELAT_1,CARD_1,MATRIX11,XCMPLX_0,RELSET_1,FINSEQ_2,FINSEQ_1;
constructors RELAT_2,SETWISEO,FINSOP_1,SETWOP_2,ALGSTR_1,FVSUM_1,BINOP_1,XXREAL_0,FINSEQ_4,FINSEQ_7,WELLORD2,NEWTON,MATRIX_6,MATRIX_7,MATRIX11,NAT_D,BINOP_2,RELSET_1,CKB6,CKB14,CKB18,CKB24,CKB28,CKB29,CKB32,CKB33,CKB34;
requirements ARITHM,NUMERALS,REAL,BOOLE,SUBSET;
begin
reserve i for Nat;
reserve j for Nat;
reserve n for Nat;
reserve K for Field;
reserve f for (FinSequence of K);
reserve M for (Matrix of n,K);
theorem
Th31: (for f holds (for i holds ((( len f ) = n & i in ( Seg n )) implies ( mlt (( Col (( Matrix_of_Cofactor M ),i) ),f) ) = ( LaplaceExpL (( RLine (( M @ ),i,f) ),i) ))))
proof
let f;
let i;
assume that
A1: ( len f ) = n
and
A2: i in ( Seg n );
reconsider N = n as (Element of ( NAT )) by ORDINAL1:def 12;
set KK = (the carrier of K);
set C = ( Matrix_of_Cofactor M );
reconsider Tp = f,TC = ( Col (C,i) ) as (Element of ( N -tuples_on KK )) by A1,FINSEQ_2:92,MATRIX_1:24;
set R = ( RLine (( M @ ),i,f) );
set LL = ( LaplaceExpL (R,i) );
set MCT = ( mlt (TC,Tp) );
A3: ( len LL ) = n by CKB33:def 1;
A4:now
A5: ( Indices ( M @ ) ) = [: ( Seg n ),( Seg n ) :] by MATRIX_1:24;
A6: ( dom LL ) = ( Seg n ) by A3,FINSEQ_1:def 3;
A7: ( width ( M @ ) ) = n by MATRIX_1:24;
let j being Nat;
assume that
A8: 1 <= j
and
A9: j <= n;
j in ( NAT ) by ORDINAL1:def 12;
then A10: j in ( Seg n ) by A8,A9;
then ( Delete (( M @ ),i,j) ) = ( ( Delete (M,j,i) ) @ ) by A2,CKB16:1;
then A11: ( Cofactor (( M @ ),i,j) ) = ( Cofactor (M,j,i) ) by MATRIXR2:43;
( Indices C ) = [: ( Seg n ),( Seg n ) :] by MATRIX_1:24;
then [ j,i ] in ( Indices C ) by A2,A10,ZFMISC_1:87;
then A12: ( C * (j,i) ) = ( Cofactor (M,j,i) ) by CKB32:def 1;
n = ( len C ) by MATRIX_1:24;
then ( dom C ) = ( Seg n ) by FINSEQ_1:def 3;
then A13: ( ( Col (C,i) ) . j ) = ( C * (j,i) ) by A10,MATRIX_1:def 8;
A14: ( Indices M ) = [: ( Seg n ),( Seg n ) :] by MATRIX_1:24;
then [ i,j ] in ( Indices M ) by A2,A10,ZFMISC_1:87;
then ( R * (i,j) ) = ( f . j ) by A1,A7,A14,A5,MATRIX11:def 3;
then A15: ( MCT . j ) = ( ( Cofactor (M,j,i) ) * ( R * (i,j) ) ) by A10,A13,A12,FVSUM_1:61;
( Cofactor (R,i,j) ) = ( Cofactor (( M @ ),i,j) ) by A2,A10,CKB17:1;
hence ( MCT . j ) = ( LL . j ) by A10,A11,A6,A15,CKB33:def 1;
end;
( len MCT ) = n by CARD_1:def 7;
hence thesis by A3,A4,FINSEQ_1:14;
end;
