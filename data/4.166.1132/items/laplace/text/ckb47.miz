reserve A for (Matrix of K);
theorem
Th37: (for A being (Matrix of n,K) holds (( Det A ) <> ( 0. K ) implies (for x,b being (Matrix of K) holds ((( len x ) = n & ( A * x ) = b) implies (x = ( ( A ~ ) * b ) & (for i holds (for j holds ([ i,j ] in ( Indices x ) implies ( x * (i,j) ) = ( ( ( Det A ) " ) * ( Det ( ReplaceCol (A,i,( Col (b,j) )) ) ) )))))))))
proof
let A being (Matrix of n,K);
assume that
A1: ( Det A ) <> ( 0. K );
A is  invertible by A1,CKB44:1;
then ( A ~ ) is_reverse_of A by MATRIX_6:def 4;
then A2: ( ( A ~ ) * A ) = ( 1. (K,n) ) by MATRIX_6:def 2;
set MC = ( Matrix_of_Cofactor A );
set D = ( Det A );
A3: ( width MC ) = n by MATRIX_1:24;
A4: ( len ( MC @ ) ) = n by MATRIX_1:24;
A5: ( width ( MC @ ) ) = n by MATRIX_1:24;
A6: ( width ( A ~ ) ) = n by MATRIX_1:24;
A7: ( width A ) = n by MATRIX_1:24;
let x being (Matrix of K);
let b being (Matrix of K);
assume that
A8: ( len x ) = n
and
A9: ( A * x ) = b;
A10: ( len A ) = n by MATRIX_1:24;
then A11: ( len b ) = n by A8,A9,A7,MATRIX_3:def 4;
x = ( ( 1. (K,n) ) * x ) by A8,MATRIXR2:68;
hence A12: x = ( ( A ~ ) * b ) by A8,A9,A6,A10,A7,A2,MATRIX_3:33;
let i;
let j;
assume that
A13: [ i,j ] in ( Indices x );
A14: ( len ( Col (b,j) ) ) = n by A11,MATRIX_1:def 8;
( Indices x ) = [: ( Seg n ),( Seg ( width x ) ) :] by A8,FINSEQ_1:def 3;
then A15: i in ( Seg n ) by A13,ZFMISC_1:87;
then A16: 1 <= i by FINSEQ_1:1;
A17: i <= n by A15,FINSEQ_1:1;
thus ( x * (i,j) ) = ( ( Line (( A ~ ),i) ) "*" ( Col (b,j) ) ) by A6,A12,A13,A11,MATRIX_3:def 4
.= ( ( Line (( ( D " ) * ( MC @ ) ),i) ) "*" ( Col (b,j) ) ) by A1,CKB45:1
.= ( ( ( D " ) * ( Line (( MC @ ),i) ) ) "*" ( Col (b,j) ) ) by A4,A16,A17,MATRIXR1:20
.= ( Sum ( ( D " ) * ( mlt (( Line (( MC @ ),i) ),( Col (b,j) )) ) ) ) by A5,A11,FVSUM_1:68
.= ( ( D " ) * ( ( Line (( MC @ ),i) ) "*" ( Col (b,j) ) ) ) by FVSUM_1:73
.= ( ( D " ) * ( ( Col (MC,i) ) "*" ( Col (b,j) ) ) ) by A3,A15,MATRIX_2:15
.= ( ( D " ) * ( Sum ( LaplaceExpL (( RLine (( A @ ),i,( Col (b,j) )) ),i) ) ) ) by A15,A14,CKB41:1
.= ( ( D " ) * ( Det ( RLine (( A @ ),i,( Col (b,j) )) ) ) ) by A15,CKB35:1
.= ( ( D " ) * ( Det ( ( RLine (( A @ ),i,( Col (b,j) )) ) @ ) ) ) by MATRIXR2:43
.= ( ( D " ) * ( Det ( RCol (A,i,( Col (b,j) )) ) ) ) by CKB23:1;
end;
