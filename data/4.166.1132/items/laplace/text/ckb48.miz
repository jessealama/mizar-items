reserve K for Field;
theorem
Th38: (for A being (Matrix of n,K) holds (( Det A ) <> ( 0. K ) implies (for x,b being (Matrix of K) holds ((( width x ) = n & ( x * A ) = b) implies (x = ( b * ( A ~ ) ) & (for i holds (for j holds ([ i,j ] in ( Indices x ) implies ( x * (i,j) ) = ( ( ( Det A ) " ) * ( Det ( ReplaceLine (A,j,( Line (b,i) )) ) ) )))))))))
proof
let A being (Matrix of n,K);
assume that
A1: ( Det A ) <> ( 0. K );
A is  invertible by A1,CKB44:1;
then ( A ~ ) is_reverse_of A by MATRIX_6:def 4;
then A2: ( A * ( A ~ ) ) = ( 1. (K,n) ) by MATRIX_6:def 2;
A3: ( width A ) = n by MATRIX_1:24;
let x being (Matrix of K),b being (Matrix of K);
assume that
A4: ( width x ) = n
and
A5: ( x * A ) = b;
A6: ( len A ) = n by MATRIX_1:24;
then A7: ( width b ) = n by A4,A5,A3,MATRIX_3:def 4;
set MC = ( Matrix_of_Cofactor A );
set D = ( Det A );
A8: ( len ( MC @ ) ) = n by MATRIX_1:24;
A9: ( width ( MC @ ) ) = n by MATRIX_1:24;
( len MC ) = n by MATRIX_1:24;
then A10: ( Seg n ) = ( dom MC ) by FINSEQ_1:def 3;
A11: ( len ( A ~ ) ) = n by MATRIX_1:24;
x = ( x * ( 1. (K,n) ) ) by A4,MATRIXR2:67;
hence A12: x = ( b * ( A ~ ) ) by A4,A5,A11,A6,A3,A2,MATRIX_3:33;
let i;
let j;
assume that
A13: [ i,j ] in ( Indices x );
A14: j in ( Seg n ) by A4,A13,ZFMISC_1:87;
then A15: 1 <= j by FINSEQ_1:1;
A16: ( len ( Line (b,i) ) ) = n by A7,MATRIX_1:def 7;
A17: j <= n by A14,FINSEQ_1:1;
thus ( x * (i,j) ) = ( ( Line (b,i) ) "*" ( Col (( A ~ ),j) ) ) by A11,A12,A13,A7,MATRIX_3:def 4
.= ( ( Line (b,i) ) "*" ( Col (( ( D " ) * ( MC @ ) ),j) ) ) by A1,CKB45:1
.= ( ( Line (b,i) ) "*" ( ( D " ) * ( Col (( MC @ ),j) ) ) ) by A9,A15,A17,MATRIXR1:19
.= ( ( ( D " ) * ( Col (( MC @ ),j) ) ) "*" ( Line (b,i) ) ) by FVSUM_1:90
.= ( Sum ( ( D " ) * ( mlt (( Col (( MC @ ),j) ),( Line (b,i) )) ) ) ) by A8,A7,FVSUM_1:69
.= ( ( D " ) * ( ( Col (( MC @ ),j) ) "*" ( Line (b,i) ) ) ) by FVSUM_1:73
.= ( ( D " ) * ( ( Line (MC,j) ) "*" ( Line (b,i) ) ) ) by A14,A10,MATRIX_2:14
.= ( ( D " ) * ( Sum ( LaplaceExpL (( RLine (A,j,( Line (b,i) )) ),j) ) ) ) by A14,A16,CKB38:1
.= ( ( D " ) * ( Det ( RLine (A,j,( Line (b,i) )) ) ) ) by A14,CKB35:1;
end;
