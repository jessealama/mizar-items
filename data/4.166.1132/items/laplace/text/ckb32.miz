definition
let n;
let K;
let M being (Matrix of n,K);
func Matrix_of_Cofactor M -> (Matrix of n,K) means 
:Def6: (for i,j being Nat holds ([ i,j ] in ( Indices it ) implies ( it * (i,j) ) = ( Cofactor (M,i,j) )));
existence
proof
reconsider N = n as (Element of ( NAT )) by ORDINAL1:def 12;
deffunc C(Nat,Nat) = ( Cofactor (M,$1,$2) );
(ex M being (Matrix of N,N,K) st (for i,j being Nat holds ([ i,j ] in ( Indices M ) implies ( M * (i,j) ) = C(i,j)))) from MATRIX_1:sch 1;
hence thesis;
end;
uniqueness
proof
let C1 being (Matrix of n,K);
let C2 being (Matrix of n,K);
assume that
A1: (for i,j being Nat holds ([ i,j ] in ( Indices C1 ) implies ( C1 * (i,j) ) = ( Cofactor (M,i,j) )))
and
A2: (for i,j being Nat holds ([ i,j ] in ( Indices C2 ) implies ( C2 * (i,j) ) = ( Cofactor (M,i,j) )));
now
A3: ( Indices C1 ) = ( Indices C2 ) by MATRIX_1:26;
let i being Nat;
let j being Nat;
assume that
A4: [ i,j ] in ( Indices C1 );
reconsider i9 = i,j9 = j as (Element of ( NAT )) by ORDINAL1:def 12;
( C1 * (i,j) ) = ( Cofactor (M,i9,j9) ) by A1,A4;
hence ( C1 * (i,j) ) = ( C2 * (i,j) ) by A2,A4,A3;
end;
hence thesis by MATRIX_1:27;
end;
