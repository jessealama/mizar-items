theorem
(f is  divergent_in+infty_to-infty iff ((for r holds (ex g st (r < g & g in ( dom f )))) & (for g holds (ex r st (for r1 holds ((r < r1 & r1 in ( dom f )) implies ( f . r1 ) < g))))))
proof
thus (f is  divergent_in+infty_to-infty implies ((for r holds (ex g st (r < g & g in ( dom f )))) & (for g holds (ex r st (for r1 holds ((r < r1 & r1 in ( dom f )) implies ( f . r1 ) < g))))))
proof
assume A1: f is  divergent_in+infty_to-infty;
assume ((not (for r holds (ex g st (r < g & g in ( dom f ))))) or (ex g st (for r holds (ex r1 st ((r < r1 & r1 in ( dom f )) & ( f . r1 ) >= g)))));
then consider g such that A2: (for r holds (ex r1 st ((r < r1 & r1 in ( dom f )) & ( f . r1 ) >= g))) by A1,CKB56:def 1;
defpred X[ (Element of ( NAT )), real number ]
 means
(($1 < $2 & $2 in ( dom f )) & g <= ( f . $2 ));
A3: (for n holds (ex r st X[ n,r ])) by A2;
consider s being Real_Sequence such that A4: (for n holds X[ n,( s . n ) ]) from FUNCT_2:sch 3(A3);
now
let x being set;
assume x in ( rng s );
then (ex n st ( s . n ) = x) by FUNCT_2:113;
hence x in ( dom f ) by A4;
end;
then A5: ( rng s ) c= ( dom f ) by TARSKI:def 3;
now
let n;
n < ( s . n ) by A4;
hence ( s1 . n ) <= ( s . n ) by FUNCT_1:18;
end;
then s is  divergent_to+infty by Lm4,CKB30:1,CKB52:1;
then ( f /* s ) is  divergent_to-infty by A1,A5,CKB56:def 1;
then consider n such that A6: (for m holds (n <= m implies ( ( f /* s ) . m ) < g)) by CKB15:def 1;
( ( f /* s ) . n ) < g by A6;
then ( f . ( s . n ) ) < g by A5,FUNCT_2:108;
hence contradiction by A4;
end;

assume that
A7: (for r holds (ex g st (r < g & g in ( dom f ))))
and
A8: (for g holds (ex r st (for r1 holds ((r < r1 & r1 in ( dom f )) implies ( f . r1 ) < g))));
now
let s being Real_Sequence;
assume that
A9: s is  divergent_to+infty
and
A10: ( rng s ) c= ( dom f );
now
let g;
consider r such that A11: (for r1 holds ((r < r1 & r1 in ( dom f )) implies ( f . r1 ) < g)) by A8;
consider n such that A12: (for m holds (n <= m implies r < ( s . m ))) by A9,CKB14:def 1;
take n;
let m;
A13: ( s . m ) in ( rng s ) by VALUED_0:28;
assume n <= m;
then ( f . ( s . m ) ) < g by A10,A11,A12,A13;
hence ( ( f /* s ) . m ) < g by A10,FUNCT_2:108;
end;
hence ( f /* s ) is  divergent_to-infty by CKB15:def 1;
end;
hence thesis by A7,CKB56:def 1;
