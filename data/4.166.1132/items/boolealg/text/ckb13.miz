environ
vocabularies LATTICES,SUBSET_1,XBOOLE_0,EQREL_1,PBOOLE;
notations STRUCT_0,LATTICES,CKB1,CKB2,CKB3,CKB4,CKB5;
definitions CKB1,CKB2,CKB3,CKB4;
theorems LATTICES,FILTER_0,LATTICE4,CKB1,CKB2,CKB3,CKB4,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12;
registrations LATTICES;
constructors LATTICES,CKB1,CKB2,CKB3,CKB4;
begin
reserve L for Lattice;
reserve X for (Element of L);
theorem
(X meets X iff X <> ( Bottom L ))
proof
A1: ( X "/\" X ) = X by LATTICES:2;
hereby
assume X meets X;
then ( X "/\" X ) <> ( Bottom L ) by CKB4:def 1;
hence X <> ( Bottom L ) by LATTICES:2;
end;
assume X <> ( Bottom L );
hence thesis by A1,CKB4:def 1;
end;
