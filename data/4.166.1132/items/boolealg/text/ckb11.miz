environ
vocabularies LATTICES,SUBSET_1,XBOOLE_0,EQREL_1,PBOOLE;
notations STRUCT_0,LATTICES,CKB1,CKB2,CKB3,CKB4,CKB5;
definitions CKB1,CKB2,CKB3,CKB4;
theorems LATTICES,FILTER_0,LATTICE4,CKB1,CKB2,CKB3,CKB4,CKB6,CKB7,CKB8,CKB9,CKB10;
registrations LATTICES;
constructors LATTICES,CKB1,CKB2,CKB3,CKB4;
begin
reserve L for Lattice;
reserve X for (Element of L);
reserve Y for (Element of L);
reserve Z for (Element of L);
reserve V for (Element of L);
theorem
(X = ( Y "/\" Z ) iff ((X [= Y & X [= Z) & (for V holds ((V [= Y & V [= Z) implies V [= X))))
proof
thus (X = ( Y "/\" Z ) implies ((X [= Y & X [= Z) & (for V holds ((V [= Y & V [= Z) implies V [= X)))) by FILTER_0:7,LATTICES:6;
assume that
A1: (X [= Y & X [= Z)
and
A2: (for V holds ((V [= Y & V [= Z) implies V [= X));
A3: X [= ( Y "/\" Z ) by A1,FILTER_0:7;
(( Y "/\" Z ) [= Y & ( Y "/\" Z ) [= Z) by LATTICES:6;
then ( Y "/\" Z ) [= X by A2;
hence thesis by A3,CKB3:def 1;
end;
