begin
theorem
Th13: (for M being PseudoMetricSpace holds (for x,y being (Element of M) holds (( x -neighbour ) = ( y -neighbour ) iff x tolerates y)))
proof
let M being PseudoMetricSpace;
let x being (Element of M),y being (Element of M);
hereby
assume ( x -neighbour ) = ( y -neighbour );
then x in ( y -neighbour ) by CKB10:1;
hence x tolerates y by CKB8:1;
end;
assume x tolerates y;
then x in ( y -neighbour );
hence thesis by CKB13:1;
end;
