begin
theorem
Th7: (for M being PseudoMetricSpace holds (for x,y being (Element of M) holds (y in ( x -neighbour ) iff y tolerates x)))
proof
let M being PseudoMetricSpace;
let x being (Element of M);
let y being (Element of M);
hereby
assume y in ( x -neighbour );
then (ex q being (Element of M) st (y = q & x tolerates q));
hence y tolerates x;
end;
assume y tolerates x;
hence thesis;
end;
