constructors PARTFUN1,REAL_1,COMPLEX1,SEQ_2,SEQ_4,RCOMP_1,PARTFUN2,BHSP_3,VFUNCT_1,LOPBAN_3,SEQ_1,RECDEF_1,SEQM_3,NORMSP_1,RELSET_1,CKB3,CKB6,CKB7,CKB8,CKB9,CKB10,CKB24,CKB25;
requirements SUBSET,REAL,BOOLE,NUMERALS,ARITHM;
begin
reserve X for set;
reserve s for Real;
reserve r for Real;
reserve S for RealNormSpace;
reserve x0 for (Point of S);
reserve x1 for (Point of S);
theorem
(for f being (PartFunc of (the carrier of S),( REAL )) holds (f is_continuous_on X iff (X c= ( dom f ) & (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ||. ( x1 - x0 ) .|| < s) implies ( abs ( ( f /. x1 ) - ( f /. x0 ) ) ) < r))))))))))
proof
let f being (PartFunc of (the carrier of S),( REAL ));
thus (f is_continuous_on X implies (X c= ( dom f ) & (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ||. ( x1 - x0 ) .|| < s) implies ( abs ( ( f /. x1 ) - ( f /. x0 ) ) ) < r)))))))))
proof
assume A1: f is_continuous_on X;
hence X c= ( dom f ) by CKB25:def 1;
A2: X c= ( dom f ) by A1,CKB25:def 1;
let x0;
let r;
assume that
A3: x0 in X
and
A4: ( 0 ) < r;
( f | X ) is_continuous_in x0 by A1,A3,CKB25:def 1;
then consider s such that A5: ( 0 ) < s and A6: (for x1 holds ((x1 in ( dom ( f | X ) ) & ||. ( x1 - x0 ) .|| < s) implies ( abs ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) ) < r)) by A4,CKB14:1;
take s;
thus ( 0 ) < s by A5;
let x1;
assume that
A7: x1 in X
and
A8: ||. ( x1 - x0 ) .|| < s;
A9: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by PARTFUN2:15
.= X by A2,XBOOLE_1:28;
then ( abs ( ( f /. x1 ) - ( f /. x0 ) ) ) = ( abs ( ( ( f | X ) /. x1 ) - ( f /. x0 ) ) ) by A7,PARTFUN2:15
.= ( abs ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) ) by A3,A9,PARTFUN2:15;
hence thesis by A6,A9,A7,A8;
end;

assume that
A10: X c= ( dom f )
and
A11: (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ||. ( x1 - x0 ) .|| < s) implies ( abs ( ( f /. x1 ) - ( f /. x0 ) ) ) < r)))))));
A12: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by PARTFUN2:15
.= X by A10,XBOOLE_1:28;
now
let x0;
assume that
A13: x0 in X;
(for r holds (( 0 ) < r implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in ( dom ( f | X ) ) & ||. ( x1 - x0 ) .|| < s) implies ( abs ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) ) < r))))))
proof
let r;
assume ( 0 ) < r;
then consider s such that A14: ( 0 ) < s and A15: (for x1 holds ((x1 in X & ||. ( x1 - x0 ) .|| < s) implies ( abs ( ( f /. x1 ) - ( f /. x0 ) ) ) < r)) by A11,A13;
take s;
thus ( 0 ) < s by A14;
let x1;
assume that
A16: x1 in ( dom ( f | X ) )
and
A17: ||. ( x1 - x0 ) .|| < s;
( abs ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) ) = ( abs ( ( ( f | X ) /. x1 ) - ( f /. x0 ) ) ) by A12,A13,PARTFUN2:15
.= ( abs ( ( f /. x1 ) - ( f /. x0 ) ) ) by A16,PARTFUN2:15;
hence thesis by A12,A15,A16,A17;
end;
hence ( f | X ) is_continuous_in x0 by A12,A13,CKB14:1;
end;
hence thesis by A10,CKB25:def 1;
end;
