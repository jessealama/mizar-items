definitions SUPINF_2,XXREAL_3;
theorems MEASURE6,SUPINF_2,EXTREAL1,MESFUNC1,ABSVALUE,XCMPLX_1,COMPLEX1,XREAL_1,XXREAL_0,XXREAL_3,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15,CKB16,CKB17,CKB18,CKB19;
registrations NUMBERS,XXREAL_0,XREAL_0,MEMBERED,XBOOLE_0,XXREAL_3;
