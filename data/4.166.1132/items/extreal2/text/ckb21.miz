environ
vocabularies NUMBERS,SUPINF_1,REAL_1,COMPLEX1,CARD_1,XXREAL_0,ARYTM_1,ARYTM_3,RELAT_1,MESFUNC1,MEASURE6;
notations NUMBERS,XXREAL_0,COMPLEX1,REAL_1,SUPINF_1,SUPINF_2,MEASURE6,EXTREAL1,MESFUNC1;
definitions SUPINF_2,XXREAL_3;
theorems MEASURE6,SUPINF_2,EXTREAL1,MESFUNC1,ABSVALUE,XCMPLX_1,COMPLEX1,XREAL_1,XXREAL_0,XXREAL_3,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15,CKB16,CKB17,CKB18,CKB19,CKB20;
registrations NUMBERS,XXREAL_0,XREAL_0,MEMBERED,XBOOLE_0,XXREAL_3;
constructors REAL_1,COMPLEX1,SUPINF_2,MEASURE6,EXTREAL1,MESFUNC1,SUPINF_1,BINOP_2;
requirements NUMERALS,REAL,SUBSET,BOOLE,ARITHM;
begin
reserve x for R_eal;
reserve y for R_eal;
theorem
((not ((x = ( +infty ) & y = ( +infty )) or (x = ( -infty ) & y = ( -infty )))) implies |. ( x - y ) .| <= ( |. x .| + |. y .| ))
proof
assume A1: (not ((x = ( +infty ) & y = ( +infty )) or (x = ( -infty ) & y = ( -infty ))));
per cases ;
suppose A2: x = ( +infty );

then ( x - y ) = ( +infty ) by A1,XXREAL_3:13;
then A3: |. ( x - y ) .| = ( +infty ) by EXTREAL1:3;
A4: ( 0 ) <= |. y .| by CKB3:1;
|. x .| = ( +infty ) by A2,EXTREAL1:3;
hence thesis by A3,A4,XXREAL_3:def 2;
end;
suppose A5: x = ( -infty );

A6: ( 0 ) <= |. y .| by CKB3:1;
( x - y ) = ( -infty ) by A1,A5,XXREAL_3:14;
hence thesis by A5,A6,CKB19:1,XXREAL_3:def 2;
end;
suppose A7: (x <> ( +infty ) & x <> ( -infty ));

then reconsider a = x as Real by XXREAL_0:14;
now
per cases ;
suppose A8: y = ( +infty );

A9: ( 0 ) <= |. x .| by CKB3:1;
( x - y ) = ( -infty ) by A7,A8,XXREAL_3:13;
hence thesis by A8,A9,CKB19:1,XXREAL_3:def 2;
end;
suppose A10: y = ( -infty );

A11: ( 0 ) <= |. x .| by CKB3:1;
( x - y ) = ( +infty ) by A7,A10,XXREAL_3:14;
hence thesis by A10,A11,CKB19:1,XXREAL_3:def 2;
end;
suppose (y <> ( +infty ) & y <> ( -infty ));

then reconsider b = y as Real by XXREAL_0:14;
(|. x .| = ( abs a ) & |. y .| = ( abs b )) by CKB1:1;
then A12: ( |. x .| + |. y .| ) = ( ( abs a ) + ( abs b ) ) by SUPINF_2:1;
( x - y ) = ( a - b ) by SUPINF_2:3;
then |. ( x - y ) .| = ( abs ( a - b ) ) by CKB1:1;
hence thesis by A12,COMPLEX1:57;
end;
end;
hence thesis;
end;
end;
