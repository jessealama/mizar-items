begin
reserve r for  real number;
reserve M for  Reflexive non empty MetrStruct;
reserve A for (Subset of M);
definition
let M;
let K being M bounded non void  subset-closed SimplicialComplexStr;
redefine func diameter (M,K) -> Real
means
:Def4: ((for A holds (A is (Simplex of K) implies ( diameter A ) <= it)) & (for r holds ((for A holds (A is (Simplex of K) implies ( diameter A ) <= r)) implies r >= it)));
coherence;
compatibility
proof
let d being Real;
( {} K ) is  simplex-like;
then ( {} M ) in (the topology of K) by PRE_TOPC:def 2;
then A1: (the topology of K) meets ( bool ( [#] M ) ) by XBOOLE_0:3;
hereby
assume A2: d = ( diameter (M,K) );
hereby
let A;
assume A is (Simplex of K);
then A in (the topology of K) by PRE_TOPC:def 2;
hence ( diameter A ) <= d by A1,A2,CKB15:def 1;
end;
let r being  real number;
assume A3: (for A holds (A is (Simplex of K) implies ( diameter A ) <= r));
now
let A;
assume A in (the topology of K);
then A is (Simplex of K) by PRE_TOPC:def 2;
hence ( diameter A ) <= r by A3;
end;
hence r >= d by A1,A2,CKB15:def 1;
end;
assume that
A4: (for A holds (A is (Simplex of K) implies ( diameter A ) <= d))
and
A5: (for r being  real number holds ((for A holds (A is (Simplex of K) implies ( diameter A ) <= r)) implies r >= d));
now
let A;
assume A in (the topology of K);
then A is (Simplex of K) by PRE_TOPC:def 2;
hence ( diameter A ) <= d by A4;
end;
then A6: ( diameter (M,K) ) <= d by A1,CKB15:def 1;
now
let A;
assume A is (Simplex of K);
then A in (the topology of K) by PRE_TOPC:def 2;
hence ( diameter A ) <= ( diameter (M,K) ) by A1,CKB15:def 1;
end;
then d <= ( diameter (M,K) ) by A5;
hence d = ( diameter (M,K) ) by A6,XXREAL_0:1;
end;
end;
