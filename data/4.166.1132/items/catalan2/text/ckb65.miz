theorem
Th56: (for seq1 holds (seq1 is  summable implies (ex r st (( 0 ) < r & (for k holds ( abs ( Sum ( seq1 ^\ k ) ) ) < r)))))
proof
let seq1;
assume that
A1: seq1 is  summable;
defpred P[ Nat ]
 means
(ex r st (r >= ( 0 ) & (for i holds (i <= $1 implies ( abs ( Sum ( seq1 ^\ i ) ) ) <= r))));
A2: (for k holds (P[ k ] implies P[ ( k + 1 ) ]))
proof
let k;
assume P[ k ];
then consider r such that A3: r >= ( 0 ) and A4: (for i holds (i <= k implies ( abs ( Sum ( seq1 ^\ i ) ) ) <= r));
take M = ( max (r,( abs ( Sum ( seq1 ^\ ( k + 1 ) ) ) )) );
thus M >= ( 0 ) by A3,XXREAL_0:25;
let i;
assume that
A5: i <= ( k + 1 );
now
per cases  by A5,NAT_1:8;
suppose i = ( k + 1 );

hence thesis by XXREAL_0:25;
end;
suppose A6: i <= k;

A7: r <= M by XXREAL_0:25;
( abs ( Sum ( seq1 ^\ i ) ) ) <= r by A4,A6;
hence thesis by A7,XXREAL_0:2;
end;
end;
hence thesis;
end;
set P = ( Partial_Sums seq1 );
A8: ( lim P ) = ( Sum seq1 ) by SERIES_1:def 3;
P is  convergent by A1,SERIES_1:def 2;
then consider n being (Element of ( NAT )) such that A9: (for m being (Element of ( NAT )) holds (n <= m implies ( abs ( ( P . m ) - ( Sum seq1 ) ) ) < 1)) by A8,SEQ_2:def 7;
A10: P[ ( 0 ) ]
proof
take ( abs ( Sum seq1 ) );
thus ( abs ( Sum seq1 ) ) >= ( 0 ) by COMPLEX1:46;
let i;
assume i <= ( 0 );
then i = ( 0 );
hence thesis by NAT_1:47;
end;
(for k holds P[ k ]) from NAT_1:sch 2(A10,A2);
then consider r such that A11: r >= ( 0 ) and A12: (for i holds (i <= n implies ( abs ( Sum ( seq1 ^\ i ) ) ) <= r));
take r1 = ( r + 1 );
thus r1 > ( 0 ) by A11;
let k;
now
per cases ;
suppose A13: k <= n;

A14: ( (( 0 ) qua Nat) + r ) < r1 by XREAL_1:8;
( abs ( Sum ( seq1 ^\ k ) ) ) <= r by A12,A13;
hence thesis by A14,XXREAL_0:2;
end;
suppose A15: k > n;

then reconsider k1 = ( k - 1 ) as (Element of ( NAT )) by NAT_1:20;
( k1 + 1 ) > n by A15;
then k1 >= n by NAT_1:13;
then A16: ( abs ( ( P . k1 ) - ( Sum seq1 ) ) ) < 1 by A9;
( Sum seq1 ) = ( ( P . k1 ) + ( Sum ( seq1 ^\ ( k1 + 1 ) ) ) ) by A1,SERIES_1:15;
then ( abs ( - ( Sum ( seq1 ^\ ( k1 + 1 ) ) ) ) ) < 1 by A16;
then A17: ( abs ( Sum ( seq1 ^\ ( k1 + 1 ) ) ) ) < 1 by COMPLEX1:52;
( 1 + ( 0 ) ) <= r1 by A11,XREAL_1:6;
hence thesis by A17,XXREAL_0:2;
end;
end;
hence thesis;
end;
