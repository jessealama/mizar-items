begin
reserve x for set;
reserve f for Function;
definition
let f;
func disjoin f -> Function means 
:Def3: (( dom it ) = ( dom f ) & (for x holds (x in ( dom f ) implies ( it . x ) = [: ( f . x ),{ x } :])));
existence
proof
deffunc f(set) = [: ( f . $1 ),{ $1 } :];
thus (ex g being Function st (( dom g ) = ( dom f ) & (for x holds (x in ( dom f ) implies ( g . x ) = f(x))))) from FUNCT_1:sch 3;
end;
uniqueness
proof
let a1 being Function;
let a2 being Function;
assume that
A6: ( dom a1 ) = ( dom f )
and
A7: (for x holds (x in ( dom f ) implies ( a1 . x ) = [: ( f . x ),{ x } :]))
and
A8: ( dom a2 ) = ( dom f )
and
A9: (for x holds (x in ( dom f ) implies ( a2 . x ) = [: ( f . x ),{ x } :]));
now
let x;
assume A10: x in ( dom f );
then ( a1 . x ) = [: ( f . x ),{ x } :] by A7;
hence ( a1 . x ) = ( a2 . x ) by A9,A10;
end;
hence thesis by A6,A8,FUNCT_1:2;
end;
end;
