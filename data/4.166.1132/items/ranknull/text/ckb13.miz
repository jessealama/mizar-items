begin
definition
let F being Field;
let V being (VectSp of F);
let W being (VectSp of F);
let T being (linear-transformation of V,W);
func ker T ->  strict (Subspace of V)
means
:Def1: ( [#] it ) = { u where u is (Element of V): ( T . u ) = ( 0. W ) };
existence
proof
set K = { u where u is (Element of V): ( T . u ) = ( 0. W ) };
K c= ( [#] V )
proof
let x being set;
assume x in K;
then (ex u being (Element of V) st (u = x & ( T . u ) = ( 0. W )));
hence thesis;
end;
then reconsider K as (Subset of V);
A1: (for v being (Element of V) holds (v in K implies ( T . v ) = ( 0. W )))
proof
let v being (Element of V);
assume v in K;
then (ex u being (Element of V) st (u = v & ( T . u ) = ( 0. W )));
hence thesis;
end;
now
let u being (Element of V);
let a being (Element of F);
assume u in K;
then ( T . u ) = ( 0. W ) by A1;
then ( T . ( a * u ) ) = ( a * ( 0. W ) ) by MOD_2:def 2
.= ( 0. W ) by VECTSP_1:14;
hence ( a * u ) in K;
end;
then A2: (for a being (Element of F) holds (for u being (Element of V) holds (u in K implies ( a * u ) in K)));
( T . ( 0. V ) ) = ( 0. W ) by CKB12:1;
then A3: ( 0. V ) in K;
now
let u being (Element of V),v being (Element of V);
assume (u in K & v in K);
then (( T . u ) = ( 0. W ) & ( T . v ) = ( 0. W )) by A1;
then ( T . ( u + v ) ) = ( ( 0. W ) + ( 0. W ) ) by GRCAT_1:def 8
.= ( 0. W ) by RLVECT_1:def 4;
hence ( u + v ) in K;
end;
then K is  linearly-closed by A2,VECTSP_4:def 1;
then consider W being  strict (Subspace of V) such that A4: K = (the carrier of W) by A3,VECTSP_4:34;
take W;
thus thesis by A4;
end;
uniqueness by VECTSP_4:29;
end;
