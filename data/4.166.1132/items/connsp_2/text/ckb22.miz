begin
reserve X for non  empty TopSpace;
theorem
Th21: (X is  locally_connected implies (for S being (Subset of X) holds (S is  a_component implies S is  open)))
proof
assume A1: X is  locally_connected;
let S being (Subset of X);
assume that
A2: S is  a_component;
now
let p being set;
assume A3: p in S;
then reconsider x = p as (Point of X);
A4: ( [#] X ) is (a_neighborhood of x) by CKB5:1;
(X is_locally_connected_in x & S is_a_component_of ( [#] X )) by A1,A2,CKB17:def 1,CKB14:1;
then S is (a_neighborhood of x) by A3,A4,CKB20:1;
hence p in ( Int S ) by CKB1:def 1;
end;
then (( Int S ) c= S & S c= ( Int S )) by TARSKI:def 3,TOPS_1:16;
then ( Int S ) = S by XBOOLE_0:def 10;
hence thesis;
end;
