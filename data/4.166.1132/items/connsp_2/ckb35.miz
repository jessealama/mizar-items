begin
theorem
(for T being non empty TopSpace holds (for A being (Subset of T) holds (for p being (Point of T) holds (p in ( Cl A ) iff (for G being (a_neighborhood of p) holds G meets A)))))
proof
let T being non empty TopSpace;
let A being (Subset of T);
let p being (Point of T);
hereby
assume A1: p in ( Cl A );
let G being (a_neighborhood of p);
(p in ( Int G ) & ( Int G ) is  open) by CKB1:def 1;
then A meets ( Int G ) by A1,PRE_TOPC:def 7;
hence G meets A by TOPS_1:16,XBOOLE_1:63;
end;
assume A2: (for G being (a_neighborhood of p) holds G meets A);
now
let G being (Subset of T);
assume (G is  open & p in G);
then G is (a_neighborhood of p) by CKB5:1;
hence A meets G by A2;
end;
hence thesis by PRE_TOPC:def 7;
end;
