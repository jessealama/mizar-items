begin
reserve i for Nat;
reserve k for Nat;
reserve m for Nat;
reserve n for Nat;
definition
let n;
let i;
assume that
A1: i in ( Seg n );
func AxialSymmetry (i,n) ->  invertible (Matrix of n,( F_Real ))
means
:Def3: (( it * (i,i) ) = ( - ( 1. ( F_Real ) ) ) & (for k holds (for m holds ([ k,m ] in ( Indices it ) implies (((k = m & k <> i) implies ( it * (k,k) ) = ( 1. ( F_Real ) )) & (k <> m implies ( it * (k,m) ) = ( 0. ( F_Real ) )))))));
existence
proof
consider M being (Matrix of n,( F_Real )) such that A2: ( Det M ) = ( - ( 1. ( F_Real ) ) ) and A3: (( M * (i,i) ) = ( - ( 1. ( F_Real ) ) ) & (for k holds (for m holds ([ k,m ] in ( Indices M ) implies (((k = m & k <> i) implies ( M * (k,k) ) = ( 1. ( F_Real ) )) & (k <> m implies ( M * (k,m) ) = ( 0. ( F_Real ) ))))))) by A1,CKB14:1;
( Det M ) <> ( 0. ( F_Real ) ) by A2;
then M is  invertible by LAPLACE:34;
hence thesis by A3;
end;
uniqueness
proof
let A1 being  invertible (Matrix of n,( F_Real )),A2 being  invertible (Matrix of n,( F_Real ));
assume that
A4: ( A1 * (i,i) ) = ( - ( 1. ( F_Real ) ) )
and
A5: (for k holds (for m holds ([ k,m ] in ( Indices A1 ) implies (((k = m & k <> i) implies ( A1 * (k,k) ) = ( 1. ( F_Real ) )) & (k <> m implies ( A1 * (k,m) ) = ( 0. ( F_Real ) ))))))
and
A6: ( A2 * (i,i) ) = ( - ( 1. ( F_Real ) ) )
and
A7: (for k holds (for m holds ([ k,m ] in ( Indices A2 ) implies (((k = m & k <> i) implies ( A2 * (k,k) ) = ( 1. ( F_Real ) )) & (k <> m implies ( A2 * (k,m) ) = ( 0. ( F_Real ) ))))));
(for k holds (for m holds ([ k,m ] in ( Indices A1 ) implies ( A1 * (k,m) ) = ( A2 * (k,m) ))))
proof
let k;
let m;
assume A8: [ k,m ] in ( Indices A1 );
then A9: [ k,m ] in ( Indices A2 ) by MATRIX_1:26;
per cases ;
suppose A10: k <> m;

then ( A1 * (k,m) ) = ( 0. ( F_Real ) ) by A5,A8;
hence thesis by A7,A9,A10;
end;
suppose A11: (k = m & k <> i);

then ( A1 * (k,m) ) = ( 1. ( F_Real ) ) by A5,A8;
hence thesis by A7,A9,A11;
end;
suppose (k = m & k = i);

hence thesis by A4,A6;
end;
end;
hence thesis by MATRIX_1:27;
end;
end;
