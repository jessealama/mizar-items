begin
reserve x for set;
reserve y for set;
reserve L for LATTICE;
reserve l for (Element of L);
theorem
(for L being  continuous  distributive  lower-bounded LATTICE holds (for l being (Element of L) holds (l <> ( Top L ) implies (l is  prime iff (ex F being  Open (Filter of L) st l is_maximal_in ( F ` ))))))
proof
let L being  continuous  distributive  lower-bounded LATTICE;
let l being (Element of L);
set F = ( ( downarrow l ) ` );
assume A1: l <> ( Top L );
thus (l is  prime implies (ex F being  Open (Filter of L) st l is_maximal_in ( F ` )))
proof
A2: (for x being (Element of L) holds ( waybelow x ) is non  empty  directed);
A3:now
let x being (Element of L);
assume x in F;
then (not x in ( downarrow l )) by XBOOLE_0:def 5;
then (not x <= l) by WAYBEL_0:17;
then consider y being (Element of L) such that A4: y << x and A5: (not y <= l) by A2,WAYBEL_3:24;
(not y in ( downarrow l )) by A5,WAYBEL_0:17;
then y in F by XBOOLE_0:def 5;
hence (ex y being (Element of L) st (y in F & y << x)) by A4;
end;
assume l is  prime;
then reconsider F as  Open (Filter of L) by A1,A3,CKB12:def 1,CKB45:1;
take F;
A6:now
given y being (Element of L) such that
A7: y in ( F ` )
and
A8: y > l;

y <= l by A7,WAYBEL_0:17;
hence contradiction by A8,ORDERS_2:6;
end;
l <= l;
then l in ( F ` ) by WAYBEL_0:17;
hence thesis by A6,WAYBEL_4:55;
end;

thus ((ex F being  Open (Filter of L) st l is_maximal_in ( F ` )) implies l is  prime)
proof
assume (ex O being  Open (Filter of L) st l is_maximal_in ( O ` ));
then A9: l is  irreducible by CKB27:1;
now
let x being (Element of L);
let y being (Element of L);
assume ( x "/\" y ) <= l;
then l = ( l "\/" ( x "/\" y ) ) by YELLOW_0:24
.= ( ( l "\/" x ) "/\" ( l "\/" y ) ) by WAYBEL_1:5;
then A10: (l = ( l "\/" x ) or l = ( l "\/" y )) by A9,CKB19:def 1;
assume ((not x <= l) & (not y <= l));
hence contradiction by A10,YELLOW_0:24;
end;
hence thesis by CKB35:def 1;
end;

end;
