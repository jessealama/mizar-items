( f .: ( f " S ) ) c= S by FUNCT_1:75;
hence ( f .: W ) c= V by A2,XBOOLE_1:1;
end;
hence (for x being (Point of X) holds (for V being (Subset of ( REAL )) holds ((( f . x ) in V & V is  open) implies (ex W being (Subset of X) st ((x in W & W is  open) & ( f .: W ) c= V)))));
end;
assume A3: (for x being (Point of X) holds (for V being (Subset of ( REAL )) holds ((( f . x ) in V & V is  open) implies (ex W being (Subset of X) st ((x in W & W is  open) & ( f .: W ) c= V)))));
