begin
reserve X for non  empty TopSpace;
reserve X0 for non  empty (maximal_Kolmogorov_subspace of X);
definition
let X being non  empty TopSpace;
let X0 being non  empty (maximal_Kolmogorov_subspace of X);
redefine func Stone-retraction (X,X0) means 
:Def10: (for M being (Subset of X) holds (M = (the carrier of X0) implies (for a being (Point of X) holds ( M /\ ( MaxADSet a ) ) = { ( it . a ) })));
compatibility
proof
reconsider M = (the carrier of X0) as (Subset of X) by TSEP_1:1;
let r being  continuous (Function of X,X0);
thus (r = ( Stone-retraction (X,X0) ) implies (for M being (Subset of X) holds (M = (the carrier of X0) implies (for a being (Point of X) holds ( M /\ ( MaxADSet a ) ) = { ( r . a ) }))))
proof
assume A1: r = ( Stone-retraction (X,X0) );
let M being (Subset of X);
A2: ( Stone-retraction (X,X0) ) is  being_a_retraction by CKB49:def 1;
assume M = (the carrier of X0);
hence thesis by A1,A2,CKB45:1;
end;

assume (for A being (Subset of X) holds (A = (the carrier of X0) implies (for a being (Point of X) holds ( A /\ ( MaxADSet a ) ) = { ( r . a ) })));
then (for a being (Point of X) holds ( M /\ ( MaxADSet a ) ) = { ( r . a ) });
then r is  being_a_retraction by CKB40:1;
hence r = ( Stone-retraction (X,X0) ) by CKB49:def 1;
end;
end;
