theorem
(for x holds (for Y being (TolClass of T) holds (x in Y implies Y c= ( neighbourhood (x,T) ))))
proof
let x;
let Y being (TolClass of T);
assume that
A1: x in Y;
(for y holds (y in Y implies y in ( neighbourhood (x,T) )))
proof
let y;
assume y in Y;
then [ x,y ] in T by A1,CKB16:def 1;
hence thesis by CKB37:1;
end;
hence thesis by TARSKI:def 3;
