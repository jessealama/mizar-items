end;
suppose ( F . k ) <> ( {} );

then consider x1 being set such that A7: x1 in ( F . k ) by XBOOLE_0:def 1;
take ( f . x1 );
( rng F ) c= ( bool X ) by XBOOLE_1:1;
hence thesis by A2,A4,A5,A7;
end;
end;
consider a being (FinSequence of ( REAL )) such that A8: (( dom a ) = ( Seg ( len F ) ) & (for k being Nat holds (k in ( Seg ( len F ) ) implies P[ k,( a . k ) ]))) from FINSEQ_1:sch 5(A3);
take F;
take a;
(for n being Nat holds (n in ( dom F ) implies (for x being set holds (x in ( F . n ) implies ( a . n ) = ( f . x )))))
proof
let n being Nat;
assume n in ( dom F );
then n in ( Seg ( len F ) ) by FINSEQ_1:def 3;
hence thesis by A8;
end;
hence thesis by A1,A8,FINSEQ_1:def 3;
end;
