begin
reserve x for set;
reserve y for set;
reserve z for set;
reserve R for Relation;
theorem
(R is  transitive iff (for x holds (for y holds (for z holds (([ x,y ] in R & [ y,z ] in R) implies [ x,z ] in R)))))
proof
hereby
assume R is  transitive;
then A1: R is_transitive_in ( field R ) by CKB16:def 1;
let x;
let y;
let z;
assume that
A2: [ x,y ] in R
and
A3: [ y,z ] in R;
A4: z in ( field R ) by A3,RELAT_1:15;
(x in ( field R ) & y in ( field R )) by A2,RELAT_1:15;
hence [ x,z ] in R by A1,A2,A3,A4,CKB8:def 1;
end;
assume (for x holds (for y holds (for z holds (([ x,y ] in R & [ y,z ] in R) implies [ x,z ] in R))));
then (((((x in ( field R ) & y in ( field R )) & z in ( field R )) & [ x,y ] in R) & [ y,z ] in R) implies [ x,z ] in R);
then R is_transitive_in ( field R ) by CKB8:def 1;
hence thesis by CKB16:def 1;
end;
