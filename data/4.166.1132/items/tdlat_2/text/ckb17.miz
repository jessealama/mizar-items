begin
reserve T for TopSpace;
definition
let T;
let F being (Subset-Family of T);
func Int F -> (Subset-Family of T)
means
:Def1: (for A being (Subset of T) holds (A in it iff (ex B being (Subset of T) st (A = ( Int B ) & B in F))));
existence
proof
defpred X[ (Subset of T) ]
 means
(ex B being (Subset of T) st ($1 = ( Int B ) & B in F));
thus (ex F being (Subset-Family of T) st (for A being (Subset of T) holds (A in F iff X[ A ]))) from SUBSET_1:sch 3;
end;
uniqueness
proof
let H being (Subset-Family of T),G being (Subset-Family of T);
assume A1: (for A being (Subset of T) holds (A in H iff (ex B being (Subset of T) st (A = ( Int B ) & B in F))));
assume A2: (for A being (Subset of T) holds (A in G iff (ex B being (Subset of T) st (A = ( Int B ) & B in F))));
now
let A being set;
assume A3: A in G;
then reconsider A0 = A as (Subset of T);
(ex B being (Subset of T) st (A0 = ( Int B ) & B in F)) by A2,A3;
hence A in H by A1;
end;
then A4: G c= H by TARSKI:def 3;
now
let A being set;
assume A5: A in H;
then reconsider A0 = A as (Subset of T);
(ex B being (Subset of T) st (A0 = ( Int B ) & B in F)) by A1,A5;
hence A in G by A2;
end;
then H c= G by TARSKI:def 3;
hence thesis by A4,XBOOLE_0:def 10;
end;
end;
