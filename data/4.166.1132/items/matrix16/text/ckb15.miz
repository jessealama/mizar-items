begin
reserve i for (Element of ( NAT ));
reserve j for (Element of ( NAT ));
reserve n for (Element of ( NAT ));
reserve K for Field;
registration
let K;
let n;
cluster ( 0. (K,n) ) ->  line_circulant  col_circulant;
coherence
proof
set p = ( n |-> ( 0. K ) );
A1: ( len ( 0. (K,n) ) ) = n by MATRIX_1:24;
A2: ( 0. (K,n,n) ) = ( n |-> ( n |-> ( 0. K ) ) );
set M1 = ( 0. (K,n) );
A3: ( len ( n |-> ( 0. K ) ) ) = n by CARD_1:def 7;
A4: ( Indices ( 0. (K,n) ) ) = [: ( Seg n ),( Seg n ) :] by MATRIX_1:24;
(for i,j being Nat holds ([ i,j ] in ( Indices M1 ) implies ( M1 * (i,j) ) = ( p . ( ( ( i - j ) mod ( len p ) ) + 1 ) )))
proof
let i being Nat;
let j being Nat;
assume A5: [ i,j ] in ( Indices M1 );
then ( ( ( i - j ) mod n ) + 1 ) in ( Seg n ) by A4,CKB3:1;
then ( ( ( i - j ) mod ( len p ) ) + 1 ) in ( Seg n ) by CARD_1:def 7;
then ( ( ( Seg n ) --> ( 0. K ) ) . ( ( ( i - j ) mod ( len p ) ) + 1 ) ) = ( 0. K ) by FUNCOP_1:7;
hence thesis by A2,A5,MATRIX_3:1;
end;
then A6: M1 is_col_circulant_about p by A1,A3,CKB9:def 1;
A7: ( width ( 0. (K,n) ) ) = n by MATRIX_1:24;
thus M1 is  line_circulant
proof
(for i,j being Nat holds ([ i,j ] in ( Indices M1 ) implies ( M1 * (i,j) ) = ( p . ( ( ( j - i ) mod ( len p ) ) + 1 ) )))
proof
let i being Nat;
let j being Nat;
assume A8: [ i,j ] in ( Indices M1 );
then ( ( ( j - i ) mod n ) + 1 ) in ( Seg n ) by A4,CKB3:1;
then ( ( ( Seg n ) --> ( 0. K ) ) . ( ( ( j - i ) mod n ) + 1 ) ) = ( 0. K ) by FUNCOP_1:7;
hence thesis by A3,A2,A8,MATRIX_3:1;
end;
then M1 is_line_circulant_about p by A7,A3,CKB6:def 1;
then consider p being (FinSequence of K) such that A9: (( len p ) = ( width M1 ) & M1 is_line_circulant_about p) by A7,A3;
take p;
thus thesis by A9;
end;

consider p being (FinSequence of K) such that A10: (( len p ) = ( len M1 ) & M1 is_col_circulant_about p) by A1,A3,A6;
take p;
thus thesis by A10;
end;
end;
