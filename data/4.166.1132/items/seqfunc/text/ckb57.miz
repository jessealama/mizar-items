environ
vocabularies XBOOLE_0,SUBSET_1,NUMBERS,REAL_1,FUNCT_1,NAT_1,PARTFUN1,ORDINAL1,RELAT_1,TARSKI,XREAL_0,VALUED_1,ORDINAL4,ARYTM_1,COMPLEX1,ARYTM_3,CARD_1,SEQ_1,PBOOLE,XXREAL_0,SEQ_2,ORDINAL2,FCONT_1,SEQFUNC;
notations TARSKI,XBOOLE_0,SUBSET_1,ORDINAL1,NUMBERS,XXREAL_0,XREAL_0,COMPLEX1,REAL_1,NAT_1,RELAT_1,FUNCT_1,RELSET_1,PARTFUN1,RFUNCT_1,VALUED_1,SEQ_1,SEQ_2,FCONT_1,LIMFUNC1,CKB1,CKB2,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB31,CKB32,CKB33,CKB36,CKB37;
definitions TARSKI,XBOOLE_0,VALUED_1,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB31,CKB32,CKB33,CKB36,CKB37;
theorems FUNCT_1,PARTFUN1,TARSKI,RFUNCT_1,SEQ_1,SEQ_2,SEQ_4,ZFMISC_1,RFUNCT_2,FCONT_1,FUNCT_2,RELAT_1,XREAL_0,XBOOLE_0,XBOOLE_1,XREAL_1,COMPLEX1,XXREAL_0,ORDINAL1,VALUED_1,RELSET_1,CKB3,CKB4,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15,CKB16,CKB17,CKB18,CKB19,CKB20,CKB21,CKB22,CKB23,CKB24,CKB25,CKB26,CKB27,CKB28,CKB29,CKB30,CKB31,CKB32,CKB33,CKB34,CKB35,CKB36,CKB37,CKB38,CKB39,CKB40,CKB41,CKB42,CKB43,CKB44,CKB45,CKB46,CKB47,CKB48,CKB49,CKB50,CKB51,CKB52,CKB53,CKB54,CKB55,CKB56;
schemes CLASSES1,SEQ_1,CKB5;
registrations XBOOLE_0,ORDINAL1,RELSET_1,NUMBERS,XREAL_0,MEMBERED,VALUED_0,VALUED_1,FUNCT_2,PARTFUN1;
constructors PARTFUN1,FUNCOP_1,REAL_1,COMPLEX1,SEQ_2,RFUNCT_1,FCONT_1,LIMFUNC1,VALUED_1,SEQ_1,RELSET_1,CKB2,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB31,CKB32,CKB33,CKB36,CKB37;
requirements NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve D for non empty set;
reserve H1 for (Functional_Sequence of D,( REAL ));
reserve H2 for (Functional_Sequence of D,( REAL ));
reserve x for (Element of D);
reserve X for set;
theorem
((H1 is_point_conv_on X & H2 is_point_conv_on X) implies (((((( H1 + H2 ) is_point_conv_on X & ( lim (( H1 + H2 ),X) ) = ( ( lim (H1,X) ) + ( lim (H2,X) ) )) & ( H1 - H2 ) is_point_conv_on X) & ( lim (( H1 - H2 ),X) ) = ( ( lim (H1,X) ) - ( lim (H2,X) ) )) & ( H1 (#) H2 ) is_point_conv_on X) & ( lim (( H1 (#) H2 ),X) ) = ( ( lim (H1,X) ) (#) ( lim (H2,X) ) )))
proof
assume that
A1: H1 is_point_conv_on X
and
A2: H2 is_point_conv_on X;
A3:now
let x;
assume A4: x in X;
then (( H1 # x ) is  convergent & ( H2 # x ) is  convergent) by A1,A2,CKB35:1;
then ( ( H1 # x ) + ( H2 # x ) ) is  convergent by SEQ_2:5;
hence ( ( H1 + H2 ) # x ) is  convergent by A1,A2,A4,CKB51:1;
end;
A5:now
let x;
assume A6: x in X;
then (( H1 # x ) is  convergent & ( H2 # x ) is  convergent) by A1,A2,CKB35:1;
then ( ( H1 # x ) - ( H2 # x ) ) is  convergent by SEQ_2:11;
hence ( ( H1 - H2 ) # x ) is  convergent by A1,A2,A6,CKB51:1;
end;
A7: (X common_on_dom H1 & X common_on_dom H2) by A1,A2,CKB35:1;
then X common_on_dom ( H1 + H2 ) by CKB54:1;
hence A8: ( H1 + H2 ) is_point_conv_on X by A3,CKB35:1;
A9:now
let x;
assume A10: x in ( dom ( ( lim (H1,X) ) + ( lim (H2,X) ) ) );
then A11: x in ( ( dom ( lim (H1,X) ) ) /\ ( dom ( lim (H2,X) ) ) ) by VALUED_1:def 1;
then A12: x in ( dom ( lim (H2,X) ) ) by XBOOLE_0:def 4;
A13: x in ( dom ( lim (H1,X) ) ) by A11,XBOOLE_0:def 4;
then A14: x in X by A1,CKB37:def 1;
then A15: (( H1 # x ) is  convergent & ( H2 # x ) is  convergent) by A1,A2,CKB35:1;
thus ( ( ( lim (H1,X) ) + ( lim (H2,X) ) ) . x ) = ( ( ( lim (H1,X) ) . x ) + ( ( lim (H2,X) ) . x ) ) by A10,VALUED_1:def 1
.= ( ( lim ( H1 # x ) ) + ( ( lim (H2,X) ) . x ) ) by A1,A13,CKB37:def 1
.= ( ( lim ( H1 # x ) ) + ( lim ( H2 # x ) ) ) by A2,A12,CKB37:def 1
.= ( lim ( ( H1 # x ) + ( H2 # x ) ) ) by A15,SEQ_2:6
.= ( lim ( ( H1 + H2 ) # x ) ) by A1,A2,A14,CKB51:1;
end;
A16:now
let x;
assume A17: x in X;
then (( H1 # x ) is  convergent & ( H2 # x ) is  convergent) by A1,A2,CKB35:1;
then ( ( H1 # x ) (#) ( H2 # x ) ) is  convergent by SEQ_2:14;
hence ( ( H1 (#) H2 ) # x ) is  convergent by A1,A2,A17,CKB51:1;
end;
A18:now
let x;
assume x in ( dom ( ( lim (H1,X) ) (#) ( lim (H2,X) ) ) );
then A19: x in ( ( dom ( lim (H1,X) ) ) /\ ( dom ( lim (H2,X) ) ) ) by VALUED_1:def 4;
then A20: x in ( dom ( lim (H2,X) ) ) by XBOOLE_0:def 4;
A21: x in ( dom ( lim (H1,X) ) ) by A19,XBOOLE_0:def 4;
then A22: x in X by A1,CKB37:def 1;
then A23: (( H1 # x ) is  convergent & ( H2 # x ) is  convergent) by A1,A2,CKB35:1;
thus ( ( ( lim (H1,X) ) (#) ( lim (H2,X) ) ) . x ) = ( ( ( lim (H1,X) ) . x ) * ( ( lim (H2,X) ) . x ) ) by VALUED_1:5
.= ( ( lim ( H1 # x ) ) * ( ( lim (H2,X) ) . x ) ) by A1,A21,CKB37:def 1
.= ( ( lim ( H1 # x ) ) * ( lim ( H2 # x ) ) ) by A2,A20,CKB37:def 1
.= ( lim ( ( H1 # x ) (#) ( H2 # x ) ) ) by A23,SEQ_2:15
.= ( lim ( ( H1 (#) H2 ) # x ) ) by A1,A2,A22,CKB51:1;
end;
A24:now
let x;
assume A25: x in ( dom ( ( lim (H1,X) ) - ( lim (H2,X) ) ) );
then A26: x in ( ( dom ( lim (H1,X) ) ) /\ ( dom ( lim (H2,X) ) ) ) by VALUED_1:12;
then A27: x in ( dom ( lim (H2,X) ) ) by XBOOLE_0:def 4;
A28: x in ( dom ( lim (H1,X) ) ) by A26,XBOOLE_0:def 4;
then A29: x in X by A1,CKB37:def 1;
then A30: (( H1 # x ) is  convergent & ( H2 # x ) is  convergent) by A1,A2,CKB35:1;
thus ( ( ( lim (H1,X) ) - ( lim (H2,X) ) ) . x ) = ( ( ( lim (H1,X) ) . x ) - ( ( lim (H2,X) ) . x ) ) by A25,VALUED_1:13
.= ( ( lim ( H1 # x ) ) - ( ( lim (H2,X) ) . x ) ) by A1,A28,CKB37:def 1
.= ( ( lim ( H1 # x ) ) - ( lim ( H2 # x ) ) ) by A2,A27,CKB37:def 1
.= ( lim ( ( H1 # x ) - ( H2 # x ) ) ) by A30,SEQ_2:12
.= ( lim ( ( H1 - H2 ) # x ) ) by A1,A2,A29,CKB51:1;
end;
( dom ( ( lim (H1,X) ) + ( lim (H2,X) ) ) ) = ( ( dom ( lim (H1,X) ) ) /\ ( dom ( lim (H2,X) ) ) ) by VALUED_1:def 1
.= ( X /\ ( dom ( lim (H2,X) ) ) ) by A1,CKB37:def 1
.= ( X /\ X ) by A2,CKB37:def 1
.= X;
hence ( lim (( H1 + H2 ),X) ) = ( ( lim (H1,X) ) + ( lim (H2,X) ) ) by A8,A9,CKB37:def 1;
X common_on_dom ( H1 - H2 ) by A7,CKB54:1;
hence A31: ( H1 - H2 ) is_point_conv_on X by A5,CKB35:1;
( dom ( ( lim (H1,X) ) - ( lim (H2,X) ) ) ) = ( ( dom ( lim (H1,X) ) ) /\ ( dom ( lim (H2,X) ) ) ) by VALUED_1:12
.= ( X /\ ( dom ( lim (H2,X) ) ) ) by A1,CKB37:def 1
.= ( X /\ X ) by A2,CKB37:def 1
.= X;
hence ( lim (( H1 - H2 ),X) ) = ( ( lim (H1,X) ) - ( lim (H2,X) ) ) by A31,A24,CKB37:def 1;
X common_on_dom ( H1 (#) H2 ) by A7,CKB54:1;
hence A32: ( H1 (#) H2 ) is_point_conv_on X by A16,CKB35:1;
( dom ( ( lim (H1,X) ) (#) ( lim (H2,X) ) ) ) = ( ( dom ( lim (H1,X) ) ) /\ ( dom ( lim (H2,X) ) ) ) by VALUED_1:def 4
.= ( X /\ ( dom ( lim (H2,X) ) ) ) by A1,CKB37:def 1
.= ( X /\ X ) by A2,CKB37:def 1
.= X;
hence thesis by A32,A18,CKB37:def 1;
end;
