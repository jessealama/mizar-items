begin
reserve K for Field;
reserve V for non trivial (VectSp of K);
reserve v for (Vector of V);
reserve w for (Vector of V);
theorem
(for f1,f2 being  with_eigenvalues (Function of V,V) holds (for L1,L2 being (Scalar of K) holds (((L1 is (eigenvalue of f1) & L2 is (eigenvalue of f2)) & (ex v st ((v is (eigenvector of f1,L1) & v is (eigenvector of f2,L2)) & v <> ( 0. V )))) implies ((( f1 + f2 ) is  with_eigenvalues & ( L1 + L2 ) is (eigenvalue of ( f1 + f2 ))) & (for w holds ((w is (eigenvector of f1,L1) & w is (eigenvector of f2,L2)) implies w is (eigenvector of ( f1 + f2 ),( L1 + L2 ))))))))
proof
let f1 being  with_eigenvalues (Function of V,V),f2 being  with_eigenvalues (Function of V,V);
let L1 being (Scalar of K),L2 being (Scalar of K);
set g = ( f1 + f2 );
assume that
A1: L1 is (eigenvalue of f1)
and
A2: L2 is (eigenvalue of f2);
given v such that
A3: v is (eigenvector of f1,L1)
and
A4: v is (eigenvector of f2,L2)
and
A5: v <> ( 0. V );

A6: ( g . v ) = ( ( f1 . v ) + ( f2 . v ) ) by MATRLIN:def 3
.= ( ( L1 * v ) + ( f2 . v ) ) by A1,A3,CKB15:def 1
.= ( ( L1 * v ) + ( L2 * v ) ) by A2,A4,CKB15:def 1
.= ( ( L1 + L2 ) * v ) by VECTSP_1:def 15;
hence A7: g is  with_eigenvalues by A5,CKB11:def 1;
hence A8: ( L1 + L2 ) is (eigenvalue of g) by A5,A6,CKB14:def 1;
let w;
assume that
A9: w is (eigenvector of f1,L1)
and
A10: w is (eigenvector of f2,L2);
( g . w ) = ( ( f1 . w ) + ( f2 . w ) ) by MATRLIN:def 3
.= ( ( L1 * w ) + ( f2 . w ) ) by A1,A9,CKB15:def 1
.= ( ( L1 * w ) + ( L2 * w ) ) by A2,A10,CKB15:def 1
.= ( ( L1 + L2 ) * w ) by VECTSP_1:def 15;
hence thesis by A7,A8,CKB15:def 1;
end;
