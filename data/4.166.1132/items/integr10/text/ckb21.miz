theorem
(for f being (PartFunc of ( REAL ),( REAL )) holds (for b being  real number holds ((( left_closed_halfline b ) c= ( dom f ) & f is_-infty_ext_Riemann_integrable_on b) implies (for r being Real holds (( r (#) f ) is_-infty_ext_Riemann_integrable_on b & ( infty_ext_left_integral (( r (#) f ),b) ) = ( r * ( infty_ext_left_integral (f,b) ) ))))))
proof
let f being (PartFunc of ( REAL ),( REAL ));
let b being  real number;
assume that
A1: ( left_closed_halfline b ) c= ( dom f )
and
A2: f is_-infty_ext_Riemann_integrable_on b;
(for r being Real holds (( r (#) f ) is_-infty_ext_Riemann_integrable_on b & ( infty_ext_left_integral (( r (#) f ),b) ) = ( r * ( infty_ext_left_integral (f,b) ) )))
proof
let r being Real;
consider Intf being (PartFunc of ( REAL ),( REAL )) such that A3: ( dom Intf ) = ( left_closed_halfline b ) and A4: (for x being Real holds (x in ( dom Intf ) implies ( Intf . x ) = ( integral (f,x,b) ))) and A5: Intf is  convergent_in-infty and A6: ( infty_ext_left_integral (f,b) ) = ( lim_in-infty Intf ) by A2,CKB11:def 1;
set Intfg = ( r (#) Intf );
A7: Intfg is  convergent_in-infty by A5,LIMFUNC1:89;
A8: (( dom Intfg ) = ( left_closed_halfline b ) & (for x being Real holds (x in ( dom Intfg ) implies ( Intfg . x ) = ( integral (( r (#) f ),x,b) ))))
proof
thus A9: ( dom Intfg ) = ( left_closed_halfline b ) by A3,VALUED_1:def 5;
let x being Real;
assume A10: x in ( dom Intfg );
then A11: x <= b by A9,XXREAL_1:234;
then A12: ([' x,b '] = [. x,b .] & f is_integrable_on [' x,b ']) by A2,CKB9:def 1,INTEGRA5:def 3;
A13: ([. x,b .] c= ( left_closed_halfline b ) & ( f | [' x,b '] ) is  bounded) by A2,A11,CKB9:def 1,XXREAL_1:265;
thus ( Intfg . x ) = ( r * ( Intf . x ) ) by A10,VALUED_1:def 5
.= ( r * ( integral (f,x,b) ) ) by A3,A4,A9,A10
.= ( integral (( r (#) f ),x,b) ) by A1,A11,A12,A13,INTEGRA6:10,XBOOLE_1:1;
end;
(for a being Real holds (a <= b implies (( r (#) f ) is_integrable_on [' a,b '] & ( ( r (#) f ) | [' a,b '] ) is  bounded)))
proof
let a being Real;
A14: [. a,b .] c= ( left_closed_halfline b ) by XXREAL_1:265;
assume A15: a <= b;
then A16: (f is_integrable_on [' a,b '] & ( f | [' a,b '] ) is  bounded) by A2,CKB9:def 1;
[' a,b '] = [. a,b .] by A15,INTEGRA5:def 3;
then [' a,b '] c= ( dom f ) by A1,A14,XBOOLE_1:1;
hence thesis by A16,INTEGRA6:9,RFUNCT_1:80;
end;
hence A17: ( r (#) f ) is_-infty_ext_Riemann_integrable_on b by A8,A7,CKB9:def 1;
( lim_in-infty Intfg ) = ( r * ( infty_ext_left_integral (f,b) ) ) by A5,A6,LIMFUNC1:89;
hence thesis by A8,A7,A17,CKB11:def 1;
end;
hence thesis;
end;
