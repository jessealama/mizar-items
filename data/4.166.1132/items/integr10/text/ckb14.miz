environ
vocabularies NUMBERS,SUBSET_1,XREAL_0,ORDINAL1,ARYTM_3,CARD_1,ARYTM_1,RELAT_1,XXREAL_0,REAL_1,SIN_COS,FUNCT_1,INTEGRA1,XXREAL_1,TARSKI,ORDINAL2,INTEGRA5,PARTFUN1,XXREAL_2,LIMFUNC2,LIMFUNC1,XBOOLE_0,VALUED_1,COMPLEX1,INTEGR10;
notations XBOOLE_0,SUBSET_1,ORDINAL1,NUMBERS,XREAL_0,XXREAL_0,COMPLEX1,XCMPLX_0,REAL_1,RELSET_1,FUNCT_2,RCOMP_1,PARTFUN1,SEQ_1,SEQ_2,LIMFUNC1,LIMFUNC2,MEMBERED,INTEGRA5,SIN_COS,VALUED_1,FCONT_1,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13;
definitions XCMPLX_0,MEMBERED,LIMFUNC1,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13;
theorems LIMFUNC1,LIMFUNC2,PARTFUN1,RFUNCT_1,COMPLEX1,RCOMP_1,XREAL_0,XXREAL_0,FUNCT_2,XBOOLE_1,XREAL_1,INTEGRA5,INTEGRA6,INTEGRA7,VALUED_1,XXREAL_1,SIN_COS,RELSET_1,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13;
