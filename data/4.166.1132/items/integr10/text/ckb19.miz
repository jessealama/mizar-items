begin
reserve a for (Element of ( REAL ));
reserve b for (Element of ( REAL ));
reserve r for (Element of ( REAL ));
theorem
Th9: (for f being (PartFunc of ( REAL ),( REAL )) holds (for a being  real number holds ((( right_closed_halfline a ) c= ( dom f ) & f is_+infty_ext_Riemann_integrable_on a) implies (for r being Real holds (( r (#) f ) is_+infty_ext_Riemann_integrable_on a & ( infty_ext_right_integral (( r (#) f ),a) ) = ( r * ( infty_ext_right_integral (f,a) ) ))))))
proof
let f being (PartFunc of ( REAL ),( REAL ));
let a being  real number;
assume that
A1: ( right_closed_halfline a ) c= ( dom f )
and
A2: f is_+infty_ext_Riemann_integrable_on a;
(for r being Real holds (( r (#) f ) is_+infty_ext_Riemann_integrable_on a & ( infty_ext_right_integral (( r (#) f ),a) ) = ( r * ( infty_ext_right_integral (f,a) ) )))
proof
let r being Real;
consider Intf being (PartFunc of ( REAL ),( REAL )) such that A3: ( dom Intf ) = ( right_closed_halfline a ) and A4: (for x being Real holds (x in ( dom Intf ) implies ( Intf . x ) = ( integral (f,a,x) ))) and A5: Intf is  convergent_in+infty and A6: ( infty_ext_right_integral (f,a) ) = ( lim_in+infty Intf ) by A2,CKB10:def 1;
set Intfg = ( r (#) Intf );
A7: Intfg is  convergent_in+infty by A5,LIMFUNC1:80;
A8: (( dom Intfg ) = ( right_closed_halfline a ) & (for x being Real holds (x in ( dom Intfg ) implies ( Intfg . x ) = ( integral (( r (#) f ),a,x) ))))
proof
thus A9: ( dom Intfg ) = ( right_closed_halfline a ) by A3,VALUED_1:def 5;
let x being Real;
assume A10: x in ( dom Intfg );
then A11: a <= x by A9,XXREAL_1:236;
then A12: ([' a,x '] = [. a,x .] & f is_integrable_on [' a,x ']) by A2,CKB8:def 1,INTEGRA5:def 3;
A13: ([. a,x .] c= ( right_closed_halfline a ) & ( f | [' a,x '] ) is  bounded) by A2,A11,CKB8:def 1,XXREAL_1:251;
thus ( Intfg . x ) = ( r * ( Intf . x ) ) by A10,VALUED_1:def 5
.= ( r * ( integral (f,a,x) ) ) by A3,A4,A9,A10
.= ( integral (( r (#) f ),a,x) ) by A1,A11,A12,A13,INTEGRA6:10,XBOOLE_1:1;
end;
(for b being Real holds (a <= b implies (( r (#) f ) is_integrable_on [' a,b '] & ( ( r (#) f ) | [' a,b '] ) is  bounded)))
proof
let b being Real;
A14: [. a,b .] c= ( right_closed_halfline a ) by XXREAL_1:251;
assume A15: a <= b;
then A16: (f is_integrable_on [' a,b '] & ( f | [' a,b '] ) is  bounded) by A2,CKB8:def 1;
[' a,b '] = [. a,b .] by A15,INTEGRA5:def 3;
then [' a,b '] c= ( dom f ) by A1,A14,XBOOLE_1:1;
hence thesis by A16,INTEGRA6:9,RFUNCT_1:80;
end;
hence A17: ( r (#) f ) is_+infty_ext_Riemann_integrable_on a by A8,A7,CKB8:def 1;
( lim_in+infty Intfg ) = ( r * ( infty_ext_right_integral (f,a) ) ) by A5,A6,LIMFUNC1:80;
hence thesis by A8,A7,A17,CKB10:def 1;
end;
hence thesis;
end;
