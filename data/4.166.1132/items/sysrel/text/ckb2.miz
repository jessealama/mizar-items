environ
vocabularies RELAT_1,XBOOLE_0,ZFMISC_1,TARSKI,SUBSET_1,SYSREL;
notations TARSKI,XBOOLE_0,ZFMISC_1,SUBSET_1,RELAT_1;
definitions TARSKI,XBOOLE_0,RELAT_1;
theorems ZFMISC_1,RELAT_1,TARSKI,XBOOLE_0,XBOOLE_1,CKB1;
registrations XBOOLE_0,RELAT_1;
constructors TARSKI,SUBSET_1,RELAT_1;
requirements BOOLE,SUBSET;
begin
reserve X for set;
reserve Y for set;
reserve R for Relation;
theorem
Th13: (( dom ( R /\ [: X,Y :] ) ) c= X & ( rng ( R /\ [: X,Y :] ) ) c= Y)
proof
per cases ;
suppose (X = ( {} ) or Y = ( {} ));

then ( R /\ [: X,Y :] ) = ( R /\ ( {} ) ) by ZFMISC_1:90
.= ( {} );
hence thesis by RELAT_1:38,XBOOLE_1:2;
end;
suppose A1: (X <> ( {} ) & Y <> ( {} ));

( rng ( R /\ [: X,Y :] ) ) c= ( ( rng R ) /\ ( rng [: X,Y :] ) ) by RELAT_1:13;
then A2: ( rng ( R /\ [: X,Y :] ) ) c= ( ( rng R ) /\ Y ) by A1,CKB1:1;
( dom ( R /\ [: X,Y :] ) ) c= ( ( dom R ) /\ ( dom [: X,Y :] ) ) by RELAT_1:2;
then A3: ( dom ( R /\ [: X,Y :] ) ) c= ( ( dom R ) /\ X ) by A1,CKB1:1;
( ( dom R ) /\ X ) c= X by XBOOLE_1:17;
hence ( dom ( R /\ [: X,Y :] ) ) c= X by A3,XBOOLE_1:1;
( ( rng R ) /\ Y ) c= Y by XBOOLE_1:17;
hence ( rng ( R /\ [: X,Y :] ) ) c= Y by A2,XBOOLE_1:1;
end;
end;
