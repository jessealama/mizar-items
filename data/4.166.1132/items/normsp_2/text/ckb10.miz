begin
reserve X for RealNormSpace;
theorem
Th4: (for X being RealNormSpace holds (for S being (sequence of X) holds (for St being (sequence of ( MetricSpaceNorm X )) holds (for x being (Point of X) holds (for xt being (Point of ( MetricSpaceNorm X )) holds ((S = St & x = xt) implies (St is_convergent_in_metrspace_to xt iff (for r being Real holds (( 0 ) < r implies (ex m being (Element of ( NAT )) st (for n being (Element of ( NAT )) holds (m <= n implies ||. ( ( S . n ) - x ) .|| < r))))))))))))
proof
let X being RealNormSpace;
let S being (sequence of X);
let St being (sequence of ( MetricSpaceNorm X ));
let x being (Point of X);
let xt being (Point of ( MetricSpaceNorm X ));
assume A1: (S = St & x = xt);
A2:now
assume A3: (for r being Real holds (( 0 ) < r implies (ex m being (Element of ( NAT )) st (for n being (Element of ( NAT )) holds (m <= n implies ||. ( ( S . n ) - x ) .|| < r)))));
now
let r being Real;
assume r > ( 0 );
then consider m being (Element of ( NAT )) such that A4: (for n being (Element of ( NAT )) holds (m <= n implies ||. ( ( S . n ) - x ) .|| < r)) by A3;
take m;
let n being (Element of ( NAT ));
assume m <= n;
then ||. ( ( S . n ) - x ) .|| < r by A4;
hence ( dist (( St . n ),xt) ) < r by A1,CKB2:def 1;
end;
hence St is_convergent_in_metrspace_to xt by METRIC_6:def 2;
end;
now
assume A5: St is_convergent_in_metrspace_to xt;
let r being Real;
assume ( 0 ) < r;
then consider m being (Element of ( NAT )) such that A6: (for n being (Element of ( NAT )) holds (m <= n implies ( dist (( St . n ),xt) ) < r)) by A5,METRIC_6:def 2;
take m;
let n being (Element of ( NAT ));
assume m <= n;
then ( dist (( St . n ),xt) ) < r by A6;
hence ||. ( ( S . n ) - x ) .|| < r by A1,CKB2:def 1;
end;
hence thesis by A2;
end;
