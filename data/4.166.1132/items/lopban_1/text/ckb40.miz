theorem
Th24: (for X being RealNormSpace holds (for seq being (sequence of X) holds (for g being (Point of X) holds ((seq is  convergent & ( lim seq ) = g) implies (||. seq .|| is  convergent & ( lim ||. seq .|| ) = ||. g .||)))))
proof
let X being RealNormSpace;
let seq being (sequence of X);
let g being (Point of X);
assume that
A1: seq is  convergent
and
A2: ( lim seq ) = g;
A3:now
let r being  real number;
assume A4: r > ( 0 );
r is Real by XREAL_0:def 1;
then consider m1 being (Element of ( NAT )) such that A5: (for n being (Element of ( NAT )) holds (n >= m1 implies ||. ( ( seq . n ) - g ) .|| < r)) by A1,A2,A4,NORMSP_1:def 7;
take k = m1;
now
let n being (Element of ( NAT ));
assume n >= k;
then A6: ||. ( ( seq . n ) - g ) .|| < r by A5;
( abs ( ||. ( seq . n ) .|| - ||. g .|| ) ) <= ||. ( ( seq . n ) - g ) .|| by NORMSP_1:9;
then ( abs ( ||. ( seq . n ) .|| - ||. g .|| ) ) < r by A6,XXREAL_0:2;
hence ( abs ( ( ||. seq .|| . n ) - ||. g .|| ) ) < r by NORMSP_0:def 4;
end;
hence (for n being (Element of ( NAT )) holds (k <= n implies ( abs ( ( ||. seq .|| . n ) - ||. g .|| ) ) < r));
end;
||. seq .|| is  convergent by A1,NORMSP_1:23;
hence thesis by A3,SEQ_2:def 7;
end;
