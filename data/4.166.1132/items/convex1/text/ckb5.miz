begin
theorem
(for V being RealLinearSpace holds (for M,N being (Subset of V) holds ((M is  convex & N is  convex) implies ( M - N ) is  convex)))
proof
let V being RealLinearSpace;
let M being (Subset of V),N being (Subset of V);
assume A1: (M is  convex & N is  convex);
(for u,v being (VECTOR of V) holds (for r being Real holds ((((( 0 ) < r & r < 1) & u in ( M - N )) & v in ( M - N )) implies ( ( r * u ) + ( ( 1 - r ) * v ) ) in ( M - N ))))
proof
let u being (VECTOR of V),v being (VECTOR of V);
let r being Real;
assume that
A2: (( 0 ) < r & r < 1)
and
A3: u in ( M - N )
and
A4: v in ( M - N );
v in { ( x - y ) where x is (Element of V),y is (Element of V): (x in M & y in N) } by A4,RUSUB_5:def 2;
then consider x2 being (Element of V),y2 being (Element of V) such that A5: v = ( x2 - y2 ) and A6: (x2 in M & y2 in N);
u in { ( x - y ) where x is (Element of V),y is (Element of V): (x in M & y in N) } by A3,RUSUB_5:def 2;
then consider x1 being (Element of V),y1 being (Element of V) such that A7: u = ( x1 - y1 ) and A8: (x1 in M & y1 in N);
A9: ( ( r * u ) + ( ( 1 - r ) * v ) ) = ( ( ( r * x1 ) - ( r * y1 ) ) + ( ( 1 - r ) * ( x2 - y2 ) ) ) by A7,A5,RLVECT_1:34
.= ( ( ( r * x1 ) - ( r * y1 ) ) + ( ( ( 1 - r ) * x2 ) - ( ( 1 - r ) * y2 ) ) ) by RLVECT_1:34
.= ( ( ( ( r * x1 ) - ( r * y1 ) ) + ( ( 1 - r ) * x2 ) ) - ( ( 1 - r ) * y2 ) ) by RLVECT_1:def 3
.= ( ( ( r * x1 ) - ( ( r * y1 ) - ( ( 1 - r ) * x2 ) ) ) - ( ( 1 - r ) * y2 ) ) by RLVECT_1:29
.= ( ( ( r * x1 ) + ( ( ( 1 - r ) * x2 ) + ( - ( r * y1 ) ) ) ) - ( ( 1 - r ) * y2 ) ) by RLVECT_1:33
.= ( ( ( ( r * x1 ) + ( ( 1 - r ) * x2 ) ) + ( - ( r * y1 ) ) ) - ( ( 1 - r ) * y2 ) ) by RLVECT_1:def 3
.= ( ( ( r * x1 ) + ( ( 1 - r ) * x2 ) ) + ( ( - ( r * y1 ) ) - ( ( 1 - r ) * y2 ) ) ) by RLVECT_1:def 3
.= ( ( ( r * x1 ) + ( ( 1 - r ) * x2 ) ) - ( ( r * y1 ) + ( ( 1 - r ) * y2 ) ) ) by RLVECT_1:30;
(( ( r * x1 ) + ( ( 1 - r ) * x2 ) ) in M & ( ( r * y1 ) + ( ( 1 - r ) * y2 ) ) in N) by A1,A2,A8,A6,CKB2:def 1;
then ( ( r * u ) + ( ( 1 - r ) * v ) ) in { ( x - y ) where x is (Element of V),y is (Element of V): (x in M & y in N) } by A9;
hence thesis by RUSUB_5:def 2;
end;
hence thesis by CKB2:def 1;
end;
