let j;
assume that
A8: (j <> 1 & j <> j0)
and
A9: (((1 <= i & i <= n) & 1 <= j) & j <= n);
A10: [ i,j ] in ( Indices A ) by A9,MATRIX_1:37;
[ j,i ] in ( Indices ( ( SwapDiagonal (K,n,j0) ) * ( A @ ) ) ) by A9,MATRIX_1:37;
