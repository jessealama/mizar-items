((not ((i = 1 or i = i0) & (j = 1 or j = i0))) implies ((i = j implies ( A * (i,j) ) = ( 1. K )) & (i <> j implies ( A * (i,j) ) = ( 0. K )))) by A2,A5,A9,A8,A11;
