registrations FUNCT_1,ORDINAL1,RELSET_1,NUMBERS,XREAL_0,MEMBERED,VALUED_0,VALUED_1,FUNCT_2,ZFMISC_1,CKB17,CKB30,CKB31,CKB32,CKB35,CKB36,CKB37,CKB38,CKB39,CKB40;
constructors PARTFUN1,REAL_1,NAT_1,COMPLEX1,SEQ_2,SEQM_3,SEQ_4,RCOMP_1,PARTFUN2,RFUNCT_1,VALUED_1,SEQ_1,RECDEF_1,XXREAL_2,ZFMISC_1,RELSET_1,CKB29;
requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve X for set;
reserve Y for set;
reserve r for (Element of ( REAL ));
reserve r1 for (Element of ( REAL ));
reserve r2 for (Element of ( REAL ));
reserve p for (Element of ( REAL ));
reserve h1 for (PartFunc of ( REAL ),( REAL ));
reserve h2 for (PartFunc of ( REAL ),( REAL ));
theorem
(((( h1 | X ) is  increasing & ( h2 | Y ) is  constant) implies ( ( h1 + h2 ) | ( X /\ Y ) ) is  increasing) & ((( h1 | X ) is  decreasing & ( h2 | Y ) is  constant) implies ( ( h1 + h2 ) | ( X /\ Y ) ) is  decreasing))
proof
thus ((( h1 | X ) is  increasing & ( h2 | Y ) is  constant) implies ( ( h1 + h2 ) | ( X /\ Y ) ) is  increasing)
proof
assume that
A1: ( h1 | X ) is  increasing
and
A2: ( h2 | Y ) is  constant;
consider r such that A3: (for p holds (p in ( Y /\ ( dom h2 ) ) implies ( h2 . p ) = r)) by A2,PARTFUN2:57;
now
let r1;
let r2;
assume that
A4: r1 in ( ( X /\ Y ) /\ ( dom ( h1 + h2 ) ) )
and
A5: r2 in ( ( X /\ Y ) /\ ( dom ( h1 + h2 ) ) )
and
A6: r1 < r2;
(r1 in ( X /\ ( dom h1 ) ) & r2 in ( X /\ ( dom h1 ) )) by A4,A5,CKB51:1;
then ( h1 . r1 ) < ( h1 . r2 ) by A1,A6,CKB25:1;
then A7: ( ( h1 . r1 ) + r ) < ( ( h1 . r2 ) + r ) by XREAL_1:6;
r1 in ( Y /\ ( dom h2 ) ) by A4,CKB51:1;
then A8: ( ( h1 . r1 ) + ( h2 . r1 ) ) < ( ( h1 . r2 ) + r ) by A3,A7;
A9: r1 in ( dom ( h1 + h2 ) ) by A4,XBOOLE_0:def 4;
r2 in ( Y /\ ( dom h2 ) ) by A5,CKB51:1;
then ( ( h1 . r1 ) + ( h2 . r1 ) ) < ( ( h1 . r2 ) + ( h2 . r2 ) ) by A3,A8;
then A10: ( ( h1 + h2 ) . r1 ) < ( ( h1 . r2 ) + ( h2 . r2 ) ) by A9,VALUED_1:def 1;
r2 in ( dom ( h1 + h2 ) ) by A5,XBOOLE_0:def 4;
hence ( ( h1 + h2 ) . r1 ) < ( ( h1 + h2 ) . r2 ) by A10,VALUED_1:def 1;
end;
hence thesis by CKB25:1;
end;

assume that
A11: ( h1 | X ) is  decreasing
and
A12: ( h2 | Y ) is  constant;
consider r such that A13: (for p holds (p in ( Y /\ ( dom h2 ) ) implies ( h2 . p ) = r)) by A12,PARTFUN2:57;
now
let r1;
let r2;
assume that
A14: r1 in ( ( X /\ Y ) /\ ( dom ( h1 + h2 ) ) )
and
A15: r2 in ( ( X /\ Y ) /\ ( dom ( h1 + h2 ) ) )
and
A16: r1 < r2;
(r1 in ( X /\ ( dom h1 ) ) & r2 in ( X /\ ( dom h1 ) )) by A14,A15,CKB51:1;
then ( h1 . r2 ) < ( h1 . r1 ) by A11,A16,CKB26:1;
then A17: ( ( h1 . r2 ) + r ) < ( ( h1 . r1 ) + r ) by XREAL_1:6;
r2 in ( Y /\ ( dom h2 ) ) by A15,CKB51:1;
then A18: ( ( h1 . r2 ) + ( h2 . r2 ) ) < ( ( h1 . r1 ) + r ) by A13,A17;
A19: r2 in ( dom ( h1 + h2 ) ) by A15,XBOOLE_0:def 4;
r1 in ( Y /\ ( dom h2 ) ) by A14,CKB51:1;
then ( ( h1 . r2 ) + ( h2 . r2 ) ) < ( ( h1 . r1 ) + ( h2 . r1 ) ) by A13,A18;
then A20: ( ( h1 + h2 ) . r2 ) < ( ( h1 . r1 ) + ( h2 . r1 ) ) by A19,VALUED_1:def 1;
r1 in ( dom ( h1 + h2 ) ) by A14,XBOOLE_0:def 4;
hence ( ( h1 + h2 ) . r2 ) < ( ( h1 + h2 ) . r1 ) by A20,VALUED_1:def 1;
end;
hence thesis by CKB26:1;
end;
