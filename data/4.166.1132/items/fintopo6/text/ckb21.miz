begin
reserve FT for non empty RelStr;
theorem
(for A being (Subset of FT) holds (A is  open iff ((for z being (Element of FT) holds (( U_FT z ) c= A implies z in A)) & (for x being (Element of FT) holds (x in A implies ( U_FT x ) c= A)))))
proof
let A being (Subset of FT);
hereby
assume A is  open;
then A1: A = ( A ^i ) by FIN_TOPO:def 14;
hence (for z being (Element of FT) holds (( U_FT z ) c= A implies z in A));
(for x being (Element of FT) holds (x in A implies ( U_FT x ) c= A))
proof
let x being (Element of FT);
assume x in A;
then (ex y being (Element of FT) st (x = y & ( U_FT y ) c= A)) by A1;
hence thesis;
end;
hence (for x being (Element of FT) holds (x in A implies ( U_FT x ) c= A));
end;
assume that
A2: (for z being (Element of FT) holds (( U_FT z ) c= A implies z in A))
and
A3: (for x being (Element of FT) holds (x in A implies ( U_FT x ) c= A));
A4: A c= { y where y is (Element of FT): ( U_FT y ) c= A }
proof
let u being set;
assume A5: u in A;
then reconsider y2 = u as (Element of FT);
( U_FT y2 ) c= A by A3,A5;
hence thesis;
end;
{ y where y is (Element of FT): ( U_FT y ) c= A } c= A
proof
let u being set;
assume u in { y where y is (Element of FT): ( U_FT y ) c= A };
then (ex y being (Element of FT) st (y = u & ( U_FT y ) c= A));
hence thesis by A2;
end;
then A = ( A ^i ) by A4,XBOOLE_0:def 10;
hence thesis by FIN_TOPO:def 14;
end;
