begin
theorem
(for S,T being  with_infima Poset holds (for f being (Function of S,T) holds (for x,y being (Element of S) holds (f preserves_inf_of { x,y } iff ( f . ( x "/\" y ) ) = ( ( f . x ) "/\" ( f . y ) )))))
proof
let S being  with_infima Poset,T being  with_infima Poset;
let f being (Function of S,T);
let x being (Element of S),y being (Element of S);
A1: ( dom f ) = (the carrier of S) by FUNCT_2:def 1;
hereby
A2:  ex_inf_of { x,y },S by YELLOW_0:21;
assume A3: f preserves_inf_of { x,y };
thus ( f . ( x "/\" y ) ) = ( f . ( inf { x,y } ) ) by YELLOW_0:40
.= ( inf ( f .: { x,y } ) ) by A3,A2,WAYBEL_0:def 30
.= ( inf { ( f . x ),( f . y ) } ) by A1,FUNCT_1:60
.= ( ( f . x ) "/\" ( f . y ) ) by YELLOW_0:40;
end;
assume A4: ( f . ( x "/\" y ) ) = ( ( f . x ) "/\" ( f . y ) );
assume  ex_inf_of { x,y },S;
( f .: { x,y } ) = { ( f . x ),( f . y ) } by A1,FUNCT_1:60;
hence  ex_inf_of ( f .: { x,y } ),T by YELLOW_0:21;
thus ( inf ( f .: { x,y } ) ) = ( inf { ( f . x ),( f . y ) } ) by A1,FUNCT_1:60
.= ( ( f . x ) "/\" ( f . y ) ) by YELLOW_0:40
.= ( f . ( inf { x,y } ) ) by A4,YELLOW_0:40;
end;
