requirements BOOLE,SUBSET;
begin
reserve x for set;
reserve y for set;
definition
let U1 being Universal_Algebra;
let U2 being Universal_Algebra;
let f being (Function of U1,U2);
assume A1: f is_homomorphism U1,U2;
func HomQuot f -> (Function of ( QuotUnivAlg (U1,( Cng f )) ),U2)
means
:Def17: (for a being (Element of U1) holds ( it . ( Class (( Cng f ),a) ) ) = ( f . a ));
existence
proof
set qa = ( QuotUnivAlg (U1,( Cng f )) );
set cqa = (the carrier of qa);
set u1 = (the carrier of U1);
set u2 = (the carrier of U2);
defpred P[ set,set ]
 means
(for a being (Element of u1) holds ($1 = ( Class (( Cng f ),a) ) implies $2 = ( f . a )));
A2: (for x holds (x in cqa implies (ex y st (y in u2 & P[ x,y ]))))
proof
let x;
assume A3: x in cqa;
then reconsider x1 = x as (Subset of u1);
consider a being set such that A4: a in u1 and A5: x1 = ( Class (( Cng f ),a) ) by A3,EQREL_1:def 3;
reconsider a as (Element of u1) by A4;
take y = ( f . a );
thus y in u2;
let b being (Element of u1);
assume x = ( Class (( Cng f ),b) );
then b in ( Class (( Cng f ),a) ) by A5,EQREL_1:23;
then [ b,a ] in ( Cng f ) by EQREL_1:19;
hence thesis by A1,CKB32:def 1;
end;
consider F being Function such that A6: ((( dom F ) = cqa & ( rng F ) c= u2) & (for x holds (x in cqa implies P[ x,( F . x ) ]))) from FUNCT_1:sch 5(A2);
reconsider F as (Function of qa,U2) by A6,FUNCT_2:def 1,RELSET_1:4;
take F;
let a being (Element of u1);
( Class (( Cng f ),a) ) in ( Class ( Cng f ) ) by EQREL_1:def 3;
hence thesis by A6;
end;
uniqueness
proof
set qa = ( QuotUnivAlg (U1,( Cng f )) );
set cqa = (the carrier of qa);
set u1 = (the carrier of U1);
let F being (Function of qa,U2),G being (Function of qa,U2);
assume that
A7: (for a being (Element of u1) holds ( F . ( Class (( Cng f ),a) ) ) = ( f . a ))
and
A8: (for a being (Element of u1) holds ( G . ( Class (( Cng f ),a) ) ) = ( f . a ));
let x being (Element of cqa);
x in cqa;
then reconsider x1 = x as (Subset of u1);
consider a being set such that A9: (a in u1 & x1 = ( Class (( Cng f ),a) )) by EQREL_1:def 3;
thus ( F . x ) = ( f . a ) by A7,A9
.= ( G . x ) by A8,A9;
end;
end;
