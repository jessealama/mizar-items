begin
reserve X for set;
reserve x for set;
reserve y for set;
reserve z for set;
reserve EqR1 for (Equivalence_Relation of X);
reserve EqR2 for (Equivalence_Relation of X);
theorem
Th37: (for E being (Equivalence_Relation of X) holds (E = ( EqR1 \/ EqR2 ) implies (for x holds (x in X implies (( Class (E,x) ) = ( Class (EqR1,x) ) or ( Class (E,x) ) = ( Class (EqR2,x) ))))))
proof
let E being (Equivalence_Relation of X);
assume that
A1: E = ( EqR1 \/ EqR2 );
(for x holds (x in X implies (( Class (E,x) ) = ( Class (EqR1,x) ) or ( Class (E,x) ) = ( Class (EqR2,x) ))))
proof
let x;
assume that
x in X;
assume that
A2: (not ( Class (E,x) ) = ( Class (EqR1,x) ))
and
A3: (not ( Class (E,x) ) = ( Class (EqR2,x) ));
consider y such that A4: ((y in ( Class (E,x) ) & (not y in ( Class (EqR1,x) ))) or (y in ( Class (EqR1,x) ) & (not y in ( Class (E,x) )))) by A2,TARSKI:1;
A5:now
assume that
A6: y in ( Class (EqR1,x) )
and
A7: (not y in ( Class (E,x) ));
[ y,x ] in EqR1 by A6,CKB32:1;
then [ y,x ] in E by A1,XBOOLE_0:def 3;
hence contradiction by A7,CKB32:1;
end;
then A8: [ y,x ] in E by A4,CKB32:1;
consider z such that A9: ((z in ( Class (E,x) ) & (not z in ( Class (EqR2,x) ))) or (z in ( Class (EqR2,x) ) & (not z in ( Class (E,x) )))) by A3,TARSKI:1;
A10:now
assume that
A11: z in ( Class (EqR2,x) )
and
A12: (not z in ( Class (E,x) ));
[ z,x ] in EqR2 by A11,CKB32:1;
then [ z,x ] in E by A1,XBOOLE_0:def 3;
hence contradiction by A12,CKB32:1;
end;
then A13: [ z,x ] in E by A9,CKB32:1;
(not [ z,x ] in EqR2) by A9,A10,CKB32:1;
then A14: [ z,x ] in EqR1 by A1,A13,XBOOLE_0:def 3;
A15:now
assume [ y,z ] in EqR1;
then A16: [ z,y ] in EqR1 by CKB14:1;
[ x,z ] in EqR1 by A14,CKB14:1;
then [ x,y ] in EqR1 by A16,CKB15:1;
then [ y,x ] in EqR1 by CKB14:1;
hence contradiction by A4,A5,CKB32:1;
end;
(not [ y,x ] in EqR1) by A4,A5,CKB32:1;
then A17: [ y,x ] in EqR2 by A1,A8,XBOOLE_0:def 3;
A18:now
assume A19: [ y,z ] in EqR2;
[ x,y ] in EqR2 by A17,CKB14:1;
then [ x,z ] in EqR2 by A19,CKB15:1;
then [ z,x ] in EqR2 by CKB14:1;
hence contradiction by A9,A10,CKB32:1;
end;
[ x,z ] in E by A13,CKB14:1;
then [ y,z ] in E by A8,CKB15:1;
hence contradiction by A1,A18,A15,XBOOLE_0:def 3;
end;
hence thesis;
end;
