A3: (for A holds (A in F2 iff (ex x st (x in X & A = ( Class (EqR,x) )))));
now
let A;
(A in F1 iff (ex x st (x in X & A = ( Class (EqR,x) )))) by A2;
hence (A in F1 iff A in F2) by A3;
end;
hence thesis by SETFAM_1:31;
