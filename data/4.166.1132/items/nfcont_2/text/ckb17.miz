theorem
Lm1: ((((((((for X being RealNormSpace holds (for x,y being (Point of X) holds (||. ( x - y ) .|| = ( 0 ) iff x = y))) & (for X being RealNormSpace holds (for x,y being (Point of X) holds (||. ( x - y ) .|| <> ( 0 ) iff x <> y)))) & (for X being RealNormSpace holds (for x,y being (Point of X) holds (||. ( x - y ) .|| > ( 0 ) iff x <> y)))) & (for X being RealNormSpace holds (for x,y being (Point of X) holds ||. ( x - y ) .|| = ||. ( y - x ) .||))) & (for X being RealNormSpace holds (for x,y,z being (Point of X) holds (for e being Real holds (e > ( 0 ) implies ((||. ( x - z ) .|| < ( e / 2 ) & ||. ( z - y ) .|| < ( e / 2 )) implies ||. ( x - y ) .|| < e)))))) & (for X being RealNormSpace holds (for x,y,z being (Point of X) holds (for e being Real holds (e > ( 0 ) implies ((||. ( x - z ) .|| < ( e / 2 ) & ||. ( y - z ) .|| < ( e / 2 )) implies ||. ( x - y ) .|| < e)))))) & (for X being RealNormSpace holds (for x being (Point of X) holds ((for e being Real holds (e > ( 0 ) implies ||. x .|| < e)) implies x = ( 0. X ))))) & (for X being RealNormSpace holds (for x,y being (Point of X) holds ((for e being Real holds (e > ( 0 ) implies ||. ( x - y ) .|| < e)) implies x = y))))
proof
A1: (for X being RealNormSpace holds (for x,y,z being (Point of X) holds (for e being Real holds (e > ( 0 ) implies ((||. ( x - z ) .|| < ( e / 2 ) & ||. ( z - y ) .|| < ( e / 2 )) implies ||. ( x - y ) .|| < e)))))
proof
let X being RealNormSpace;
let x being (Point of X);
let y being (Point of X);
let z being (Point of X);
let e being Real;
assume that
e > ( 0 );
assume (||. ( x - z ) .|| < ( e / 2 ) & ||. ( z - y ) .|| < ( e / 2 ));
then ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) < ( ( e / 2 ) + ( e / 2 ) ) by XREAL_1:8;
then ( ||. ( x - y ) .|| + ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) ) < ( ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) + e ) by NORMSP_1:10,XREAL_1:8;
then ( ( ||. ( x - y ) .|| + ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) ) + ( - ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) ) ) < ( ( e + ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) ) + ( - ( ||. ( x - z ) .|| + ||. ( z - y ) .|| ) ) ) by XREAL_1:8;
hence thesis;
end;
A2: (for X being RealNormSpace holds (for x,y,z being (Point of X) holds (for e being Real holds (e > ( 0 ) implies ((||. ( x - z ) .|| < ( e / 2 ) & ||. ( y - z ) .|| < ( e / 2 )) implies ||. ( x - y ) .|| < e)))))
proof
let X being RealNormSpace;
let x being (Point of X);
let y being (Point of X);
let z being (Point of X);
let e being Real;
assume that
A3: e > ( 0 );
assume that
A4: ||. ( x - z ) .|| < ( e / 2 )
and
A5: ||. ( y - z ) .|| < ( e / 2 );
||. ( - ( y - z ) ) .|| < ( e / 2 ) by A5,NORMSP_1:2;
then ||. ( z - y ) .|| < ( e / 2 ) by RLVECT_1:33;
hence thesis by A1,A3,A4;
end;
A6: (for X being RealNormSpace holds (for x,y being (Point of X) holds (||. ( x - y ) .|| > ( 0 ) iff x <> y)))
proof
let X being RealNormSpace;
let x being (Point of X);
let y being (Point of X);
(( 0 ) < ||. ( x - y ) .|| implies ( x - y ) <> ( 0. X )) by NORMSP_0:def 6;
hence (( 0 ) < ||. ( x - y ) .|| implies x <> y) by RLVECT_1:15;
now
assume x <> y;
then ( 0 ) <> ||. ( x - y ) .|| by NORMSP_1:11;
hence ( 0 ) < ||. ( x - y ) .|| by NORMSP_1:4;
end;
hence thesis;
end;
A7: (for X being RealNormSpace holds (for x,y being (Point of X) holds ||. ( x - y ) .|| = ||. ( y - x ) .||))
proof
let X being RealNormSpace;
let x being (Point of X);
let y being (Point of X);
thus ||. ( x - y ) .|| = ||. ( - ( x - y ) ) .|| by NORMSP_1:2
.= ||. ( y - x ) .|| by RLVECT_1:33;
end;
A8: (for X being RealNormSpace holds (for x being (Point of X) holds ((for e being Real holds (e > ( 0 ) implies ||. x .|| < e)) implies x = ( 0. X ))))
proof
let X being RealNormSpace;
let x being (Point of X);
assume that
A9: (for e being Real holds (e > ( 0 ) implies ||. x .|| < e));
now
assume x <> ( 0. X );
then ( 0 ) <> ||. x .|| by NORMSP_0:def 5;
then ( 0 ) < ||. x .|| by NORMSP_1:4;
hence contradiction by A9;
end;
hence thesis;
end;
(for X being RealNormSpace holds (for x,y being (Point of X) holds ((for e being Real holds (e > ( 0 ) implies ||. ( x - y ) .|| < e)) implies x = y)))
proof
let X being RealNormSpace;
