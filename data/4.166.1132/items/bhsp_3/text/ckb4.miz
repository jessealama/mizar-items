environ
vocabularies NUMBERS,BHSP_1,PRE_TOPC,REAL_1,NAT_1,ORDINAL2,SEQ_1,SUBSET_1,SUPINF_2,XXREAL_0,CARD_1,METRIC_1,FUNCT_1,ARYTM_3,NORMSP_1,ARYTM_1,RELAT_1,COMPLEX1,SEQ_2,XXREAL_2,XREAL_0,ORDINAL1,VALUED_0,REWRITE1,BHSP_3;
notations ORDINAL1,SUBSET_1,NUMBERS,XREAL_0,COMPLEX1,REAL_1,SEQ_1,NAT_1,VALUED_0,STRUCT_0,PRE_TOPC,RLVECT_1,VFUNCT_1,NORMSP_1,BHSP_1,BHSP_2,XXREAL_0,CKB1;
definitions CKB1;
theorems NAT_1,SEQM_3,FUNCT_2,RLVECT_1,BHSP_1,BHSP_2,NORMSP_1,XREAL_0,XCMPLX_0,XREAL_1,COMPLEX1,XXREAL_0,ORDINAL1,VALUED_0,CKB1,CKB2,CKB3;
schemes NAT_1;
registrations XBOOLE_0,ORDINAL1,RELSET_1,NUMBERS,XXREAL_0,XREAL_0,NAT_1,MEMBERED,STRUCT_0,VALUED_0,VFUNCT_1,FUNCT_2;
constructors PARTFUN1,FUNCT_3,XXREAL_0,REAL_1,COMPLEX1,SEQ_1,SEQM_3,BHSP_2,VALUED_1,RECDEF_1,NAT_1,RELSET_1,VFUNCT_1,CKB1;
requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve X for RealUnitarySpace;
reserve r for Real;
reserve seq1 for (sequence of X);
reserve seq2 for (sequence of X);
reserve n for (Element of ( NAT ));
reserve m for (Element of ( NAT ));
reserve m1 for (Element of ( NAT ));
reserve m2 for (Element of ( NAT ));
theorem
((seq1 is  Cauchy & seq2 is  Cauchy) implies ( seq1 + seq2 ) is  Cauchy)
proof
assume that
A1: seq1 is  Cauchy
and
A2: seq2 is  Cauchy;
let r;
assume r > ( 0 );
then A3: ( r / 2 ) > ( 0 ) by XREAL_1:215;
then consider m1 such that A4: (for n holds (for m holds ((n >= m1 & m >= m1) implies ( dist (( seq1 . n ),( seq1 . m )) ) < ( r / 2 )))) by A1,CKB1:def 1;
consider m2 such that A5: (for n holds (for m holds ((n >= m2 & m >= m2) implies ( dist (( seq2 . n ),( seq2 . m )) ) < ( r / 2 )))) by A2,A3,CKB1:def 1;
take k = ( m1 + m2 );
let n;
let m;
assume that
A6: (n >= k & m >= k);
k >= m2 by NAT_1:12;
then (n >= m2 & m >= m2) by A6,XXREAL_0:2;
then A7: ( dist (( seq2 . n ),( seq2 . m )) ) < ( r / 2 ) by A5;
( dist (( ( seq1 + seq2 ) . n ),( ( seq1 + seq2 ) . m )) ) = ( dist (( ( seq1 . n ) + ( seq2 . n ) ),( ( seq1 + seq2 ) . m )) ) by NORMSP_1:def 2
.= ( dist (( ( seq1 . n ) + ( seq2 . n ) ),( ( seq1 . m ) + ( seq2 . m ) )) ) by NORMSP_1:def 2;
then A8: ( dist (( ( seq1 + seq2 ) . n ),( ( seq1 + seq2 ) . m )) ) <= ( ( dist (( seq1 . n ),( seq1 . m )) ) + ( dist (( seq2 . n ),( seq2 . m )) ) ) by BHSP_1:40;
( m1 + m2 ) >= m1 by NAT_1:12;
then (n >= m1 & m >= m1) by A6,XXREAL_0:2;
then ( dist (( seq1 . n ),( seq1 . m )) ) < ( r / 2 ) by A4;
then ( ( dist (( seq1 . n ),( seq1 . m )) ) + ( dist (( seq2 . n ),( seq2 . m )) ) ) < ( ( r / 2 ) + ( r / 2 ) ) by A7,XREAL_1:8;
hence thesis by A8,XXREAL_0:2;
end;
