begin
theorem
Th25: (for B being non empty set holds (for A being set holds (for X being (Subset of A) holds (for y being (Element of B) holds (for R being (Subset of [: A,B :]) holds (y in ( R .:^ X ) iff (for x being set holds (x in X implies y in ( Im (R,x) )))))))))
proof
let B being non empty set;
let A being set;
let X being (Subset of A);
let y being (Element of B);
let R being (Subset of [: A,B :]);
thus (y in ( R .:^ X ) implies (for x being set holds (x in X implies y in ( Im (R,x) )))) by CKB32:1;
assume A1: (for x being set holds (x in X implies y in ( Im (R,x) )));
per cases ;
suppose ( ( .: R ) .: {_{ X }_} ) = ( {} );

then ( Intersect ( ( .: R ) .: {_{ X }_} ) ) = B by SETFAM_1:def 9;
hence thesis;
end;
suppose A2: ( ( .: R ) .: {_{ X }_} ) <> ( {} );

then A3: ( Intersect ( ( .: R ) .: {_{ X }_} ) ) = ( meet ( ( .: R ) .: {_{ X }_} ) ) by SETFAM_1:def 9;
(for Y being set holds (Y in ( ( .: R ) .: {_{ X }_} ) implies y in Y))
proof
let Y being set;
assume Y in ( ( .: R ) .: {_{ X }_} );
then consider z being set such that A4: [ z,Y ] in ( .: R ) and A5: z in {_{ X }_} by RELAT_1:def 13;
consider x being set such that A6: z = { x } and A7: x in X by A5,CKB2:1;
A8: z in ( dom ( .: R ) ) by A4,FUNCT_1:1;
Y = ( ( .: R ) . z ) by A4,FUNCT_1:1;
then Y = ( Im (R,x) ) by A6,A8,CKB22:def 1;
hence thesis by A1,A7;
end;
hence thesis by A2,A3,SETFAM_1:def 1;
end;
end;
