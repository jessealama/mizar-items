environ
vocabularies RELAT_1,EQREL_1,XBOOLE_0,SUBSET_1,TARSKI,SETFAM_1,ZFMISC_1,FUNCT_1,RELSET_2;
notations TARSKI,XBOOLE_0,ZFMISC_1,SUBSET_1,SETFAM_1,RELAT_1,FUNCT_1,RELSET_1,FUNCT_2,EQREL_1,CKB1;
definitions XBOOLE_0,TARSKI,EQREL_1,SUBSET_1,RELAT_1;
theorems RELAT_1,TARSKI,SETFAM_1,ZFMISC_1,XBOOLE_1,SUBSET_1,RELSET_1,XBOOLE_0,FUNCT_1,FUNCT_2,MSSUBFAM,EQREL_1,SYSREL,ORDERS_1,CKB2,CKB3;
schemes CLASSES1,DOMAIN_1;
registrations XBOOLE_0,SUBSET_1,RELAT_1,PARTFUN1,RELSET_1;
constructors SETFAM_1,FUNCT_2,EQREL_1,RELSET_1,DOMAIN_1;
requirements SUBSET,BOOLE;
begin
reserve X for set;
reserve Y for set;
theorem
Th3: {_{ ( X \/ Y ) }_} = ( {_{ X }_} \/ {_{ Y }_} )
proof
thus {_{ ( X \/ Y ) }_} c= ( {_{ X }_} \/ {_{ Y }_} )
proof
let y being set;
assume y in {_{ ( X \/ Y ) }_};
then consider x being set such that A1: y = { x } and A2: x in ( X \/ Y ) by CKB2:1;
(x in X or x in Y) by A2,XBOOLE_0:def 3;
then (y in {_{ X }_} or y in {_{ Y }_}) by A1,CKB2:1;
hence thesis by XBOOLE_0:def 3;
end;

let y being set;
assume A3: y in ( {_{ X }_} \/ {_{ Y }_} );
per cases  by A3,XBOOLE_0:def 3;
suppose y in {_{ X }_};

then consider x being set such that A4: y = { x } and A5: x in X by CKB2:1;
x in ( X \/ Y ) by A5,XBOOLE_0:def 3;
hence thesis by A4,CKB2:1;
end;
suppose y in {_{ Y }_};

then consider x being set such that A6: y = { x } and A7: x in Y by CKB2:1;
x in ( X \/ Y ) by A7,XBOOLE_0:def 3;
hence thesis by A6,CKB2:1;
end;
end;
