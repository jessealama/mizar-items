begin
reserve x for set;
reserve f for Function;
theorem
Th89: (for f being Function holds (for x being set holds (x in ( dom f ) implies ( f | { x } ) = { [ x,( f . x ) ] })))
proof
let f being Function;
let x being set;
assume that
A1: x in ( dom f );
A2: x in { x } by TARSKI:def 1;
( dom (( f | { x } ) qua Function) ) = ( ( dom f ) /\ { x } ) by RELAT_1:61
.= { x } by A1,ZFMISC_1:46;
hence ( f | { x } ) = { [ x,( ( f | { x } ) . x ) ] } by CKB9:1
.= { [ x,( f . x ) ] } by A2,FUNCT_1:49;
end;
