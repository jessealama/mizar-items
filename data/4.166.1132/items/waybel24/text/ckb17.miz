begin
reserve X1 for non  empty RelStr;
reserve X2 for non  empty RelStr;
reserve Y for non  empty RelStr;
reserve f for (Function of [: X1,X2 :],Y);
reserve x for (Element of X1);
reserve y for (Element of X2);
theorem
Th10: (for R,S,T being non  empty  reflexive RelStr holds (for f being (Function of [: R,S :],T) holds (for a being (Element of R) holds (for b being (Element of S) holds (f is  monotone implies (( Proj (f,a) ) is  monotone & ( Proj (f,b) ) is  monotone))))))
proof
let R being non  empty  reflexive RelStr;
let S being non  empty  reflexive RelStr;
let T being non  empty  reflexive RelStr;
let f being (Function of [: R,S :],T);
let a being (Element of R);
let b being (Element of S);
reconsider a as (Element of R);
reconsider b as (Element of S);
set g = ( Proj (f,b) );
set h = ( Proj (f,a) );
assume A1: f is  monotone;
A2:now
let x being (Element of R);
let y being (Element of R);
A3: b <= b;
A4: (( g . x ) = ( f . (x,b) ) & ( g . y ) = ( f . (y,b) )) by CKB14:1;
assume x <= y;
then [ x,b ] <= [ y,b ] by A3,YELLOW_3:11;
hence ( g . x ) <= ( g . y ) by A1,A4,WAYBEL_1:def 2;
end;
now
let x being (Element of S);
let y being (Element of S);
A5: a <= a;
A6: (( h . x ) = ( f . (a,x) ) & ( h . y ) = ( f . (a,y) )) by CKB12:1;
assume x <= y;
then [ a,x ] <= [ a,y ] by A5,YELLOW_3:11;
hence ( h . x ) <= ( h . y ) by A1,A6,WAYBEL_1:def 2;
end;
hence thesis by A2,WAYBEL_1:def 2;
end;
