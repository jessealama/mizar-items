begin
theorem
Lm4: (for c being Real holds (for seq,seq1 being Real_Sequence holds ((seq is  convergent & seq1 is  convergent) implies (for rseq being Real_Sequence holds ((for i being (Element of ( NAT )) holds ( rseq . i ) = ( ( abs ( ( seq . i ) - c ) ) + ( seq1 . i ) )) implies (rseq is  convergent & ( lim rseq ) = ( ( abs ( ( lim seq ) - c ) ) + ( lim seq1 ) )))))))
proof
let c being Real;
let seq being Real_Sequence;
let seq1 being Real_Sequence;
assume that
A1: seq is  convergent
and
A2: seq1 is  convergent;
reconsider cseq = ( ( NAT ) --> c ) as Real_Sequence;
A3: ( seq - cseq ) is  convergent by A1,SEQ_2:11;
then A4: ( abs ( seq - cseq ) ) is  convergent;
let rseq being Real_Sequence;
assume that
A5: (for i being (Element of ( NAT )) holds ( rseq . i ) = ( ( abs ( ( seq . i ) - c ) ) + ( seq1 . i ) ));
now
let i being (Element of ( NAT ));
thus ( rseq . i ) = ( ( abs ( ( seq . i ) - c ) ) + ( seq1 . i ) ) by A5
.= ( ( abs ( ( seq . i ) - ( cseq . i ) ) ) + ( seq1 . i ) ) by FUNCOP_1:7
.= ( ( abs ( ( seq . i ) + ( - ( cseq . i ) ) ) ) + ( seq1 . i ) )
.= ( ( abs ( ( seq . i ) + ( ( - cseq ) . i ) ) ) + ( seq1 . i ) ) by SEQ_1:10
.= ( ( abs ( ( seq + ( - cseq ) ) . i ) ) + ( seq1 . i ) ) by SEQ_1:7
.= ( ( abs ( ( seq - cseq ) . i ) ) + ( seq1 . i ) ) by SEQ_1:11
.= ( ( ( abs ( seq - cseq ) ) . i ) + ( seq1 . i ) ) by SEQ_1:12
.= ( ( ( abs ( seq - cseq ) ) + seq1 ) . i ) by SEQ_1:7;
end;
then A6: rseq = ( ( abs ( seq - cseq ) ) + seq1 ) by FUNCT_2:63;
( lim ( abs ( seq - cseq ) ) ) = ( abs ( lim ( seq - cseq ) ) ) by A3,SEQ_4:14
.= ( abs ( ( lim seq ) - ( lim cseq ) ) ) by A1,SEQ_2:12
.= ( abs ( ( lim seq ) - ( cseq . ( 0 ) ) ) ) by SEQ_4:26
.= ( abs ( ( lim seq ) - c ) ) by FUNCOP_1:7;
hence thesis by A2,A6,A4,SEQ_2:5,SEQ_2:6;
end;
