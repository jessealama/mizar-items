requirements NUMERALS,ARITHM,SUBSET,BOOLE;
begin
registration
let X being BCI-algebra;
let A being (Ideal of X);
cluster  ->  total  symmetric  transitive for (I-congruence of X,A);
coherence
proof
(for RI being (I-congruence of X,A) holds RI is (Equivalence_Relation of X))
proof
let RI being (I-congruence of X,A);
reconsider RI as (Relation of X);
(for x being set holds (x in (the carrier of X) implies [ x,x ] in RI))
proof
let x being set;
assume x in (the carrier of X);
then reconsider x as (Element of X);
( 0. X ) in A by BCIALG_1:def 18;
then ( x \ x ) in A by BCIALG_1:def 5;
hence thesis by CKB53:def 1;
end;
then RI is_reflexive_in (the carrier of X) by RELAT_2:def 1;
then A1: ( field RI ) = (the carrier of X) by ORDERS_1:13;
(for x,y,z being set holds (([ x,y ] in RI & [ y,z ] in RI) implies [ x,z ] in RI))
proof
let x being set,y being set,z being set;
assume that
A2: [ x,y ] in RI
and
A3: [ y,z ] in RI;
reconsider x,y,z as (Element of X) by A2,A3,ZFMISC_1:87;
( ( ( z \ x ) \ ( y \ x ) ) \ ( z \ y ) ) = ( 0. X ) by BCIALG_1:def 3;
then A4: ( ( ( z \ x ) \ ( y \ x ) ) \ ( z \ y ) ) in A by BCIALG_1:def 18;
( ( ( x \ z ) \ ( x \ y ) ) \ ( y \ z ) ) = ( 0. X ) by BCIALG_1:1;
then A5: ( ( ( x \ z ) \ ( x \ y ) ) \ ( y \ z ) ) in A by BCIALG_1:def 18;
( y \ z ) in A by A3,CKB53:def 1;
then A6: ( ( x \ z ) \ ( x \ y ) ) in A by A5,BCIALG_1:def 18;
( z \ y ) in A by A3,CKB53:def 1;
then A7: ( ( z \ x ) \ ( y \ x ) ) in A by A4,BCIALG_1:def 18;
( y \ x ) in A by A2,CKB53:def 1;
then A8: ( z \ x ) in A by A7,BCIALG_1:def 18;
( x \ y ) in A by A2,CKB53:def 1;
then ( x \ z ) in A by A6,BCIALG_1:def 18;
hence thesis by A8,CKB53:def 1;
end;
then A9: RI is  transitive by RELAT_2:31;
(for x,y being set holds (((x in (the carrier of X) & y in (the carrier of X)) & [ x,y ] in RI) implies [ y,x ] in RI))
proof
let x being set,y being set;
assume that
A10: (x in (the carrier of X) & y in (the carrier of X))
and
A11: [ x,y ] in RI;
reconsider x,y as (Element of X) by A10;
(( x \ y ) in A & ( y \ x ) in A) by A11,CKB53:def 1;
hence thesis by CKB53:def 1;
end;
then RI is_symmetric_in (the carrier of X) by RELAT_2:def 3;
then RI is  symmetric by A1,RELAT_2:def 11;
hence thesis by A1,A9,EQREL_1:9;
end;
hence thesis;
end;
end;
