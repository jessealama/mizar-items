environ
vocabularies PRE_TOPC,SUBSET_1,XBOOLE_0,TARSKI,RCOMP_1,RELAT_2,FUNCT_1,ORDINAL2,RELAT_1,STRUCT_0,TOPS_1,SETFAM_1,CONNSP_1;
notations TARSKI,XBOOLE_0,SUBSET_1,SETFAM_1,RELSET_1,DOMAIN_1,STRUCT_0,PRE_TOPC,TOPS_1,CKB1;
definitions XBOOLE_0,SUBSET_1,STRUCT_0,PRE_TOPC,CKB1;
theorems TARSKI,FUNCT_1,FUNCT_2,ZFMISC_1,SETFAM_1,PRE_TOPC,TOPS_1,SUBSET_1,RELAT_1,XBOOLE_0,XBOOLE_1,CKB1,CKB2,CKB3,CKB4;
schemes SUBSET_1;
registrations XBOOLE_0,SUBSET_1,RELSET_1,STRUCT_0,PRE_TOPC;
constructors SETFAM_1,DOMAIN_1,TOPS_1,RELSET_1,CKB1;
requirements SUBSET,BOOLE;
begin
reserve GX for TopSpace;
reserve A for (Subset of GX);
reserve B for (Subset of GX);
theorem
Th5: ((( [#] GX ) = ( A \/ B ) & A,B are_separated ) implies (A is  open  closed & B is  open  closed))
proof
assume that
A1: ( [#] GX ) = ( A \/ B )
and
A2: A,B are_separated ;
A3: ( ( [#] GX ) \ B ) = A by A1,A2,CKB2:1,PRE_TOPC:5;
A4: B c= ( Cl B ) by PRE_TOPC:18;
A5:now
assume A misses ( Cl B );
then ( Cl B ) c= B by A1,XBOOLE_1:73;
hence ( Cl B ) = B by A4,XBOOLE_0:def 10;
end;
A6: A c= ( Cl A ) by PRE_TOPC:18;
A7:now
assume ( Cl A ) misses B;
then ( Cl A ) c= A by A1,XBOOLE_1:73;
hence ( Cl A ) = A by A6,XBOOLE_0:def 10;
end;
B = ( ( [#] GX ) \ A ) by A1,A2,CKB2:1,PRE_TOPC:5;
hence thesis by A2,A7,A5,A3,CKB1:def 1,PRE_TOPC:22,PRE_TOPC:23;
end;
