let B being (Matrix of K);
func A + B -> (Matrix of K) means 
:Def3: ((( len it ) = ( len A ) & ( width it ) = ( width A )) & (for i holds (for j holds ([ i,j ] in ( Indices A ) implies ( it * (i,j) ) = ( ( A * (i,j) ) + ( B * (i,j) ) )))));
existence
proof
set n = ( len A );
reconsider A1 = A as (Matrix of ( len A ),( width A ),K) by MATRIX_2:7;
deffunc F(Nat,Nat) = ( ( A * ($1,$2) ) + ( B * ($1,$2) ) );
consider M being (Matrix of ( len A ),( width A ),K) such that A1: (for i holds (for j holds ([ i,j ] in ( Indices M ) implies ( M * (i,j) ) = F(i,j)))) from MATRIX_1:sch 1;
A2: ( Indices A1 ) = [: ( Seg ( len A ) ),( Seg ( width A ) ) :] by MATRIX_1:25;
A3:now
per cases ;
case n > ( 0 );
hence ((( len M ) = ( len A ) & ( width M ) = ( width A )) & ( Indices A ) = ( Indices M )) by A2,MATRIX_1:23;
end;
case A4: n = ( 0 );
then ( len M ) = ( 0 ) by MATRIX_1:def 2;
then A5: ( width M ) = ( 0 ) by MATRIX_1:def 3;
( width A ) = ( 0 ) by A4,MATRIX_1:def 3;
hence ((( len M ) = ( len A ) & ( width M ) = ( width A )) & ( Indices A ) = ( Indices M )) by A2,A5,MATRIX_1:25;
end;
end;
reconsider M as (Matrix of K);
take M;
thus thesis by A1,A3;
end;
uniqueness
proof
set n = ( len A );
let M1 being (Matrix of K);
let M2 being (Matrix of K);
assume that
A6: (( len M1 ) = ( len A ) & ( width M1 ) = ( width A ))
and
A7: (for i holds (for j holds ([ i,j ] in ( Indices A ) implies ( M1 * (i,j) ) = ( ( A * (i,j) ) + ( B * (i,j) ) ))))
and
A8: (( len M2 ) = ( len A ) & ( width M2 ) = ( width A ))
and
A9: (for i holds (for j holds ([ i,j ] in ( Indices A ) implies ( M2 * (i,j) ) = ( ( A * (i,j) ) + ( B * (i,j) ) ))));
reconsider M2 as (Matrix of n,( width A ),K) by A8,MATRIX_2:7;
reconsider M1 as (Matrix of n,( width A ),K) by A6,MATRIX_2:7;
reconsider A1 = A as (Matrix of n,( width A ),K) by MATRIX_2:7;
A10: ( Indices A1 ) = [: ( Seg n ),( Seg ( width A ) ) :] by MATRIX_1:25;
A11: (( Indices M1 ) = [: ( Seg n ),( Seg ( width M1 ) ) :] & ( Indices M2 ) = [: ( Seg n ),( Seg ( width M2 ) ) :]) by MATRIX_1:25;
A12:now
per cases ;
case A13: n > ( 0 );
then ( Indices M1 ) = [: ( Seg n ),( Seg ( width A ) ) :] by MATRIX_1:23;
hence (( Indices A ) = ( Indices M1 ) & ( Indices M1 ) = ( Indices M2 )) by A10,A13,MATRIX_1:23;
end;
case A14: n = ( 0 );
then ( len M1 ) = ( 0 ) by MATRIX_1:def 2;
then A15: ( width M1 ) = ( 0 ) by MATRIX_1:def 3;
( len M2 ) = ( 0 ) by A14,MATRIX_1:def 2;
hence (( Indices A ) = ( Indices M1 ) & ( Indices M1 ) = ( Indices M2 )) by A10,A11,A14,A15,MATRIX_1:def 3;
end;
end;
now
let i;
let j;
assume A16: [ i,j ] in ( Indices A );
then ( M1 * (i,j) ) = ( ( A * (i,j) ) + ( B * (i,j) ) ) by A7;
hence ( M1 * (i,j) ) = ( M2 * (i,j) ) by A9,A16;
end;
hence thesis by A12,MATRIX_1:27;
end;
