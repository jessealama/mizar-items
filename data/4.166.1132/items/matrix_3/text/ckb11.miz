begin
reserve i for Nat;
reserve j for Nat;
reserve K for Field;
definition
let K;
let M being (Matrix of K);
let a being (Element of K);
func a * M -> (Matrix of K) means 
((( len it ) = ( len M ) & ( width it ) = ( width M )) & (for i holds (for j holds ([ i,j ] in ( Indices M ) implies ( it * (i,j) ) = ( a * ( M * (i,j) ) )))));
existence
proof
deffunc F(Nat,Nat) = ( a * ( M * ($1,$2) ) );
consider N being (Matrix of ( len M ),( width M ),K) such that A1: (for i holds (for j holds ([ i,j ] in ( Indices N ) implies ( N * (i,j) ) = F(i,j)))) from MATRIX_1:sch 1;
take N;
A2: ( len N ) = ( len M ) by MATRIX_1:def 2;
A3:now
per cases ;
case A4: ( len M ) = ( 0 );
then ( width N ) = ( 0 ) by A2,MATRIX_1:def 3;
hence ( width N ) = ( width M ) by A4,MATRIX_1:def 3;
end;
case ( len M ) > ( 0 );
hence ( width N ) = ( width M ) by MATRIX_1:23;
end;
end;
( dom M ) = ( dom N ) by A2,FINSEQ_3:29;
then ( Indices N ) = [: ( dom M ),( Seg ( width M ) ) :] by A3;
hence thesis by A1,A3,MATRIX_1:def 2;
end;
uniqueness
proof
let A being (Matrix of K);
let B being (Matrix of K);
assume that
A5: ( len A ) = ( len M )
and
A6: ( width A ) = ( width M )
and
A7: (for i holds (for j holds ([ i,j ] in ( Indices M ) implies ( A * (i,j) ) = ( a * ( M * (i,j) ) ))))
and
A8: (( len B ) = ( len M ) & ( width B ) = ( width M ))
and
A9: (for i holds (for j holds ([ i,j ] in ( Indices M ) implies ( B * (i,j) ) = ( a * ( M * (i,j) ) ))));
now
let i;
let j;
( dom A ) = ( dom M ) by A5,FINSEQ_3:29;
then A10: ( Indices A ) = [: ( dom M ),( Seg ( width M ) ) :] by A6;
assume A11: [ i,j ] in ( Indices A );
hence ( A * (i,j) ) = ( a * ( M * (i,j) ) ) by A7,A10
.= ( B * (i,j) ) by A9,A11,A10;
end;
hence thesis by A5,A6,A8,MATRIX_1:21;
end;
