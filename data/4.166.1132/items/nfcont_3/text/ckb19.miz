registrations XBOOLE_0,ORDINAL1,RELSET_1,NUMBERS,XXREAL_0,XREAL_0,NAT_1,MEMBERED,VALUED_0,FUNCT_2,RELAT_1,FUNCT_1,ZFMISC_1,STRUCT_0,VFUNCT_1;
constructors REAL_1,COMPLEX1,MEMBERED,SEQ_2,RCOMP_1,SEQ_1,RELSET_1,FCONT_1,NFCONT_1,BHSP_1,VFUNCT_1,CKB6,CKB17;
requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve X for set;
reserve r for Real;
reserve s for  real number;
reserve x0 for  real number;
reserve x1 for  real number;
reserve S for RealNormSpace;
reserve f for (PartFunc of ( REAL ),(the carrier of S));
theorem
Th17: (X c= ( dom f ) implies (( f | X ) is  continuous iff (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ||. ( ( f /. x1 ) - ( f /. x0 ) ) .|| < r)))))))))
proof
assume A1: X c= ( dom f );
thus (( f | X ) is  continuous implies (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ||. ( ( f /. x1 ) - ( f /. x0 ) ) .|| < r))))))))
proof
assume A2: ( f | X ) is  continuous;
let x0;
let r;
assume that
A3: x0 in X
and
A4: ( 0 ) < r;
x0 in ( dom ( f | X ) ) by A1,A3,RELAT_1:62;
then ( f | X ) is_continuous_in x0 by A2,CKB17:def 1;
then consider s such that A5: ( 0 ) < s and A6: (for x1 holds ((x1 in ( dom ( f | X ) ) & ( abs ( x1 - x0 ) ) < s) implies ||. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .|| < r)) by A4,CKB9:1;
take s;
thus ( 0 ) < s by A5;
let x1;
assume that
A7: x1 in X
and
A8: ( abs ( x1 - x0 ) ) < s;
B0: x0 in ( REAL ) by XREAL_0:def 1;
B1: x1 in ( REAL ) by XREAL_0:def 1;
A9: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by RELAT_1:61
.= X by A1,XBOOLE_1:28;
then ||. ( ( f /. x1 ) - ( f /. x0 ) ) .|| = ||. ( ( ( f | X ) /. x1 ) - ( f /. x0 ) ) .|| by A7,PARTFUN2:15,B1
.= ||. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .|| by A3,A9,PARTFUN2:15,B0;
hence thesis by A6,A9,A7,A8;
end;

assume A10: (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ||. ( ( f /. x1 ) - ( f /. x0 ) ) .|| < r)))))));
A11: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by RELAT_1:61
.= X by A1,XBOOLE_1:28;
now
let x0;
assume A12: x0 in ( dom ( f | X ) );
then A13: x0 in X by RELAT_1:57;
(for r holds (( 0 ) < r implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in ( dom ( f | X ) ) & ( abs ( x1 - x0 ) ) < s) implies ||. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .|| < r))))))
proof
let r;
assume ( 0 ) < r;
then consider s such that A14: ( 0 ) < s and A15: (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ||. ( ( f /. x1 ) - ( f /. x0 ) ) .|| < r)) by A10,A13;
take s;
thus ( 0 ) < s by A14;
let x1;
assume that
A16: x1 in ( dom ( f | X ) )
and
A17: ( abs ( x1 - x0 ) ) < s;
B0: x0 in ( REAL ) by XREAL_0:def 1;
B1: x1 in ( REAL ) by XREAL_0:def 1;
||. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .|| = ||. ( ( ( f | X ) /. x1 ) - ( f /. x0 ) ) .|| by A12,PARTFUN2:15,B0
.= ||. ( ( f /. x1 ) - ( f /. x0 ) ) .|| by A16,PARTFUN2:15,B1;
hence thesis by A11,A15,A16,A17;
end;
hence ( f | X ) is_continuous_in x0 by CKB9:1,A12;
end;
hence thesis by CKB17:def 1;
end;
