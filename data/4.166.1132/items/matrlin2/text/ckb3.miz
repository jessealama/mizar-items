Th3: (for V being (VectSp of K) holds (for W1,W2 being (Subspace of V) holds (( W1 /\ W2 ) = ( (0). V ) implies (for B1 being (Basis of W1) holds (for B2 being (Basis of W2) holds ( B1 \/ B2 ) is (Basis of ( W1 + W2 )))))))
proof
let V being (VectSp of K);
let W1 being (Subspace of V);
let W2 being (Subspace of V);
assume that
A1: ( W1 /\ W2 ) = ( (0). V );
let B1 being (Basis of W1);
