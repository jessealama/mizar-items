let g being  continuous (Function of (the carrier of X),( COMPLEX ));
set h = ( f + g );
X: ( rng h ) c= ( COMPLEX ) by MEMBERED:1;
( dom h ) = ( ( dom f ) /\ ( dom g ) ) by VALUED_1:def 1
.= ( (the carrier of X) /\ ( dom g ) ) by PARTFUN1:def 2
.= ( (the carrier of X) /\ (the carrier of X) ) by PARTFUN1:def 2;
then reconsider h as (Function of (the carrier of X),( COMPLEX )) by X,FUNCT_2:2;
A1: (for x being (Point of X) holds ( h . x ) = ( ( f . x ) + ( g . x ) )) by VALUED_1:1;
(for p being (Point of X) holds (for V being (Subset of ( COMPLEX )) holds ((( h . p ) in V & V is  open) implies (ex W being (Subset of X) st ((p in W & W is  open) & ( h .: W ) c= V)))))
proof
let p being (Point of X);
let V being (Subset of ( COMPLEX ));
assume A2: (( h . p ) in V & V is  open);
reconsider z0 = ( h . p ) as Complex;
consider N being (Neighbourhood of z0) such that A3: N c= V by A2,CFDIFF_1:9;
consider r being Real such that A4: (( 0 ) < r & { y where y is Complex: |. ( y - z0 ) .| < r } c= N) by CFDIFF_1:def 5;
set S = { y where y is Complex: |. ( y - z0 ) .| < r };
A5: ( r / 2 ) is Real by XREAL_0:def 1;
reconsider z1 = ( f . p ) as Complex;
set S1 = { y where y is Complex: |. ( y - z1 ) .| < ( r / 2 ) };
S1 c= ( COMPLEX )
proof
let z being set;
assume z in S1;
then (ex y being Complex st (z = y & |. ( y - z1 ) .| < ( r / 2 )));
hence z in ( COMPLEX );
end;
then reconsider T1 = S1 as (Subset of ( COMPLEX ));
A6: T1 is  open by CFDIFF_1:13,A5;
|. ( z1 - z1 ) .| = ( 0 );
then z1 in S1 by A4;
then consider W1 being (Subset of X) such that A7: ((p in W1 & W1 is  open) & ( f .: W1 ) c= S1) by A6,CKB7:1;
reconsider z2 = ( g . p ) as Complex;
set S2 = { y where y is Complex: |. ( y - z2 ) .| < ( r / 2 ) };
S2 c= ( COMPLEX )
proof
let z being set;
assume z in S2;
then (ex y being Complex st (z = y & |. ( y - z2 ) .| < ( r / 2 )));
hence z in ( COMPLEX );
end;
then reconsider T2 = S2 as (Subset of ( COMPLEX ));
A8: T2 is  open by CFDIFF_1:13,A5;
|. ( z2 - z2 ) .| = ( 0 );
then z2 in S2 by A4;
then consider W2 being (Subset of X) such that A9: ((p in W2 & W2 is  open) & ( g .: W2 ) c= S2) by A8,CKB7:1;
set W = ( W1 /\ W2 );
A10: W is  open by A7,A9,TOPS_1:11;
A11: p in W by A7,A9,XBOOLE_0:def 4;
( h .: W ) c= S
proof
let z3 being set;
assume z3 in ( h .: W );
then consider x3 being set such that A12: ((x3 in ( dom h ) & x3 in W) & ( h . x3 ) = z3) by FUNCT_1:def 6;
A13: x3 in W1 by A12,XBOOLE_0:def 4;
