begin
reserve j for Nat;
reserve n for Nat;
reserve m for Nat;
reserve i for Nat;
reserve K for Field;
definition
let n;
let m;
let K;
let M being (Matrix of n,m,K);
let l being Nat;
let k being Nat;
let a being (Element of K);
assume A1: k in ( dom M );
func RlineXScalar (M,l,k,a) -> (Matrix of n,m,K)
means
:Def3: (( len it ) = ( len M ) & (for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((i = l implies ( it * (i,j) ) = ( ( a * ( M * (k,j) ) ) + ( M * (l,j) ) )) & (i <> l implies ( it * (i,j) ) = ( M * (i,j) )))))));
existence
proof
set qK = ( Line (M,k) );
set pK = ( Line (M,l) );
set M1 = ( RLine (M,l,( ( a * qK ) + pK )) );
take M1;
( len M ) = n by MATRIX_1:25;
then (( len ( ( a * qK ) + pK ) ) = ( width M ) & ( dom M ) = ( Seg n )) by CARD_1:def 7,FINSEQ_1:def 3;
hence thesis by A1,CKB9:1,MATRIX11:def 3;
end;
uniqueness
proof
let M1 being (Matrix of n,m,K),M2 being (Matrix of n,m,K);
assume that
( len M1 ) = ( len M )
and
A2: (for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((i = l implies ( M1 * (i,j) ) = ( ( a * ( M * (k,j) ) ) + ( M * (l,j) ) )) & (i <> l implies ( M1 * (i,j) ) = ( M * (i,j) ))))))
and
( len M2 ) = ( len M )
and
A3: (for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((i = l implies ( M2 * (i,j) ) = ( ( a * ( M * (k,j) ) ) + ( M * (l,j) ) )) & (i <> l implies ( M2 * (i,j) ) = ( M * (i,j) ))))));
(for i holds (for j holds ([ i,j ] in ( Indices M1 ) implies ( M1 * (i,j) ) = ( M2 * (i,j) ))))
proof
A4: ( Indices M ) = ( Indices M1 ) by MATRIX_1:26;
let i;
let j;
assume [ i,j ] in ( Indices M1 );
then A5: (i in ( dom M ) & j in ( Seg ( width M ) )) by A4,ZFMISC_1:87;
then A6: (i <> l implies ( M1 * (i,j) ) = ( M * (i,j) )) by A2;
(i = l implies ( M1 * (i,j) ) = ( ( a * ( M * (k,j) ) ) + ( M * (l,j) ) )) by A2,A5;
hence thesis by A3,A5,A6;
end;
hence thesis by MATRIX_1:27;
end;
