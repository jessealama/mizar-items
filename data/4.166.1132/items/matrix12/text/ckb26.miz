begin
reserve j for Nat;
reserve l for Nat;
reserve n for Nat;
reserve m for Nat;
reserve i for Nat;
reserve K for Field;
reserve a for (Element of K);
reserve M for (Matrix of n,m,K);
reserve M1 for (Matrix of n,m,K);
reserve M2 for (Matrix of n,m,K);
definition
let n;
let m;
let K;
let M being (Matrix of n,m,K);
let l being Nat;
let a being (Element of K);
assume that
A1: l in ( Seg ( width M ) )
and
A2: n > ( 0 )
and
A3: m > ( 0 );
func ScalarXCol (M,l,a) -> (Matrix of n,m,K) means 
:Def5: (( len it ) = ( len M ) & (for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((j = l implies ( it * (i,j) ) = ( a * ( M * (i,l) ) )) & (j <> l implies ( it * (i,j) ) = ( M * (i,j) )))))));
existence
proof
A4: ( width M ) = m by A2,MATRIX_1:23;
then A5: ( len ( M @ ) ) = m by A3,MATRIX_2:10;
A6: ( len M ) = n by A2,MATRIX_1:23;
then ( width ( M @ ) ) = n by A3,A4,MATRIX_2:10;
then ( M @ ) is (Matrix of m,n,K) by A3,A5,MATRIX_1:20;
then consider M1 being (Matrix of m,n,K) such that A7: M1 = ( M @ );
A8: ( width ( ScalarXLine (M1,l,a) ) ) = n by A3,MATRIX_1:23;
then A9: ( len ( ( ScalarXLine (M1,l,a) ) @ ) ) = n by A2,MATRIX_2:10;
( len ( ScalarXLine (M1,l,a) ) ) = m by A3,MATRIX_1:23;
then ( width ( ( ScalarXLine (M1,l,a) ) @ ) ) = m by A2,A8,MATRIX_2:10;
then ( ( ScalarXLine (M1,l,a) ) @ ) is (Matrix of n,m,K) by A2,A9,MATRIX_1:20;
then consider M2 being (Matrix of n,m,K) such that A10: M2 = ( ( ScalarXLine (M1,l,a) ) @ );
take M2;
(for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((j = l implies ( M2 * (i,j) ) = ( a * ( M * (i,l) ) )) & (j <> l implies ( M2 * (i,j) ) = ( M * (i,j) ))))))
proof
let i;
let j;
assume that
A11: i in ( dom M )
and
A12: j in ( Seg ( width M ) );
A13: [ i,j ] in ( Indices M ) by A11,A12,ZFMISC_1:87;
then A14: [ j,i ] in ( Indices M1 ) by A7,MATRIX_1:def 6;
( dom ( ScalarXLine (M1,l,a) ) ) = ( Seg ( len ( ScalarXLine (M1,l,a) ) ) ) by FINSEQ_1:def 3
.= ( Seg ( len M1 ) ) by CKB7:def 1
.= ( dom M1 ) by FINSEQ_1:def 3;
then A15: [ j,i ] in ( Indices ( ScalarXLine (M1,l,a) ) ) by A14,CKB3:1;
A16: (j in ( dom M1 ) & i in ( Seg ( width M1 ) )) by A14,ZFMISC_1:87;
thus (j = l implies ( M2 * (i,j) ) = ( a * ( M * (i,l) ) ))
proof
A17: [ i,l ] in ( Indices M ) by A1,A11,ZFMISC_1:87;
assume A18: j = l;
( M2 * (i,j) ) = ( ( ScalarXLine (M1,l,a) ) * (j,i) ) by A10,A15,MATRIX_1:def 6
.= ( a * ( M1 * (l,i) ) ) by A16,A18,CKB7:def 1
.= ( a * ( M * (i,l) ) ) by A7,A17,MATRIX_1:def 6;
hence thesis;
end;

thus (j <> l implies ( M2 * (i,j) ) = ( M * (i,j) ))
proof
assume A19: j <> l;
( M2 * (i,j) ) = ( ( ScalarXLine (M1,l,a) ) * (j,i) ) by A10,A15,MATRIX_1:def 6
.= ( M1 * (j,i) ) by A16,A19,CKB7:def 1
.= ( M * (i,j) ) by A7,A13,MATRIX_1:def 6;
hence thesis;
end;

end;
hence thesis by A2,A6,MATRIX_1:23;
end;
uniqueness
proof
let M1 being (Matrix of n,m,K);
let M2 being (Matrix of n,m,K);
assume that
( len M1 ) = ( len M )
and
A20: (for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((j = l implies ( M1 * (i,j) ) = ( a * ( M * (i,l) ) )) & (j <> l implies ( M1 * (i,j) ) = ( M * (i,j) ))))))
and
( len M2 ) = ( len M )
and
A21: (for i holds (for j holds ((i in ( dom M ) & j in ( Seg ( width M ) )) implies ((j = l implies ( M2 * (i,j) ) = ( a * ( M * (i,l) ) )) & (j <> l implies ( M2 * (i,j) ) = ( M * (i,j) ))))));
(for i holds (for j holds ([ i,j ] in ( Indices M1 ) implies ( M1 * (i,j) ) = ( M2 * (i,j) ))))
proof
A22: ( Indices M ) = ( Indices M1 ) by MATRIX_1:26;
let i;
let j;
assume [ i,j ] in ( Indices M1 );
then A23: (i in ( dom M ) & j in ( Seg ( width M ) )) by A22,ZFMISC_1:87;
then A24: (j <> l implies ( M1 * (i,j) ) = ( M * (i,j) )) by A20;
(j = l implies ( M1 * (i,j) ) = ( a * ( M * (i,l) ) )) by A20,A23;
hence thesis by A21,A23,A24;
end;
hence thesis by MATRIX_1:27;
end;
