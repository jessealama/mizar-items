environ
vocabularies NUMBERS,SUBSET_1,COMSEQ_1,PARTFUN1,REAL_1,ORDINAL2,NAT_1,SEQ_1,FCONT_1,RELAT_1,TARSKI,SEQ_2,FUNCT_2,ARYTM_1,FUNCT_1,ARYTM_3,VALUED_1,COMPLEX1,XBOOLE_0,ORDINAL4,VALUED_0,CARD_1,XXREAL_0,XREAL_0,RCOMP_1,CFCONT_1;
notations TARSKI,XBOOLE_0,SUBSET_1,FUNCT_1,NUMBERS,XREAL_0,COMPLEX1,REAL_1,NAT_1,PARTFUN1,FUNCT_2,SEQ_1,RELSET_1,VALUED_0,VALUED_1,CFUNCT_1,COMSEQ_1,COMSEQ_2,COMSEQ_3,XXREAL_0,RECDEF_1,CKB1,CKB40;
definitions TARSKI,COMSEQ_2,COMSEQ_3,FUNCT_1,VALUED_0,VALUED_1,CKB1,CKB40;
theorems TARSKI,NAT_1,FUNCT_1,COMPLEX1,SEQ_1,SEQM_3,SEQ_4,COMSEQ_1,COMSEQ_2,COMSEQ_3,PARTFUN1,CFUNCT_1,RELAT_1,FUNCT_2,PARTFUN2,XBOOLE_0,XBOOLE_1,XCMPLX_1,XREAL_1,XXREAL_0,ORDINAL1,VALUED_1,VALUED_0,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15,CKB16,CKB17,CKB18,CKB19,CKB20,CKB21,CKB22,CKB23,CKB24,CKB25,CKB26,CKB27,CKB28,CKB29,CKB30,CKB31,CKB33,CKB34,CKB35,CKB36,CKB37,CKB38,CKB39,CKB40,CKB41;
schemes NAT_1,RECDEF_1,FUNCT_2,CKB32;
registrations XBOOLE_0,FUNCT_1,ORDINAL1,RELSET_1,FUNCT_2,NUMBERS,XREAL_0,NAT_1,MEMBERED,VALUED_0,VALUED_1;
constructors PARTFUN1,XXREAL_0,REAL_1,NAT_1,SEQ_1,COMSEQ_2,CFUNCT_1,COMSEQ_3,RECDEF_1,SEQM_3,VALUED_1,RELSET_1,CKB1,CKB40;
requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve X for set;
reserve x0 for (Element of ( COMPLEX ));
reserve x1 for (Element of ( COMPLEX ));
reserve f for (PartFunc of ( COMPLEX ),( COMPLEX ));
reserve r for Real;
reserve s for Real;
theorem
Th61: (f is_continuous_on X iff (X c= ( dom f ) & (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & |. ( x1 - x0 ) .| < s) implies |. ( ( f /. x1 ) - ( f /. x0 ) ) .| < r)))))))))
proof
thus (f is_continuous_on X implies (X c= ( dom f ) & (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & |. ( x1 - x0 ) .| < s) implies |. ( ( f /. x1 ) - ( f /. x0 ) ) .| < r)))))))))
proof
assume A1: f is_continuous_on X;
hence X c= ( dom f ) by CKB40:def 1;
A2: X c= ( dom f ) by A1,CKB40:def 1;
let x0;
let r;
assume that
A3: x0 in X
and
A4: ( 0 ) < r;
( f | X ) is_continuous_in x0 by A1,A3,CKB40:def 1;
then consider s such that A5: ( 0 ) < s and A6: (for x1 holds ((x1 in ( dom ( f | X ) ) & |. ( x1 - x0 ) .| < s) implies |. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .| < r)) by A4,CKB34:1;
take s;
thus ( 0 ) < s by A5;
let x1;
assume that
A7: x1 in X
and
A8: |. ( x1 - x0 ) .| < s;
A9: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by RELAT_1:61
.= X by A2,XBOOLE_1:28;
then |. ( ( f /. x1 ) - ( f /. x0 ) ) .| = |. ( ( ( f | X ) /. x1 ) - ( f /. x0 ) ) .| by A7,PARTFUN2:15
.= |. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .| by A3,A9,PARTFUN2:15;
hence thesis by A6,A9,A7,A8;
end;

assume that
A10: X c= ( dom f )
and
A11: (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & |. ( x1 - x0 ) .| < s) implies |. ( ( f /. x1 ) - ( f /. x0 ) ) .| < r)))))));
A12: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by RELAT_1:61
.= X by A10,XBOOLE_1:28;
now
let x0;
assume that
A13: x0 in X;
(for r holds (( 0 ) < r implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in ( dom ( f | X ) ) & |. ( x1 - x0 ) .| < s) implies |. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .| < r))))))
proof
let r;
assume ( 0 ) < r;
then consider s such that A14: ( 0 ) < s and A15: (for x1 holds ((x1 in X & |. ( x1 - x0 ) .| < s) implies |. ( ( f /. x1 ) - ( f /. x0 ) ) .| < r)) by A11,A13;
take s;
thus ( 0 ) < s by A14;
let x1;
assume that
A16: x1 in ( dom ( f | X ) )
and
A17: |. ( x1 - x0 ) .| < s;
|. ( ( ( f | X ) /. x1 ) - ( ( f | X ) /. x0 ) ) .| = |. ( ( ( f | X ) /. x1 ) - ( f /. x0 ) ) .| by A12,A13,PARTFUN2:15
.= |. ( ( f /. x1 ) - ( f /. x0 ) ) .| by A16,PARTFUN2:15;
hence thesis by A12,A15,A16,A17;
end;
hence ( f | X ) is_continuous_in x0 by A12,A13,CKB34:1;
end;
hence thesis by A10,CKB40:def 1;
end;
