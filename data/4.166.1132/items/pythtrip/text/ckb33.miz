begin
reserve a for (Element of ( NAT ));
reserve b for (Element of ( NAT ));
reserve c for (Element of ( NAT ));
reserve k for (Element of ( NAT ));
reserve m for (Element of ( NAT ));
reserve n for (Element of ( NAT ));
reserve X for Pythagorean_triple;
definition
let X;
redefine attr X is  simplified
means
:Def8: (ex m st (ex n st ((m in X & n in X) & m,n are_relative_prime )));
compatibility
proof
hereby
assume A1: X is  simplified;
consider a,b,c such that A2: ( ( a ^2 ) + ( b ^2 ) ) = ( c ^2 ) and A3: X = { a,b,c } by CKB27:def 1;
take a;
take b;
thus a in X by A3,ENUMSET1:def 1;
thus b in X by A3,ENUMSET1:def 1;
now
let k being Nat;
reconsider k1 = k as (Element of ( NAT )) by ORDINAL1:def 12;
assume A4: (k divides a & k divides b);
then (( k1 ^2 ) divides ( a ^2 ) & ( k1 ^2 ) divides ( b ^2 )) by CKB20:1;
then ( k ^2 ) divides ( c ^2 ) by A2,NAT_D:8;
then k1 divides c by CKB20:1;
then (for n holds (n in X implies k1 divides n)) by A3,A4,ENUMSET1:def 1;
hence k = 1 by A1,CKB32:def 1;
end;
hence a,b are_relative_prime  by CKB1:def 1;
end;
assume (ex m st (ex n st ((m in X & n in X) & m,n are_relative_prime )));
then consider m,n such that A5: (m in X & n in X) and A6: m,n are_relative_prime ;
let k;
assume (for n holds (n in X implies k divides n));
then A7: (k divides m & k divides n) by A5;
( m gcd n ) = 1 by A6,INT_2:def 3;
then k divides 1 by A7,NAT_D:def 5;
hence thesis by WSIERP_1:15;
end;
end;
