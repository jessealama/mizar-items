environ
vocabularies NUMBERS,SUBSET_1,XREAL_0,ORDINAL1,SEQ_1,PARTFUN1,RELAT_1,TARSKI,SEQ_2,ORDINAL2,FUNCT_2,FUNCT_1,XBOOLE_0,XXREAL_0,NAT_1,ARYTM_3,CARD_1,COMPLEX1,ARYTM_1,REAL_1,RCOMP_1,XXREAL_1,VALUED_1,ORDINAL4,ZFMISC_1,VALUED_0,SEQ_4,XXREAL_2,SQUARE_1,SEQM_3,FCONT_1,JGRAPH_2;
notations TARSKI,XBOOLE_0,SUBSET_1,RELAT_1,ORDINAL1,ZFMISC_1,NUMBERS,XCMPLX_0,XXREAL_0,XREAL_0,COMPLEX1,REAL_1,NAT_1,FUNCT_1,RELSET_1,PARTFUN1,FUNCT_2,VALUED_0,VALUED_1,SEQ_1,SEQ_2,SEQ_4,SQUARE_1,PARTFUN2,RFUNCT_1,RCOMP_1,RECDEF_1,RFUNCT_2,CKB1,CKB14;
definitions TARSKI,XBOOLE_0,SQUARE_1,RELAT_1,FUNCT_1,VALUED_1,CKB1,CKB14;
theorems TARSKI,ZFMISC_1,NAT_1,FUNCT_1,FUNCT_2,ABSVALUE,SEQ_1,SEQ_2,SEQM_3,SEQ_4,PARTFUN1,XREAL_0,PARTFUN2,RFUNCT_1,RFUNCT_2,RCOMP_1,RELAT_1,RELSET_1,XBOOLE_0,XBOOLE_1,XCMPLX_0,XCMPLX_1,XREAL_1,COMPLEX1,XXREAL_0,ORDINAL1,VALUED_1,XXREAL_1,MEMBERED,XXREAL_2,VALUED_0,CKB1,CKB2,CKB3,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15;
schemes NAT_1,RECDEF_1,FUNCT_2;
registrations XBOOLE_0,ORDINAL1,RELSET_1,NUMBERS,XXREAL_0,XREAL_0,NAT_1,MEMBERED,RCOMP_1,RFUNCT_2,VALUED_0,VALUED_1,FUNCT_2,XXREAL_2,RELAT_1,RFUNCT_1,SEQ_2,FUNCT_1,ZFMISC_1;
constructors PARTFUN1,REAL_1,SQUARE_1,NAT_1,COMPLEX1,VALUED_1,SEQ_2,SEQM_3,SEQ_4,RCOMP_1,PARTFUN2,RFUNCT_1,RFUNCT_2,SEQ_1,RECDEF_1,RELSET_1,CKB1,CKB14;
requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve X for set;
reserve s for  real number;
reserve r for  real number;
reserve x0 for  real number;
reserve x1 for  real number;
reserve f for (PartFunc of ( REAL ),( REAL ));
theorem
Th15: (X c= ( dom f ) implies (( f | X ) is  continuous iff (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ( abs ( ( f . x1 ) - ( f . x0 ) ) ) < r)))))))))
proof
assume A1: X c= ( dom f );
thus (( f | X ) is  continuous implies (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ( abs ( ( f . x1 ) - ( f . x0 ) ) ) < r))))))))
proof
assume A2: ( f | X ) is  continuous;
let x0;
let r;
assume that
A3: x0 in X
and
A4: ( 0 ) < r;
x0 in ( dom ( f | X ) ) by A1,A3,RELAT_1:62;
then ( f | X ) is_continuous_in x0 by A2,CKB14:def 1;
then consider s such that A5: ( 0 ) < s and A6: (for x1 holds ((x1 in ( dom ( f | X ) ) & ( abs ( x1 - x0 ) ) < s) implies ( abs ( ( ( f | X ) . x1 ) - ( ( f | X ) . x0 ) ) ) < r)) by A4,CKB4:1;
take s;
thus ( 0 ) < s by A5;
let x1;
assume that
A7: x1 in X
and
A8: ( abs ( x1 - x0 ) ) < s;
A9: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by RELAT_1:61
.= X by A1,XBOOLE_1:28;
then ( abs ( ( f . x1 ) - ( f . x0 ) ) ) = ( abs ( ( ( f | X ) . x1 ) - ( f . x0 ) ) ) by A7,FUNCT_1:47
.= ( abs ( ( ( f | X ) . x1 ) - ( ( f | X ) . x0 ) ) ) by A3,A9,FUNCT_1:47;
hence thesis by A6,A9,A7,A8;
end;

assume A10: (for x0 holds (for r holds ((x0 in X & ( 0 ) < r) implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ( abs ( ( f . x1 ) - ( f . x0 ) ) ) < r)))))));
A11: ( dom ( f | X ) ) = ( ( dom f ) /\ X ) by RELAT_1:61
.= X by A1,XBOOLE_1:28;
now
let x0;
assume that
A12: x0 in ( dom ( f | X ) );
A13: x0 in X by A12,RELAT_1:57;
(for r holds (( 0 ) < r implies (ex s st (( 0 ) < s & (for x1 holds ((x1 in ( dom ( f | X ) ) & ( abs ( x1 - x0 ) ) < s) implies ( abs ( ( ( f | X ) . x1 ) - ( ( f | X ) . x0 ) ) ) < r))))))
proof
let r;
assume ( 0 ) < r;
then consider s such that A14: ( 0 ) < s and A15: (for x1 holds ((x1 in X & ( abs ( x1 - x0 ) ) < s) implies ( abs ( ( f . x1 ) - ( f . x0 ) ) ) < r)) by A10,A13;
take s;
thus ( 0 ) < s by A14;
let x1;
assume that
A16: x1 in ( dom ( f | X ) )
and
A17: ( abs ( x1 - x0 ) ) < s;
( abs ( ( ( f | X ) . x1 ) - ( ( f | X ) . x0 ) ) ) = ( abs ( ( ( f | X ) . x1 ) - ( f . x0 ) ) ) by A12,FUNCT_1:47
.= ( abs ( ( f . x1 ) - ( f . x0 ) ) ) by A16,FUNCT_1:47;
hence thesis by A11,A15,A16,A17;
end;
hence ( f | X ) is_continuous_in x0 by CKB4:1;
end;
hence thesis by CKB14:def 1;
end;
