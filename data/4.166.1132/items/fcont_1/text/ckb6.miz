requirements REAL,NUMERALS,SUBSET,BOOLE,ARITHM;
begin
reserve r for  real number;
reserve x0 for  real number;
reserve x1 for  real number;
reserve f for (PartFunc of ( REAL ),( REAL ));
theorem
Th5: (for f holds (for x0 holds (f is_continuous_in x0 iff (for N1 being (Neighbourhood of ( f . x0 )) holds (ex N being (Neighbourhood of x0) st ( f .: N ) c= N1)))))
proof
let f;
let x0;
thus (f is_continuous_in x0 implies (for N1 being (Neighbourhood of ( f . x0 )) holds (ex N being (Neighbourhood of x0) st ( f .: N ) c= N1)))
proof
assume A1: f is_continuous_in x0;
let N1 being (Neighbourhood of ( f . x0 ));
consider N being (Neighbourhood of x0) such that A2: (for x1 holds ((x1 in ( dom f ) & x1 in N) implies ( f . x1 ) in N1)) by A1,CKB5:1;
take N;
now
let r;
assume r in ( f .: N );
then (ex x being (Element of ( REAL )) st ((x in ( dom f ) & x in N) & r = ( f . x ))) by PARTFUN2:59;
hence r in N1 by A2;
end;
hence thesis by MEMBERED:def 9;
end;

assume A3: (for N1 being (Neighbourhood of ( f . x0 )) holds (ex N being (Neighbourhood of x0) st ( f .: N ) c= N1));
now
let N1 being (Neighbourhood of ( f . x0 ));
consider N being (Neighbourhood of x0) such that A4: ( f .: N ) c= N1 by A3;
take N;
let x1;
assume (x1 in ( dom f ) & x1 in N);
then ( f . x1 ) in ( f .: N ) by FUNCT_1:def 6;
hence ( f . x1 ) in N1 by A4;
end;
hence thesis by CKB5:1;
end;
