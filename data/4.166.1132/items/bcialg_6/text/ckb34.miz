reserve m for Nat;
definition
let X;
let x;
assume that
A1: x is  finite-period;
func ord x -> (Element of ( NAT )) means 
:Def5: ((( x |^ it ) in ( BCK-part X ) & it <> ( 0 )) & (for m being (Element of ( NAT )) holds ((( x |^ m ) in ( BCK-part X ) & m <> ( 0 )) implies it <= m)));
existence
proof
defpred P[ Nat ]
 means
(( x |^ $1 ) in ( BCK-part X ) & $1 <> ( 0 ));
(ex n being (Element of ( NAT )) st (n <> ( 0 ) & ( x |^ n ) in ( BCK-part X ))) by A1,CKB32:def 1;
then A2: (ex n being Nat st P[ n ]);
consider k being Nat such that A3: P[ k ] and A4: (for n being Nat holds (P[ n ] implies k <= n)) from NAT_1:sch 5(A2);
reconsider k as (Element of ( NAT )) by ORDINAL1:def 12;
take k;
thus (( x |^ k ) in ( BCK-part X ) & k <> ( 0 )) by A3;
let m being (Element of ( NAT ));
assume (( x |^ m ) in ( BCK-part X ) & m <> ( 0 ));
hence thesis by A4;
end;
uniqueness
proof
let n1 being (Element of ( NAT ));
let n2 being (Element of ( NAT ));
assume ((((( x |^ n1 ) in ( BCK-part X ) & n1 <> ( 0 )) & (for m being (Element of ( NAT )) holds ((( x |^ m ) in ( BCK-part X ) & m <> ( 0 )) implies n1 <= m))) & ( x |^ n2 ) in ( BCK-part X )) & (n2 <> ( 0 ) & (for m being (Element of ( NAT )) holds ((( x |^ m ) in ( BCK-part X ) & m <> ( 0 )) implies n2 <= m))));
then (n1 <= n2 & n2 <= n1);
hence thesis by XXREAL_0:1;
end;
