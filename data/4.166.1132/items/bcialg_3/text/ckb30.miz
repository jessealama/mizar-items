environ
vocabularies XBOOLE_0,BCIALG_1,BINOP_1,SUBSET_1,XXREAL_0,SUPINF_2,XXREAL_2,CARD_FIL,BCIALG_3;
notations XBOOLE_0,SUBSET_1,STRUCT_0,BCIALG_1,CKB1,CKB15,CKB16,CKB17,CKB18;
definitions BCIALG_1,CKB1,CKB15,CKB16,CKB17,CKB18;
theorems BCIALG_1,STRUCT_0,CKB1,CKB4,CKB5,CKB6,CKB7,CKB8,CKB9,CKB10,CKB11,CKB12,CKB13,CKB14,CKB15,CKB16,CKB17,CKB18,CKB21,CKB22,CKB23,CKB24,CKB25,CKB26,CKB27,CKB28,CKB29;
registrations STRUCT_0,BCIALG_1,CKB2,CKB3,CKB19,CKB20;
constructors BCIALG_1,CKB1,CKB15,CKB16,CKB17,CKB18;
requirements SUBSET;
begin
theorem
(for X being BCI-algebra holds (X is  BCI-commutative iff (for x,y,z being (Element of X) holds ((x <= y & x <= z) implies x <= ( y \ ( y \ z ) )))))
proof
let X being BCI-algebra;
thus (X is  BCI-commutative implies (for x,y,z being (Element of X) holds ((x <= y & x <= z) implies x <= ( y \ ( y \ z ) ))))
proof
assume A1: X is  BCI-commutative;
(for x,y,z being (Element of X) holds ((x <= y & x <= z) implies x <= ( y \ ( y \ z ) )))
proof
let x being (Element of X),y being (Element of X),z being (Element of X);
assume that
A2: x <= y
and
A3: x <= z;
A4: ( x \ z ) = ( 0. X ) by A3,BCIALG_1:def 11;
( x \ y ) = ( 0. X ) by A2,BCIALG_1:def 11;
then A5: x = ( y \ ( y \ x ) ) by A1,CKB17:def 1;
then ( x \ ( y \ ( y \ z ) ) ) = ( ( y \ ( y \ ( y \ z ) ) ) \ ( y \ x ) ) by BCIALG_1:7
.= ( ( y \ z ) \ ( y \ x ) ) by BCIALG_1:8
.= ( 0. X ) by A4,A5,BCIALG_1:7;
hence thesis by BCIALG_1:def 11;
end;
hence thesis;
end;

assume A6: (for x,y,z being (Element of X) holds ((x <= y & x <= z) implies x <= ( y \ ( y \ z ) )));
(for x,y being (Element of X) holds (( x \ y ) = ( 0. X ) implies x = ( y \ ( y \ x ) )))
proof
let x being (Element of X),y being (Element of X);
( x \ x ) = ( 0. X ) by BCIALG_1:def 5;
then A7: x <= x by BCIALG_1:def 11;
assume ( x \ y ) = ( 0. X );
then x <= y by BCIALG_1:def 11;
then x <= ( y \ ( y \ x ) ) by A6,A7;
then A8: ( x \ ( y \ ( y \ x ) ) ) = ( 0. X ) by BCIALG_1:def 11;
( ( y \ ( y \ x ) ) \ x ) = ( ( y \ x ) \ ( y \ x ) ) by BCIALG_1:7
.= ( 0. X ) by BCIALG_1:def 5;
hence thesis by A8,BCIALG_1:def 7;
end;
hence thesis by CKB17:def 1;
end;
