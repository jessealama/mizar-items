environ
vocabularies XBOOLE_0,BCIALG_1,BINOP_1,SUBSET_1,XXREAL_0,SUPINF_2,XXREAL_2,CARD_FIL,BCIALG_3;
notations XBOOLE_0,SUBSET_1,STRUCT_0,BCIALG_1,CKB1;
definitions BCIALG_1,CKB1;
theorems BCIALG_1,STRUCT_0,CKB1,CKB4,CKB5,CKB6,CKB7;
registrations STRUCT_0,BCIALG_1,CKB2,CKB3;
constructors BCIALG_1,CKB1;
requirements SUBSET;
begin
reserve X for BCK-algebra;
theorem
Th5: (X is  commutative  commutative BCK-algebra iff (for x,y being (Element of X) holds (x <= y implies x = ( y \ ( y \ x ) ))))
proof
thus (X is  commutative  commutative BCK-algebra implies (for x,y being (Element of X) holds (x <= y implies x = ( y \ ( y \ x ) ))))
proof
assume A1: X is  commutative  commutative BCK-algebra;
let x being (Element of X),y being (Element of X);
assume x <= y;
then ( x \ y ) = ( 0. X ) by BCIALG_1:def 11;
then ( y \ ( y \ x ) ) = ( x \ ( 0. X ) ) by A1,CKB1:def 1
.= x by BCIALG_1:2;
hence thesis;
end;

assume A2: (for x,y being (Element of X) holds (x <= y implies x = ( y \ ( y \ x ) )));
(for x,y being (Element of X) holds ( x \ ( x \ y ) ) <= ( y \ ( y \ x ) ))
proof
let x being (Element of X),y being (Element of X);
( ( x \ ( x \ y ) ) \ x ) = ( ( x \ x ) \ ( x \ y ) ) by BCIALG_1:7
.= ( ( x \ y ) ` ) by BCIALG_1:def 5
.= ( 0. X ) by BCIALG_1:def 8;
then ( x \ ( x \ y ) ) <= x by BCIALG_1:def 11;
then A3: ( y \ x ) <= ( y \ ( x \ ( x \ y ) ) ) by BCIALG_1:5;
( ( x \ ( x \ y ) ) \ y ) = ( ( x \ y ) \ ( x \ y ) ) by BCIALG_1:7
.= ( 0. X ) by BCIALG_1:def 5;
then ( x \ ( x \ y ) ) <= y by BCIALG_1:def 11;
then ( x \ ( x \ y ) ) = ( y \ ( y \ ( x \ ( x \ y ) ) ) ) by A2;
hence thesis by A3,BCIALG_1:5;
end;
hence thesis by CKB4:1;
end;
