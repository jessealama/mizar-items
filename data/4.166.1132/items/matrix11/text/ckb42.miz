begin
reserve i for Nat;
reserve j for Nat;
reserve l for Nat;
reserve n for Nat;
reserve m for Nat;
reserve D for non  empty set;
reserve pD for (FinSequence of D);
reserve M for (Matrix of n,m,D);
theorem
Th28: (for l holds (for M holds (for pD holds (for i holds (i in ( Seg n ) implies (((i = l & ( len pD ) = ( width M )) implies ( Line (( RLine (M,l,pD) ),i) ) = pD) & (i <> l implies ( Line (( RLine (M,l,pD) ),i) ) = ( Line (M,i) ))))))))
proof
let l;
let M;
let pD;
let i;
assume that
A1: i in ( Seg n );
set R = ( RLine (M,l,pD) );
set LR = ( Line (R,i) );
thus ((i = l & ( len pD ) = ( width M )) implies LR = pD)
proof
assume that
A2: i = l
and
A3: ( len pD ) = ( width M );
A4: ( width R ) = ( len pD ) by A3,CKB39:def 1;
A5:now
let j being Nat;
assume that
A6: 1 <= j
and
A7: j <= ( len pD );
j in ( NAT ) by ORDINAL1:def 12;
then A8: j in ( Seg ( width R ) ) by A4,A6,A7;
n = ( len R ) by MATRIX_1:def 2;
then i in ( dom R ) by A1,FINSEQ_1:def 3;
then A9: [ i,j ] in ( Indices R ) by A8,ZFMISC_1:87;
A10: ( Indices R ) = ( Indices M ) by CKB41:1;
( LR . j ) = ( R * (i,j) ) by A8,MATRIX_1:def 7;
hence ( LR . j ) = ( pD . j ) by A2,A3,A9,A10,CKB39:def 1;
end;
( len LR ) = ( len pD ) by A4,MATRIX_1:def 7;
hence thesis by A5,FINSEQ_1:14;
end;

set LM = ( Line (M,i) );
A11: ( width M ) = ( len LM ) by MATRIX_1:def 7;
A12: ( width M ) = ( width R ) by CKB41:1;
assume A13: i <> l;
A14:now
let j being Nat;
assume that
A15: 1 <= j
and
A16: j <= ( len LM );
j in ( NAT ) by ORDINAL1:def 12;
then A17: j in ( Seg ( len LM ) ) by A15,A16;
then A18: ( LM . j ) = ( M * (i,j) ) by A11,MATRIX_1:def 7;
i in ( Seg ( len M ) ) by A1,MATRIX_1:def 2;
then i in ( dom M ) by FINSEQ_1:def 3;
then A19: [ i,j ] in ( Indices M ) by A11,A17,ZFMISC_1:87;
A20: ( LR . j ) = ( R * (i,j) ) by A12,A11,A17,MATRIX_1:def 7;
now
per cases ;
case ( len pD ) = ( width M );
hence ( LM . j ) = ( LR . j ) by A13,A18,A20,A19,CKB39:def 1;
end;
case ( len pD ) <> ( width M );
hence ( LM . j ) = ( LR . j ) by CKB39:def 1;
end;
end;
hence ( LM . j ) = ( LR . j );
end;
( len LR ) = ( width R ) by MATRIX_1:def 7;
hence thesis by A12,A11,A14,FINSEQ_1:14;
end;
