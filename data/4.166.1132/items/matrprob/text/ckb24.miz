requirements REAL,NUMERALS,BOOLE,SUBSET,ARITHM;
begin
reserve i for (Element of ( NAT ));
reserve j for (Element of ( NAT ));
reserve r for Real;
theorem
Lm3: (for m being (Matrix of ( REAL )) holds ((for i holds (for j holds ([ i,j ] in ( Indices m ) implies ( m * (i,j) ) >= r))) iff (for i holds (for j holds ((j in ( Seg ( width m ) ) & i in ( dom ( Col (m,j) ) )) implies ( ( Col (m,j) ) . i ) >= r)))))
proof
let m being (Matrix of ( REAL ));
hereby
assume A1: (for i holds (for j holds ([ i,j ] in ( Indices m ) implies ( m * (i,j) ) >= r)));
hereby
let i;
let j;
assume that
A2: j in ( Seg ( width m ) )
and
A3: i in ( dom ( Col (m,j) ) );
j in ( Seg ( len ( Line (m,i) ) ) ) by A2,MATRIX_1:def 7;
then A4: j in ( dom ( Line (m,i) ) ) by FINSEQ_1:def 3;
then [ i,j ] in ( Indices m ) by A3,CKB17:1;
then A5: i in ( dom m ) by CKB15:1;
then ( ( Line (m,i) ) . j ) >= r by A1,A4,CKB23:1;
hence ( ( Col (m,j) ) . i ) >= r by A2,A5,GOBOARD1:2;
end;
end;
assume A6: (for i holds (for j holds ((j in ( Seg ( width m ) ) & i in ( dom ( Col (m,j) ) )) implies ( ( Col (m,j) ) . i ) >= r)));
(for i holds (for j holds ((i in ( dom m ) & j in ( dom ( Line (m,i) ) )) implies ( ( Line (m,i) ) . j ) >= r)))
proof
let i;
let j;
assume that
A7: i in ( dom m )
and
A8: j in ( dom ( Line (m,i) ) );
j in ( Seg ( len ( Line (m,i) ) ) ) by A8,FINSEQ_1:def 3;
then A9: j in ( Seg ( width m ) ) by MATRIX_1:def 7;
i in ( Seg ( len m ) ) by A7,FINSEQ_1:def 3;
then i in ( Seg ( len ( Col (m,j) ) ) ) by MATRIX_1:def 8;
then i in ( dom ( Col (m,j) ) ) by FINSEQ_1:def 3;
then ( ( Col (m,j) ) . i ) >= r by A6,A9;
hence thesis by A7,A9,GOBOARD1:2;
end;
hence thesis by CKB23:1;
end;
