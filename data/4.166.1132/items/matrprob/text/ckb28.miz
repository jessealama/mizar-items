begin
reserve j for (Element of ( NAT ));
reserve m for Nat;
reserve e for (FinSequence of ( REAL ));
definition
let m being (Matrix of ( REAL ));
func ColSum m -> (FinSequence of ( REAL )) means 
:Def2: (( len it ) = ( width m ) & (for j being Nat holds (j in ( Seg ( width m ) ) implies ( it . j ) = ( Sum ( Col (m,j) ) ))));
existence
proof
deffunc f(Nat) = ( Sum ( Col (m,$1) ) );
consider e being (FinSequence of ( REAL )) such that A1: (( len e ) = ( width m ) & (for k being Nat holds (k in ( dom e ) implies ( e . k ) = f(k)))) from FINSEQ_2:sch 1;
( dom e ) = ( Seg ( width m ) ) by A1,FINSEQ_1:def 3;
hence thesis by A1;
end;
uniqueness
proof
let p1 being (FinSequence of ( REAL ));
let p2 being (FinSequence of ( REAL ));
assume that
A2: ( len p1 ) = ( width m )
and
A3: (for i being Nat holds (i in ( Seg ( width m ) ) implies ( p1 . i ) = ( Sum ( Col (m,i) ) )))
and
A4: ( len p2 ) = ( width m )
and
A5: (for i being Nat holds (i in ( Seg ( width m ) ) implies ( p2 . i ) = ( Sum ( Col (m,i) ) )));
A6: ( dom p1 ) = ( Seg ( width m ) ) by A2,FINSEQ_1:def 3;
(for j being Nat holds (j in ( dom p1 ) implies ( p1 . j ) = ( p2 . j )))
proof
let j being Nat;
assume A7: j in ( dom p1 );
then ( p1 . j ) = ( Sum ( Col (m,j) ) ) by A3,A6;
hence thesis by A5,A6,A7;
end;
hence thesis by A2,A4,FINSEQ_2:9;
end;
end;
