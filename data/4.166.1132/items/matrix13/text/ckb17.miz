reserve n for Nat;
reserve K for Field;
reserve M for (Matrix of n,K);
definition
let D being non  empty set;
let M being (Matrix of D);
let n;
let m;
let nt being (Element of ( n -tuples_on ( NAT ) ));
let mt being (Element of ( m -tuples_on ( NAT ) ));
func Segm (M,nt,mt) -> (Matrix of n,m,D) means 
:Def1: (for i,j being Nat holds ([ i,j ] in ( Indices it ) implies ( it * (i,j) ) = ( M * (( nt . i ),( mt . j )) )));
existence
proof
reconsider m9 = m,n9 = n as (Element of ( NAT )) by ORDINAL1:def 12;
deffunc s(set,set) = ( M * (( nt . $1 ),( mt . $2 )) );
(ex S being (Matrix of n9,m9,D) st (for i,j being Nat holds ([ i,j ] in ( Indices S ) implies ( S * (i,j) ) = s(i,j)))) from MATRIX_1:sch 1;
then consider S being (Matrix of n9,m9,D) such that A1: (for i,j being Nat holds ([ i,j ] in ( Indices S ) implies ( S * (i,j) ) = s(i,j)));
reconsider S as (Matrix of n,m,D);
take S;
thus thesis by A1;
end;
uniqueness
proof
let S1 being (Matrix of n,m,D);
let S2 being (Matrix of n,m,D);
assume that
A2: (for i holds (for j holds ([ i,j ] in ( Indices S1 ) implies ( S1 * (i,j) ) = ( M * (( nt . i ),( mt . j )) ))))
and
A3: (for i holds (for j holds ([ i,j ] in ( Indices S2 ) implies ( S2 * (i,j) ) = ( M * (( nt . i ),( mt . j )) ))));
now
let i;
let j;
assume that
A4: [ i,j ] in ( Indices S1 );
A5: [ i,j ] in ( Indices S2 ) by A4,MATRIX_1:26;
reconsider i9 = i,j9 = j as (Element of ( NAT )) by ORDINAL1:def 12;
( S1 * (i,j) ) = ( M * (( nt . i9 ),( mt . j9 )) ) by A2,A4;
hence ( S1 * (i,j) ) = ( S2 * (i,j) ) by A3,A5;
end;
hence thesis by MATRIX_1:27;
end;
end;
