let X being non  empty TopSpace;
let f1 being (Function of X,( R^1 ));
let f2 being (Function of X,( R^1 ));
assume ((f1 is  continuous & f2 is  continuous) & (for q being (Point of X) holds ( f2 . q ) <> ( 0 )));
