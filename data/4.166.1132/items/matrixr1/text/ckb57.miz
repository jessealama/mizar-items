definition
let x being (FinSequence of ( REAL ));
func LineVec2Mx x -> (Matrix of ( REAL ))
means
:Def10: ((( width it ) = ( len x ) & ( len it ) = 1) & (for j holds (j in ( dom x ) implies ( it * (1,j) ) = ( x . j ))));
existence
proof
set B = <* x *>;
A1: ( rng B ) = { x } by FINSEQ_1:39;
(for y being set holds (y in ( rng B ) implies (ex p being (FinSequence of ( REAL )) st (y = p & ( len p ) = ( len x )))))
proof
let y being set;
assume y in ( rng B );
then y = x by A1,TARSKI:def 1;
hence thesis;
end;
then reconsider C = B as (Matrix of ( REAL )) by MATRIX_1:9;
take C;
A2: ( len B ) = 1 by FINSEQ_1:39;
then ( dom C ) = ( Seg 1 ) by FINSEQ_1:def 3;
then A3: 1 in ( dom C ) by FINSEQ_1:1;
(for p being (FinSequence of ( REAL )) holds (p in ( rng C ) implies ( len p ) = ( len x ))) by A1,TARSKI:def 1;
then (( len B ) = 1 & C is (Matrix of 1,( len x ),( REAL ))) by A2,MATRIX_1:def 2;
hence A4: ( width C ) = ( len x ) by MATRIX_1:20;
thus ( len C ) = 1 by FINSEQ_1:40;
let j being Nat;
assume j in ( dom x );
then j in ( Seg ( len x ) ) by FINSEQ_1:def 3;
then (( B . 1 ) = x & [ 1,j ] in ( Indices C )) by A4,A3,FINSEQ_1:40,ZFMISC_1:def 2;
hence thesis by MATRIX_1:def 5;
end;
uniqueness
proof
let A being (Matrix of ( REAL )),B being (Matrix of ( REAL ));
assume that
A5: ( width A ) = ( len x )
and
A6: ( len A ) = 1
and
A7: (for k being Nat holds (k in ( dom x ) implies ( A * (1,k) ) = ( x . k )))
and
A8: (( width B ) = ( len x ) & ( len B ) = 1)
and
A9: (for k being Nat holds (k in ( dom x ) implies ( B * (1,k) ) = ( x . k )));
A10: ( dom A ) = ( Seg 1 ) by A6,FINSEQ_1:def 3;
(for i holds (for j holds ([ i,j ] in ( Indices A ) implies ( A * (i,j) ) = ( B * (i,j) ))))
proof
let i;
let j;
assume A11: [ i,j ] in ( Indices A );
then i in ( Seg 1 ) by A10,ZFMISC_1:87;
then (1 <= i & i <= 1) by FINSEQ_1:1;
then A12: i = 1 by XXREAL_0:1;
j in ( Seg ( len x ) ) by A5,A11,ZFMISC_1:87;
then A13: j in ( dom x ) by FINSEQ_1:def 3;
then ( A * (i,j) ) = ( x . j ) by A7,A12;
hence thesis by A9,A13,A12;
end;
hence thesis by A5,A6,A8,MATRIX_1:21;
end;
